@model StudentManagementSystem.Services.ClassAttendanceReport
@{
    ViewData["Title"] = "Weekly Attendance Report";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/attendance.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js">

<div class="container py-5">
    <div class="attendance-container">
        <div class="attendance-header">
            <h1 class="attendance-title">Weekly Attendance Report</h1>
            <div>
                <span class="badge badge-primary">@Model.Date.ToString("MMMM dd, yyyy") - @Model.EndDate?.ToString("MMMM dd, yyyy")</span>
                <span class="badge badge-secondary ml-2">@Model.ClassName</span>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Weekly Trend</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container" style="height: 400px;">
                            <canvas id="weeklyTrendChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Attendance Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="attendanceChart"></canvas>
                        </div>
                        <div class="text-center mt-3">
                            <h3>@Model.AttendancePercentage.ToString("0.00")%</h3>
                            <p class="text-muted">Overall Attendance Rate</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value">@Model.TotalStudents</div>
                                <div class="stat-label">Total Students</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value text-success">@Model.PresentStudents</div>
                                <div class="stat-label">Present Days</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value text-danger">@Model.AbsentStudents</div>
                                <div class="stat-label">Absent Days</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">@((Model.EndDate - Model.Date)?.Days + 1)</div>
                                <div class="stat-label">Days Tracked</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Student Attendance Summary</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="students-table">
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th>Code</th>
                                <th>Present Days</th>
                                <th>Absent Days</th>
                                <th>Attendance Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.StudentDetails.OrderByDescending(s => s.AttendancePercentage))
                            {
                                <tr>
                                    <td>@student.StudentName</td>
                                    <td>@student.StudentCode</td>
                                    <td>@student.PresentDaysCount</td>
                                    <td>@student.AbsentDaysCount</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar
                                                    @(student.AttendancePercentage >= 90 ? "bg-success" :
                                                                                                   student.AttendancePercentage >= 70 ? "bg-info" :
                                                                                                   student.AttendancePercentage >= 50 ? "bg-warning" : "bg-danger")"
                                             role="progressbar"
                                             style="width: @student.AttendancePercentage%"
                                             aria-valuenow="@student.AttendancePercentage"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @student.AttendancePercentage.ToString("0.00")%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                                                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <button class="btn btn-success" onclick="window.print()">
                <i class="fas fa-print"></i> Print Report
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Weekly trend chart
            const weeklyCtx = document.getElementById('weeklyTrendChart').getContext('2d');
            const weeklyTrendChart = new Chart(weeklyCtx, {
                type: 'line',
                data: {
                    labels: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
                    datasets: [{
                        label: 'Attendance Percentage',
                        data: [0, 85, 92, 88, 90, 0, 0], // Replace with actual data
                        backgroundColor: 'rgba(253, 126, 20, 0.2)',
                        borderColor: 'rgba(253, 126, 20, 1)',
                        borderWidth: 2,
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            rtl: true
                        }
                    }
                }
            });

            // Attendance chart
            const ctx = document.getElementById('attendanceChart').getContext('2d');
            const attendanceChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Present Days', 'Absent Days'],
                    datasets: [{
                        data: [@Model.PresentStudents, @Model.AbsentStudents],
                        backgroundColor: [
                            '#28a745',
                            '#dc3545'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutoutPercentage: 70,
                    legend: {
                        position: 'bottom',
                        rtl: true
                    },
                    animation: {
                        animateScale: true,
                        animateRotate: true
                    }
                }
            });
        });
    </script>
}