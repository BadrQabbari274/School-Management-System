@model List<StudentManagementSystem.Models.Classes>

@{
    ViewData["Title"] = "إدارة الغياب";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">إدارة الغياب</h1>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        @foreach (var classItem in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    @classItem.Name
                                </div>
                                <div class="text-xs text-gray-600 mb-2">
                                    @if (classItem.Field != null)
                                    {
                                        <span>المجال: @classItem.Field.Name</span>
                                    }
                                </div>
                                <div class="text-xs text-gray-600 mb-3">
                                    عدد الطلاب: @classItem.Students?.Count() طالب
                                </div>

                                <div class="btn-group-vertical w-100" role="group">
                                    <a href="@Url.Action("RegularAttendance", new { classId = classItem.Id })"
                                       class="btn btn-primary btn-sm mb-1">
                                        <i class="fas fa-calendar-check"></i> الغياب العادي
                                    </a>
                                    <a href="@Url.Action("FieldAttendance", new { classId = classItem.Id })"
                                       class="btn btn-success btn-sm mb-1">
                                        <i class="fas fa-industry"></i> الغياب الميداني
                                    </a>
                                    <a href="@Url.Action("ExitRequest", new { classId = classItem.Id })"
                                       class="btn btn-warning btn-sm mb-1">
                                        <i class="fas fa-sign-out-alt"></i> إذن الخروج
                                    </a>
                                    <a href="@Url.Action("ViewAttendance", new { classId = classItem.Id })"
                                       class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> عرض الغياب
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">لا توجد فصول!</h4>
            <p>لا توجد فصول متاحة حالياً. يرجى إضافة فصول أولاً.</p>
        </div>
    }
</div>


