@model List<StudentManagementSystem.ViewModels.ClassWithStudents>

@{
    ViewData["Title"] = "ترقية الطلاب";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
            margin: 0;
            padding: 0;
        }

        .header-section {
            color: black;
            padding: 25px 0;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            position: relative;
        }

        .header-title {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            text-align: center;
            letter-spacing: 1px;
        }

        .back-button {
            position: absolute;
            right: 25px;
            top: 50%;
            transform: translateY(-50%);
            background: linear-gradient(135deg, #ff8a50, #ff6f3f);
            border: none;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .back-button:hover {
                background: linear-gradient(135deg, #ff6f3f, #e05e3a);
                color: white;
                transform: translateY(-50%) scale(1.05);
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border: none;
            overflow: hidden;
            margin-bottom: 30px;
        }

        .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 25px 30px;
            border-bottom: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 15px 15px 0 0;
        }

        .card-title {
            font-size: 26px;
            font-weight: bold;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-body {
            padding: 30px;
        }

        .filter-card .card-header {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .promotion-card .card-header {
            background: linear-gradient(135deg, #ff8a50, #ff6f3f);
        }

        .filter-row {
            display: flex;
            gap: 20px;
            align-items: end;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .filter-group {
            flex: 1;
            min-width: 200px;
        }

            .filter-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: #333;
            }

            .filter-group select,
            .filter-group input {
                width: 100%;
                padding: 10px 15px;
                border: 2px solid #e9ecef;
                border-radius: 8px;
                font-size: 14px;
                transition: border-color 0.3s ease;
            }

                .filter-group select:focus,
                .filter-group input:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0056b3, #004085);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 123, 255, 0.3);
            }

        .btn-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }

            .btn-success:hover {
                background: linear-gradient(135deg, #20c997, #17a085);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
            }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #e0a800);
            color: #333;
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #e0a800, #c69500);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255, 193, 7, 0.3);
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
        }

            .btn-danger:hover {
                background: linear-gradient(135deg, #c82333, #a71e2a);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th,
            .table td {
                padding: 15px;
                text-align: center;
                border-bottom: 1px solid #eee;
                vertical-align: middle;
            }

            .table th {
                background-color: #f8f9fa;
                font-weight: bold;
                color: #555;
                font-size: 15px;
                position: sticky;
                top: 0;
            }

            .table tbody tr:hover {
                background-color: #f5f5f5;
            }

        .student-checkbox {
            transform: scale(1.2);
            margin: 0;
        }

        .student-name {
            font-weight: 600;
            color: #333;
        }

        .student-code {
            font-family: 'Courier New', monospace;
            font-weight: bold;
            color: #007bff;
        }

        .badge {
            padding: 6px 12px;
            font-size: 12px;
            font-weight: 600;
            border-radius: 20px;
            display: inline-block;
        }

        .badge-commerce {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .badge-programming {
            background-color: #f3e5f5;
            color: #7b1fa2;
        }

        .badge-active {
            background-color: #d4edda;
            color: #155724;
        }

        .badge-inactive {
            background-color: #f8d7da;
            color: #721c24;
        }

        .promotion-section {
            background-color: #f8f9fa;
            padding: 25px;
            border-radius: 10px;
            margin-top: 20px;
            border: 2px dashed #dee2e6;
        }

        .promotion-controls {
            display: flex;
            gap: 20px;
            align-items: end;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .promotion-group {
            flex: 1;
            min-width: 200px;
        }

        .selected-count {
            background: linear-gradient(135deg, #17a2b8, #138496);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .select-all-section {
            background-color: #e9ecef;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .select-all-checkbox {
            transform: scale(1.3);
        }

        .select-all-label {
            font-weight: 600;
            color: #495057;
            margin: 0;
        }

        @@media (max-width: 768px) {
            .header-title {
                font-size: 24px;
            }

            .back-button {
                padding: 8px 12px;
                font-size: 14px;
                gap: 5px;
                right: 15px;
            }

            .filter-row,
            .promotion-controls {
                flex-direction: column;
            }

            .filter-group,
            .promotion-group {
                width: 100%;
                min-width: auto;
            }

            .table-responsive {
                overflow-x: auto;
            }

            .table th,
            .table td {
                padding: 10px;
                font-size: 13px;
            }

            .card-header {
                flex-direction: column;
                align-items: flex-start;
                text-align: center;
            }

            .card-title {
                font-size: 20px;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container position-relative">
            <h1 class="header-title">ترقية الطلاب</h1>
            <a href="@Url.Action("Index", "Classes")" class="back-button">
                <i class="fas fa-arrow-right"></i> العودة للقائمة
            </a>
        </div>
    </div>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <!-- Filter Card -->
        <div class="card filter-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-filter"></i> فلترة الطلاب
                </h3>
            </div>
            <div class="card-body">
                <div class="filter-row">
                    <div class="filter-group">
                        <label for="departmentFilter">القسم</label>
                        <select id="departmentFilter" class="form-select">
                            <option value="">جميع الأقسام</option>
                            @if (Model != null)
                            {
                                @foreach (var dept in Model.Select(m => m.classes.Name.Contains("تجارة") ? "تجارة" :
                               m.classes.Name.Contains("برمجة") ? "برمجة" : "أخرى").Distinct())
                                {
                                    <option value="@dept">@dept</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="filter-group">
                        <label for="classFilter">الفصل الحالي</label>
                        <select id="classFilter" class="form-select">
                            <option value="">جميع الفصول</option>
                            @if (Model != null)
                            {
                                @foreach (var classWithStudents in Model)
                                {
                                    <option value="@classWithStudents.classes.Id">@classWithStudents.classes.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="filter-group">
                        <button type="button" class="btn btn-primary" onclick="filterStudents()">
                            <i class="fas fa-search"></i> بحث
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Students List Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users"></i> قائمة الطلاب
                </h3>
            </div>
            <div class="card-body">
                <div class="select-all-section">
                    <input type="checkbox" id="selectAll" class="select-all-checkbox" onchange="toggleSelectAll()">
                    <label for="selectAll" class="select-all-label">تحديد الكل</label>
                    <span id="selectedCount" class="badge badge-info">0 طالب محدد</span>
                </div>

                <div class="table-responsive">
                    <table class="table" id="studentsTable">
                        <thead>
                            <tr>
                                <th>اختيار</th>
                                <th>كود الطالب</th>
                                <th>اسم الطالب</th>
                                <th>البريد الإلكتروني</th>
                                <th>الفصل الحالي</th>
                                <th>الحالة</th>
                                <th>تاريخ التسجيل</th>
                            </tr>
                        </thead>
                        <tbody id="studentsTableBody">
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var classWithStudents in Model)
                                {
                                    @if (classWithStudents.students != null && classWithStudents.students.Any())
                                    {
                                        @foreach (var student in classWithStudents.students)
                                        {
                                            <tr data-department="@(classWithStudents.classes.Name.Contains("تجارة") ? "تجارة" : classWithStudents.classes.Name.Contains("برمجة") ? "برمجة" : "أخرى")"
                                                data-class="@classWithStudents.classes.Id">
                                                <td>
                                                    <input type="checkbox" class="student-checkbox" value="@student.Id"
                                                           data-class-id="@classWithStudents.classes.Id"
                                                           onchange="updateSelectedStudents()" id="student_@student.Id">
                                                </td>
                                                <td class="student-code">@(student.Code ?? "غير محدد")</td>
                                                <td class="student-name">@student.Name</td>
                                                <td>@student.Email</td>
                                                <td>@classWithStudents.classes.Name</td>
                                                <td>
                                                    @if (student.IsActive)
                                                    {
                                                        <span class="badge badge-active">نشط</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-inactive">غير نشط</span>
                                                    }
                                                </td>
                                                <td>@student.Date.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info" id="noStudentsAlert" style="display: none;">
                    <i class="fas fa-info-circle"></i>
                    <div>
                        <strong>لا يوجد طلاب</strong>
                        <p>لم يتم العثور على طلاب يطابقون معايير البحث المحددة.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Promotion Card -->
        <div class="card promotion-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-arrow-up"></i> ترقية الطلاب المحددين
                </h3>
            </div>
            <div class="card-body">
                <div class="selected-count" id="promotionSelectedCount">
                    لم يتم تحديد أي طالب للترقية
                </div>

                <form method="post" action="@Url.Action("PromoteStudents")" id="promotionForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="selectedStudentIds" name="studentIds" />

                    <div class="promotion-controls">
                        <div class="promotion-group">
                            <label for="targetSection">السكشن</label>
                            <select id="targetSection" name="targetSection" class="form-select" required>
                                <option value="">اختر السكشن</option>
                                <option value="A">سكشن A</option>
                                <option value="B">سكشن B</option>
                                <option value="C">سكشن C</option>
                            </select>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg" id="promoteBtn" disabled
                                onclick="return confirmPromotion()">
                            <i class="fas fa-arrow-up"></i> ترقية الطلاب المحددين
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedStudents = [];

        function filterStudents() {
            const department = document.getElementById('departmentFilter').value;
            const classFilter = document.getElementById('classFilter').value;
            const rows = document.querySelectorAll('#studentsTableBody tr');
            const noStudentsAlert = document.getElementById('noStudentsAlert');
            let visibleCount = 0;

            rows.forEach(row => {
                let show = true;

                if (department && row.getAttribute('data-department') !== department) {
                    show = false;
                }

                if (classFilter && row.getAttribute('data-class') !== classFilter) {
                    show = false;
                }

                if (show) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                    // Uncheck hidden checkboxes
                    const checkbox = row.querySelector('.student-checkbox');
                    if (checkbox && checkbox.checked) {
                        checkbox.checked = false;
                    }
                }
            });

            // Show/hide no students alert
            if (visibleCount === 0) {
                noStudentsAlert.style.display = 'block';
            } else {
                noStudentsAlert.style.display = 'none';
            }

            // Update selected students and counts
            updateSelectedStudents();
        }

        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAll');
            const visibleCheckboxes = document.querySelectorAll('#studentsTableBody tr:not([style*="display: none"]) .student-checkbox');

            visibleCheckboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });

            updateSelectedStudents();
        }

        function updateSelectedStudents() {
            const checkboxes = document.querySelectorAll('.student-checkbox:checked');
            selectedStudents = Array.from(checkboxes).map(cb => ({
                id: parseInt(cb.value),
                classId: parseInt(cb.getAttribute('data-class-id'))
            }));

            updateSelectedCount();
            updatePromotionSection();

            // Update select all checkbox
            const visibleCheckboxes = document.querySelectorAll('#studentsTableBody tr:not([style*="display: none"]) .student-checkbox');
            const visibleCheckedBoxes = document.querySelectorAll('#studentsTableBody tr:not([style*="display: none"]) .student-checkbox:checked');
            const selectAll = document.getElementById('selectAll');
            selectAll.checked = visibleCheckboxes.length > 0 && visibleCheckedBoxes.length === visibleCheckboxes.length;
        }

        function updateSelectedCount() {
            const count = selectedStudents.length;
            document.getElementById('selectedCount').textContent = `${count} طالب محدد`;
        }

        function updatePromotionSection() {
            const count = selectedStudents.length;
            const promotionCount = document.getElementById('promotionSelectedCount');
            const promoteBtn = document.getElementById('promoteBtn');

            if (count === 0) {
                promotionCount.textContent = 'لم يتم تحديد أي طالب للترقية';
                promoteBtn.disabled = true;
            } else {
                promotionCount.textContent = `تم تحديد ${count} طالب للترقية`;
                promoteBtn.disabled = false;
            }

            // Update hidden input with selected student IDs
            document.getElementById('selectedStudentIds').value = selectedStudents.map(s => s.id).join(',');
        }

        function confirmPromotion() {
            if (!document.getElementById('targetSection').value) {
                alert('يرجى تحديد السكشن');
                return false;
            }

            if (selectedStudents.length === 0) {
                alert('يرجى تحديد الطلاب المراد ترقيتهم');
                return false;
            }

            const targetSection = document.getElementById('targetSection').value;
            const confirmMessage = `هل أنت متأكد من ترقية ${selectedStudents.length} طالب إلى سكشن ${targetSection}؟`;

            return confirm(confirmMessage);
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            updateSelectedCount();

            // Check if there are no students at all
            const allRows = document.querySelectorAll('#studentsTableBody tr');
            if (allRows.length === 0) {
                document.getElementById('noStudentsAlert').style.display = 'block';
            }
        });
    </script>
</body>
