@model IEnumerable<StudentManagementSystem.Models.Students>

@{
    ViewData["Title"] = "إدارة الطلاب";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="~/css/student.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <nav class="breadcrumb-custom">
        <div class="d-flex align-items-center">
            <i class="fas fa-home me-2"></i>
            <a href="@Url.Action("Index", "Home")" class="me-2">الرئيسية</a>
            <i class="fas fa-angle-left me-2"></i>
            <span>إدارة الطلاب</span>
        </div>
    </nav>

    <div class="row mb-4">
        <div class="col-12">
            <div class="search-filter-card">
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-9 col-lg-10">
                            <div class="input-group search-input-group">
                                <input type="text" class="form-control form-control-lg" id="searchInput"
                                       placeholder="البحث بالاسم أو الكود...">
                            </div>
                        </div>

                        <div class="col-md-3 col-lg-2">
                            <button type="button" class="btn btn-clear-filter btn-lg w-100" id="clearFilters">
                                <i class="fas fa-times me-1"></i>مسح الفلاتر
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users me-2"></i>إدارة الطلاب (<span id="studentsCount">@Model.Count()</span> طالب)</h2>

        <div class="d-flex align-items-center gap-3">
            <a href="@Url.Action("Create")" class="btn add-student-btn-custom">
                <i class="fas fa-plus me-2"></i>إضافة طالب جديد
            </a>
            <a href="@Url.Action("AssignClass")" class="btn assign-student-btn-custom">
                <i class="fas fa-plus me-2"></i>تعيين الطلاب
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div id="studentsContainer">
        @if (Model.Any())
        {
            <div class="row" id="studentsGrid">
                @foreach (var student in Model)
                {
                    <div class="col-md-6 col-lg-4 student-item"
                         data-name="@(student.Name ?? "")"
                         data-code="@(student.Code ?? "")"
                         data-section="@(GetStudentSection(student))">
                        <div class="student-card">
                            <button class="delete-btn"
                                    onclick="showDeleteModal(@student.Id, '@student.Name', '@student.Code')"
                                    title="حذف الطالب">
                                <i class="fas fa-trash"></i>
                            </button>

                            <div class="d-flex align-items-center mb-3">
                                <img src="@(!string.IsNullOrEmpty(student.Picture_Profile) ? "/" + student.Picture_Profile : "/images/default-avatar.png")"
                                     alt="@student.Name"
                                     class="student-avatar">
                                <div class="student-info">
                                    <h5 class="mb-1">@(string.IsNullOrEmpty(student.Name) ? "لم تحدد بعد" : student.Name)</h5>
                                    <span class="student-code">@(string.IsNullOrEmpty(student.Code) ? "لم تحدد بعد" : student.Code)</span>
                                </div>
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-envelope me-2 text-muted"></i>
                                <small class="@(string.IsNullOrEmpty(student.Email) ? "not-specified" : "")">
                                    @(string.IsNullOrEmpty(student.Email) ? "لم تحدد بعد" : student.Email)
                                </small>
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-phone me-2 text-muted"></i>
                                <small class="@(string.IsNullOrEmpty(student.Phone_Number) ? "not-specified" : "")">
                                    @(string.IsNullOrEmpty(student.Phone_Number) ? "لم تحدد بعد" : student.Phone_Number)
                                </small>
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                <small class="@(string.IsNullOrEmpty(student.Governate) ? "not-specified" : "")">
                                    @(string.IsNullOrEmpty(student.Governate) ? "لم تحدد بعد" : student.Governate)
                                </small>
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-layer-group me-2 text-muted"></i>
                                <small class="section-info">@GetStudentSection(student)</small>
                            </div>

                            <div class="d-flex gap-2 mt-3">
                                <a href="@Url.Action("Edit", new { id = student.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>تعديل
                                </a>
                                <a href="@Url.Action("Details", new { id = student.Id })" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye me-1"></i>عرض
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-students">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h4>لا توجد طلاب مسجلين</h4>
                <p>يمكنك إضافة الطلاب الجدد باستخدام زر "إضافة طالب جديد"</p>
                <a href="@Url.Action("Create")" class="btn add-student-btn">
                    <i class="fas fa-plus me-2"></i>إضافة أول طالب
                </a>
            </div>
        }
    </div>

    <div id="noResultsMessage" class="no-students" style="display: none;">
        <i class="fas fa-search fa-3x mb-3"></i>
        <h4>لا توجد نتائج</h4>
        <p>لم يتم العثور على طلاب مطابقين لمعايير البحث</p>
        <button type="button" class="btn add-student-btn" onclick="clearAllFilters()">
            <i class="fas fa-times me-2"></i>مسح البحث
        </button>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-trash me-2"></i>تأكيد الحذف
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h5>هل أنت متأكد من حذف هذا الطالب؟</h5>
                </div>

                <div class="student-info-modal">
                    <p><strong>اسم الطالب:</strong> <span id="studentName"></span></p>
                    <p><strong>كود الطالب:</strong> <span id="studentCode"></span></p>
                </div>

                <p class="text-muted small">تحذير: هذا الإجراء لا يمكن التراجع عنه</p>

                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn confirm-delete-btn">
                        <i class="fas fa-trash me-2"></i>تأكيد الحذف
                    </button>
                    <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>إلغاء
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStudentSection(StudentManagementSystem.Models.Students student)
    {
        var section = student.StudentClassSectionYears?.FirstOrDefault()?.Section?.Name_Of_Section;
        return string.IsNullOrEmpty(section) ? "لم تحدد بعد" : section;
    }
}

<script>
    let allStudents = [];

    document.addEventListener('DOMContentLoaded', function() {
        initializeData();
        setupEventListeners();
    });

    function initializeData() {
        const studentItems = document.querySelectorAll('.student-item');
        studentItems.forEach(item => {
            const studentData = {
                element: item,
                name: item.dataset.name.toLowerCase(),
                code: item.dataset.code.toLowerCase(),
                section: item.dataset.section
            };
            allStudents.push(studentData);
        });
    }

    function setupEventListeners() {
        const searchInput = document.getElementById('searchInput');
        const clearButton = document.getElementById('clearFilters');

        let searchTimeout;
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                filterStudents();
            }, 300);
        });

        clearButton.addEventListener('click', clearAllFilters);
    }

    function filterStudents() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
        let visibleCount = 0;

        allStudents.forEach(student => {
            let showStudent = true;

            if (searchTerm) {
                const matchesName = student.name.includes(searchTerm);
                const matchesCode = student.code.includes(searchTerm);
                const nameWords = student.name.split(' ').filter(word => word.length > 0);
                const matchesPartialName = nameWords.some(word => word.toLowerCase().includes(searchTerm));

                showStudent = showStudent && (matchesName || matchesCode || matchesPartialName);
            }

            if (showStudent) {
                student.element.style.display = 'block';
                visibleCount++;
            } else {
                student.element.style.display = 'none';
            }
        });

        updateUI(visibleCount);
    }

    function updateUI(visibleCount) {
        const studentsCount = document.getElementById('studentsCount');
        const studentsGrid = document.getElementById('studentsGrid');
        const noResultsMessage = document.getElementById('noResultsMessage');

        studentsCount.textContent = visibleCount;

        if (visibleCount === 0 && allStudents.length > 0) {
            if (studentsGrid) studentsGrid.style.display = 'none';
            noResultsMessage.style.display = 'block';
        } else {
            if (studentsGrid) studentsGrid.style.display = 'flex';
            noResultsMessage.style.display = 'none';
        }
    }

    function clearAllFilters() {
        document.getElementById('searchInput').value = '';
        filterStudents();
    }

    setTimeout(function() {
        document.querySelectorAll('.alert').forEach(function(alert) {
            if (alert.classList.contains('show')) {
                alert.classList.remove('show');
            }
        });
    }, 5000);

    function showDeleteModal(studentId, studentName, studentCode) {
        document.getElementById('studentName').textContent = studentName || 'لم تحدد بعد';
        document.getElementById('studentCode').textContent = studentCode || 'لم تحدد بعد';

        const form = document.getElementById('deleteForm');
        form.action = '@Url.Action("DeleteConfirmed", "Student")';

        let hiddenInput = form.querySelector('input[name="id"]');
        if (!hiddenInput) {
            hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'id';
            form.appendChild(hiddenInput);
        }
        hiddenInput.value = studentId;

        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>

