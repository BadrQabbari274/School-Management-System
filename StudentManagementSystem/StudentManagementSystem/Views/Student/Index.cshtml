@model IEnumerable<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "قائمة الطلاب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: white !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-container {
        background-color: white;
        min-height: 100vh;
        padding: 20px;
    }

    .page-header {
        background: linear-gradient(135deg, #ff6b35, #f7931e);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
    }

    .page-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
    }

    .btn-pumpkin {
        background: linear-gradient(135deg, #ff6b35, #f7931e);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 5px;
    }

    .btn-pumpkin:hover {
        background: linear-gradient(135deg, #e55a2b, #e8851a);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 107, 53, 0.4);
        color: white;
    }

    .btn-success-custom {
        background: linear-gradient(135deg, #28a745, #20c997);
        border: none;
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 2px;
    }

    .btn-success-custom:hover {
        background: linear-gradient(135deg, #218838, #1ba085);
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(40, 167, 69, 0.4);
        color: white;
    }

    .btn-info-custom {
        background: linear-gradient(135deg, #17a2b8, #007bff);
        border: none;
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 2px;
    }

    .btn-info-custom:hover {
        background: linear-gradient(135deg, #138496, #0056b3);
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(23, 162, 184, 0.4);
        color: white;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #dc3545, #e74c3c);
        border: none;
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin: 2px;
    }

    .btn-danger-custom:hover {
        background: linear-gradient(135deg, #c82333, #c0392b);
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .students-table {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-top: 20px;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: linear-gradient(135deg, #ff6b35, #f7931e);
        color: white;
        border: none;
        padding: 20px 15px;
        font-weight: 600;
        text-align: center;
        border-bottom: 3px solid #e55a2b;
    }

    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f8f9fa;
        text-align: center;
    }

    .table tbody tr:hover {
        background-color: #fff8f5;
        transform: scale(1.01);
        transition: all 0.3s ease;
    }

    .student-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 3px solid #ff6b35;
        object-fit: cover;
        box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);
    }

    .student-info {
        text-align: right;
    }

    .student-name {
        font-weight: 600;
        color: #333;
        margin-bottom: 5px;
    }

    .student-code {
        color: #666;
        font-size: 0.9rem;
    }

    .class-badge {
        background: linear-gradient(135deg, #6c5ce7, #a29bfe);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }

    .actions-column {
        min-width: 200px;
    }

    .no-students {
        text-align: center;
        padding: 60px;
        color: #666;
    }

    .no-students i {
        font-size: 4rem;
        color: #ff6b35;
        margin-bottom: 20px;
    }

    .search-box {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .search-input {
        border: 2px solid #ff6b35;
        border-radius: 25px;
        padding: 12px 20px;
        font-size: 1rem;
        width: 100%;
        outline: none;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        border-color: #e55a2b;
        box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.2);
    }

    .stats-card {
        background: linear-gradient(135deg, #ff6b35, #f7931e);
        color: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(255, 107, 53, 0.3);
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stats-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    /* Modal Styles */
    .modal-content {
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .modal-header {
        background: linear-gradient(135deg, #dc3545, #e74c3c);
        color: white;
        border-bottom: none;
        border-radius: 15px 15px 0 0;
        padding: 20px;
    }

    .modal-body {
        padding: 30px;
        text-align: center;
    }

    .modal-footer {
        border-top: none;
        padding: 20px;
        justify-content: center;
    }

    .delete-icon {
        font-size: 4rem;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

   @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 2rem;
        }

        .table {
            font-size: 0.8rem;
        }

        .student-avatar {
            width: 40px;
            height: 40px;
        }

        .btn-pumpkin,
        .btn-success-custom,
        .btn-info-custom,
        .btn-danger-custom {
            padding: 6px 12px;
            font-size: 0.8rem;
        }
    }
</style>

<div class="page-container animate-fade-in">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-graduation-cap"></i> قائمة الطلاب</h1>
    </div>

    <!-- Statistics Card -->
    <div class="row">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-number">@Model.Count()</div>
                <div class="stats-label">إجمالي الطلاب</div>
            </div>
        </div>
        <div class="col-md-9">
            <!-- Search Box -->
            <div class="search-box">
                <input type="text" class="search-input" id="searchInput" placeholder="البحث عن طالب...">
            </div>
        </div>
    </div>

    <!-- Add New Student Button -->
    <div class="text-center mb-4">
        <a href="@Url.Action("Create")" class="btn-pumpkin">
            <i class="fas fa-plus"></i> إضافة طالب جديد
        </a>
    </div>

    <!-- Students Table -->
    <div class="students-table">
        @if (Model.Any())
        {
            <table class="table table-hover" id="studentsTable">
                <thead>
                    <tr>
                        <th>الصورة</th>
                        <th>اسم الطالب</th>
                        <th>كود الطالب</th>
                        <th>الفصل</th>
                        <th>تاريخ الميلاد</th>
                        <th>الهاتف</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(student.Picture_Profile))
                                {
                                    <img src="~/@student.Picture_Profile" alt="@student.Name" class="student-avatar">
                                }
                                else
                                {
                                    <div class="student-avatar d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #ff6b35, #f7931e);">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="student-info">
                                    <div class="student-name">@student.Name</div>
                                </div>
                            </td>
                            <td>
                                <div class="student-code">@student.Code</div>
                            </td>
                            <td>
                                @if (student.Class != null)
                                {
                                    <span class="class-badge">@student.Class.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">غير محدد</span>
                                }
                            </td>
                            <td>@student.Date_of_birth</td>
                            <td>@student.Phone_Number</td>
                            <td class="actions-column">
                                <a href="@Url.Action("Details", new { id = student.Id })" class="btn-info-custom">
                                    <i class="fas fa-eye"></i> عرض
                                </a>
                                <a href="@Url.Action("Edit", new { id = student.Id })" class="btn-success-custom">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                <button type="button" class="btn-danger-custom" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setDeleteId(@student.Id, '@student.Name')">
                                    <i class="fas fa-trash"></i> حذف
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-students">
                <i class="fas fa-user-graduate"></i>
                <h3>لا يوجد طلاب مسجلين</h3>
                <p>ابدأ بإضافة طالب جديد</p>
                <a href="@Url.Action("Create")" class="btn-pumpkin">
                    <i class="fas fa-plus"></i> إضافة طالب جديد
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">تأكيد الحذف</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <i class="fas fa-exclamation-triangle delete-icon"></i>
                <h4>هل أنت متأكد من حذف هذا الطالب؟</h4>
                <p id="studentNameToDelete" class="text-muted"></p>
                <p><strong>تحذير:</strong> هذا الإجراء لا يمكن التراجع عنه</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> إلغاء
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-danger-custom">
                        <i class="fas fa-trash"></i> حذف نهائي
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const tableRows = document.querySelectorAll('#studentsTable tbody tr');

        tableRows.forEach(row => {
            const studentName = row.querySelector('.student-name').textContent.toLowerCase();
            const studentCode = row.querySelector('.student-code').textContent.toLowerCase();

            if (studentName.includes(searchTerm) || studentCode.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Delete modal functionality
    let deleteStudentId = null;

    function setDeleteId(studentId, studentName) {
        deleteStudentId = studentId;
        document.getElementById('studentNameToDelete').textContent = 'الطالب: ' + studentName;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + studentId;
    }

    // Add loading animation to buttons
    document.querySelectorAll('.btn-danger-custom, .btn-success-custom, .btn-info-custom, .btn-pumpkin').forEach(button => {
        button.addEventListener('click', function() {
            if (!this.classList.contains('btn-danger-custom') || this.type === 'submit') {
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التحميل...';
            }
        });
    });

    // Smooth scroll to top
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    // Add scroll to top button
    window.addEventListener('scroll', function() {
        if (window.scrollY > 300) {
            if (!document.querySelector('.scroll-to-top')) {
                const scrollBtn = document.createElement('button');
                scrollBtn.className = 'btn-pumpkin scroll-to-top';
                scrollBtn.style.cssText = 'position: fixed; bottom: 20px; right: 20px; z-index: 1000; border-radius: 50%; width: 50px; height: 50px;';
                scrollBtn.innerHTML = '<i class="fas fa-arrow-up"></i>';
                scrollBtn.onclick = scrollToTop;
                document.body.appendChild(scrollBtn);
            }
        } else {
            const scrollBtn = document.querySelector('.scroll-to-top');
            if (scrollBtn) {
                scrollBtn.remove();
            }
        }
    });
</script>