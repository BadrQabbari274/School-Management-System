@model StudentManagementSystem.ViewModels.StudentForAssign
@{
    ViewData["Title"] = "تعيين طلاب للفصل";
    var isJunior = ViewBag.IsJunior ?? false;
}

<div class="container mt-4">
    <div class="page-header mb-4">
        <h2 class="text-primary">
            <i class="fas fa-users"></i>
            تعيين طلاب للفصل: @ViewBag.ClassName - @ViewBag.GradeName
        </h2>
        <p class="text-muted">اختر الطلاب المراد تعيينهم للفصل</p>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="AssignStudents" method="post" id="assignForm">
        <input type="hidden" name="classId" value="@ViewBag.ClassId" />

        @if (!isJunior)
        {
            <!-- اختيار القسم للصفوف المتقدمة -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-layer-group"></i>
                        اختيار القسم
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">القسم المطلوب:</label>
                            <select name="sectionId" class="form-select" required>
                                <option value="">-- اختر القسم --</option>
                                @foreach (var sections in Model.sections)
                                {
                                    <option value="@sections.Id">@sections.Name_Of_Section</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (isJunior)
        {
            <!-- عرض الطلاب للـ Junior مجمعين حسب القسم -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap"></i>
                        الطلاب المتاحين (مجمعين حسب القسم)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.SectionWithStudents != null && Model.SectionWithStudents.Any())
                    {
                        @foreach (var sectionGroup in Model.SectionWithStudents)
                        {
                            <div class="section-group mb-4">
                                <h6 class="text-info fw-bold mb-3">
                                    <i class="fas fa-folder"></i>
                                    @sectionGroup.section.Name_Of_Section
                                    <span class="badge bg-secondary">@sectionGroup.students.Count طالب</span>
                                </h6>

                                <div class="row">
                                    @foreach (var student in sectionGroup.students)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-2">
                                            <div class="form-check p-3 border rounded student-card">
                                                <input class="form-check-input me-2"
                                                       type="checkbox"
                                                       name="selectedStudents"
                                                       value="@student.Id"
                                                       id="student_@student.Id">
                                                <label class="form-check-label w-100" for="student_@student.Id">
                                                    <div class="student-info">
                                                        <div class="fw-bold text-primary">@student.Name</div>
                                                        <small class="text-muted">@student.Code</small>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-graduate fa-3x text-muted"></i>
                            <h5 class="mt-3 text-muted">لا يوجد طلاب متاحين</h5>
                            <p class="text-muted">جميع الطلاب مسجلين بالفعل أو لا يوجد طلاب مؤهلين</p>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <!-- عرض الطلاب للـ Wheeler & Senior مجمعين حسب الفصل -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chalkboard-teacher"></i>
                        الطلاب المتاحين (مجمعين حسب الفصل)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ClassWithStudents != null && Model.ClassWithStudents.Any())
                    {
                        @foreach (var classGroup in Model.ClassWithStudents)
                        {
                            <div class="class-group mb-4">
                                <h6 class="text-success fw-bold mb-3">
                                    <i class="fas fa-door-open"></i>
                                    @classGroup.classes.Name
                                    <span class="badge bg-secondary">@classGroup.students.Count طالب</span>
                                </h6>

                                <div class="row">
                                    @foreach (var student in classGroup.students)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-2">
                                            <div class="form-check p-3 border rounded student-card">
                                                <input class="form-check-input me-2"
                                                       type="checkbox"
                                                       name="selectedStudents"
                                                       value="@student.Id"
                                                       id="student_@student.Id">
                                                <label class="form-check-label w-100" for="student_@student.Id">
                                                    <div class="student-info">
                                                        <div class="fw-bold text-primary">@student.Name</div>
                                                        <small class="text-muted">@student.Code</small>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-graduate fa-3x text-muted"></i>
                            <h5 class="mt-3 text-muted">لا يوجد طلاب متاحين</h5>
                            <p class="text-muted">جميع الطلاب مسجلين بالفعل أو لا يوجد طلاب مؤهلين</p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- أزرار العمليات -->
        <div class="card mt-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <button type="button" class="btn btn-outline-primary" id="selectAll">
                            <i class="fas fa-check-double"></i>
                            تحديد الكل
                        </button>
                        <button type="button" class="btn btn-outline-secondary ms-2" id="clearAll">
                            <i class="fas fa-times"></i>
                            إلغاء التحديد
                        </button>
                    </div>
                    <div>
                        <span class="me-3">
                            <strong>المحدد: </strong>
                            <span id="selectedCount" class="badge bg-info">0</span>
                        </span>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-user-plus"></i>
                            تعيين الطلاب المحددين
                        </button>
                        <a href="@Url.Action("Index", "Classes")" class="btn btn-secondary ms-2">
                            <i class="fas fa-arrow-left"></i>
                            رجوع
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .student-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .student-card:hover {
            background-color: #f8f9fa;
            border-color: #007bff !important;
        }

    .form-check-input:checked + .form-check-label .student-card {
        background-color: #e3f2fd;
        border-color: #2196f3 !important;
    }

    .section-group, .class-group {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        background-color: #fafafa;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function() {
        // تحديث عداد الطلاب المحددين
        function updateSelectedCount() {
            var count = $('input[name="selectedStudents"]:checked').length;
            $('#selectedCount').text(count);
        }

        // تحديث العداد عند تغيير التحديد
        $('input[name="selectedStudents"]').change(updateSelectedCount);

        // تحديد الكل
        $('#selectAll').click(function() {
            $('input[name="selectedStudents"]').prop('checked', true);
            updateSelectedCount();
        });

        // إلغاء تحديد الكل
        $('#clearAll').click(function() {
            $('input[name="selectedStudents"]').prop('checked', false);
            updateSelectedCount();
        });

        // التحقق من وجود طلاب محددين قبل الإرسال
        $('#assignForm').submit(function(e) {
            var selectedStudents = $('input[name="selectedStudents"]:checked').length;
            if (selectedStudents === 0) {
                e.preventDefault();
                alert('يرجى اختيار طالب واحد على الأقل');
                return false;
            }

            @if (!isJunior)
            {
                    <text>
                    var sectionId = $('select[name="sectionId"]').val();
                    if (!sectionId) {
                        e.preventDefault();
                        alert('يرجى اختيار القسم');
                        return false;
                    }
                    </text>
            }

            return confirm('هل أنت متأكد من تعيين ' + selectedStudents + ' طالب للفصل؟');
        });

        // تحديث العداد في البداية
        updateSelectedCount();
    });
</script>