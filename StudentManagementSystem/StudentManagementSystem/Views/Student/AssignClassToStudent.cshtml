model List<StudentManagementSystem.ViewModels.SectionWithStudents>

@{
    ViewData["Title"] = "تعيين الطلاب في الفصل";
    var classId = ViewBag.ClassId; // ID الفصل المختار
    var className = ViewBag.ClassName; // اسم الفصل المختار
}

    <!DOCTYPE html>
    <html lang="ar" dir="rtl">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="header-section">
            <div class="container">
                <h1 class="header-title">تعيين الطلاب في الفصل: @(className ?? "فصل جديد")</h1>
            </div>
        </div>

        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <form id="assignStudentsForm" method="post" asp-action="AssignStudents">
                <input type="hidden" name="classId" value="@classId" />

                @if (Model != null && Model.Any())
                {
                    @foreach (var sectionWithStudents in Model)
                    {
                        var sectionName = sectionWithStudents.section.Name?.ToLower() ?? "";
                        var sectionDisplayName = "";
                        var sectionClass = "";

                        if (sectionName.Contains("mt") || sectionName.Contains("تجارة"))
                        {
                            sectionDisplayName = "تجارة حديثة";
                            sectionClass = "mt";
                        }
                        else if (sectionName.Contains("sd") || sectionName.Contains("برمجيات"))
                        {
                            sectionDisplayName = "تطوير البرمجيات";
                            sectionClass = "sd";
                        }
                        else
                        {
                            sectionDisplayName = sectionWithStudents.section.Name;
                            sectionClass = "other";
                        }

                        <!-- قسم -->
                        <div class="department-section">
                            <div class="department-header @(sectionClass)-header">
                                <h3><i class="fas fa-users"></i> قسم @sectionWithStudents.section.Name - @sectionDisplayName</h3>
                                @if (sectionWithStudents.students != null && sectionWithStudents.students.Any())
                                {
                                    <div class="select-all-container">
                                        <label class="select-all-label">
                                            <input type="checkbox" class="select-all-checkbox" data-department="@sectionClass" />
                                            <span class="checkmark"></span>
                                            تحديد الكل (@sectionWithStudents.students.Count)
                                        </label>
                                    </div>
                                }
                            </div>

                            <div class="students-grid">
                                @if (sectionWithStudents.students != null && sectionWithStudents.students.Any())
                                {
                                    @foreach (var student in sectionWithStudents.students)
                                    {
                                        <div class="student-card">
                                            <input type="checkbox" name="selectedStudents" value="@student.Id" id="student@(student.Id)" class="student-checkbox @(sectionClass)-student" />
                                            <label for="student@(student.Id)" class="student-label">
                                                <div class="student-info">
                                                    <div class="student-name">@student.Name</div>
                                                    <div class="student-details">
                                                        <span class="student-id">ID: @student.Id</span>
                                                        <span class="student-department">@sectionWithStudents.section.Name</span>
                                                        @if (!string.IsNullOrEmpty(student.Email))
                                                        {
                                                            <span class="student-email">@student.Email</span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="check-icon">
                                                    <i class="fas fa-check"></i>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="no-students">
                                        <i class="fas fa-users-slash"></i>
                                        <p>لا يوجد طلاب في هذا القسم</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-sections">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            لا توجد أقسام متاحة أو لا يوجد طلاب للتعيين.
                        </div>
                    </div>
                }

                @@if (Model != null && Model.Any(s => s.students != null && s.students.Any()))
                {
                    <!-- أزرار الحفظ والإلغاء -->
                    <div class="action-buttons">
                        <button type="submit" class="btn btn-save">
                            <i class="fas fa-save"></i> حفظ التعيينات
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-cancel">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                    </div>
                }
            </form>

            <!-- عرض الطلاب المحددين -->
            <div class="selected-students-summary" id="selectedSummary" style="display: none;">
                <h4><i class="fas fa-clipboard-list"></i> الطلاب المحددين (<span id="selectedCount">0</span>)</h4>
                <div id="selectedStudentsList"></div>
            </div>
        </div>

        <style>
            /* General Body Styles */
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f8f9fa;
                direction: rtl;
                margin: 0;
                padding: 0;
            }

            /* Header Section */
            .header-section {
                background: linear-gradient(135deg, #ffffff, #ffffff);
                color: #ff6b35;
                text-align: center;
                padding: 25px 0;
                margin-bottom: 30px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
                border-radius: 0 0 20px 20px;
            }

            .header-title {
                font-size: 32px;
                font-weight: bold;
                margin: 0;
                letter-spacing: 1px;
            }

            /* Container */
            .container {
                max-width: 1400px;
                margin: 0 auto;
                padding: 20px;
            }

            /* Alert Messages */
            .alert {
                padding: 15px;
                margin-bottom: 25px;
                border-radius: 8px;
                font-size: 16px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .alert-success {
                background-color: #d4edda;
                color: #155724;
                border: 1px solid #c3e6cb;
            }

            .alert-danger {
                background-color: #f8d7da;
                color: #721c24;
                border: 1px solid #f5c6cb;
            }

            .alert-info {
                background-color: #d1ecf1;
                color: #0c5460;
                border: 1px solid #bee5eb;
            }

            /* Department Sections */
            .department-section {
                margin-bottom: 40px;
                background: white;
                border-radius: 15px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                overflow: hidden;
            }

            .department-header {
                padding: 20px 30px;
                color: white;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .mt-header, .sd-header, .other-header {
                background: linear-gradient(135deg, #ff6b35, #f85032);
            }

            .department-header h3 {
                margin: 0;
                font-size: 24px;
                font-weight: bold;
            }

                .department-header h3 i {
                    margin-left: 10px;
                }

            /* Select All */
            .select-all-container {
                display: flex;
                align-items: center;
            }

            .select-all-label {
                display: flex;
                align-items: center;
                cursor: pointer;
                font-size: 16px;
                font-weight: 600;
                margin: 0;
            }

            .select-all-checkbox {
                width: 18px;
                height: 18px;
                margin-left: 8px;
                cursor: pointer;
            }

            /* Students Grid */
            .students-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
                gap: 20px;
                padding: 30px;
            }

            /* No Students Message */
            .no-students {
                grid-column: 1 / -1;
                text-align: center;
                padding: 40px;
                color: #666;
                font-size: 18px;
            }

                .no-students i {
                    font-size: 48px;
                    margin-bottom: 15px;
                    color: #ccc;
                }

            .no-sections {
                text-align: center;
                margin: 50px 0;
            }

            /* Student Cards */
            .student-card {
                position: relative;
            }

            .student-checkbox {
                display: none;
            }

            .student-label {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 20px;
                background: #f8f9fa;
                border: 2px solid #e9ecef;
                border-radius: 12px;
                cursor: pointer;
                transition: all 0.3s ease;
                min-height: 80px;
            }

                .student-label:hover {
                    border-color: #ff6b35;
                    box-shadow: 0 5px 15px rgba(255, 107, 53, 0.2);
                    transform: translateY(-2px);
                }

            .student-checkbox:checked + .student-label {
                background: linear-gradient(135deg, #28a745, #20c997);
                border-color: #28a745;
                color: white;
            }

                .student-checkbox:checked + .student-label .student-department {
                    background: rgba(255, 255, 255, 0.2);
                    color: white;
                }

            .student-info {
                flex: 1;
            }

            .student-name {
                font-size: 18px;
                font-weight: bold;
                margin-bottom: 8px;
            }

            .student-details {
                display: flex;
                flex-wrap: wrap;
                gap: 10px;
                font-size: 13px;
                color: #666;
            }

            .student-checkbox:checked + .student-label .student-details {
                color: rgba(255, 255, 255, 0.9);
            }

            .student-id, .student-email {
                font-weight: 600;
            }

            .student-department {
                background: #e9ecef;
                padding: 4px 8px;
                border-radius: 15px;
                font-size: 12px;
                font-weight: bold;
            }

            .check-icon {
                width: 30px;
                height: 30px;
                background: #e9ecef;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-right: 15px;
                transition: all 0.3s ease;
            }

            .student-checkbox:checked + .student-label .check-icon {
                background: rgba(255, 255, 255, 0.2);
                color: white;
            }

            /* Action Buttons */
            .action-buttons {
                display: flex;
                justify-content: center;
                gap: 20px;
                margin: 40px 0;
            }

            .btn {
                padding: 15px 30px;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                font-size: 16px;
                font-weight: 600;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                color: white;
            }

                .btn i {
                    margin-left: 8px;
                }

            .btn-save {
                background: linear-gradient(135deg, #28a745, #20c997);
                min-width: 200px;
            }

                .btn-save:hover {
                    background: linear-gradient(135deg, #218838, #1e7e34);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
                }

            .btn-cancel {
                background: linear-gradient(135deg, #6c757d, #5a6268);
                min-width: 150px;
            }

                .btn-cancel:hover {
                    background: linear-gradient(135deg, #5a6268, #495057);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(108, 117, 125, 0.3);
                }

            /* Selected Students Summary */
            .selected-students-summary {
                background: white;
                padding: 25px;
                border-radius: 12px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                margin-top: 30px;
            }

                .selected-students-summary h4 {
                    color: #ff6b35;
                    margin-bottom: 20px;
                    font-size: 20px;
                }

                    .selected-students-summary h4 i {
                        margin-left: 10px;
                    }

            #selectedStudentsList {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 10px;
            }

            .selected-student-item {
                background: #f8f9fa;
                padding: 12px;
                border-radius: 8px;
                border-right: 4px solid #28a745;
                font-size: 14px;
            }

            /* Responsive Design */
            @@media (max-width: 768px) {
                .container

            {
                padding: 10px;
            }

            .header-title {
                font-size: 24px;
            }

            .students-grid {
                grid-template-columns: 1fr;
                padding: 20px;
                gap: 15px;
            }

            .department-header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

                .department-header h3 {
                    font-size: 20px;
                }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 300px;
            }

            .student-details {
                flex-direction: column;
                gap: 5px;
            }

            }
        </style>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Handle select all checkboxes
                const selectAllCheckboxes = document.querySelectorAll('.select-all-checkbox');

                selectAllCheckboxes.forEach(function(selectAllCheckbox) {
                    selectAllCheckbox.addEventListener('change', function() {
                        const department = this.getAttribute('data-department');
                        const departmentStudents = document.querySelectorAll('.' + department + '-student');

                        departmentStudents.forEach(function(studentCheckbox) {
                            studentCheckbox.checked = selectAllCheckbox.checked;
                        });

                        updateSelectedSummary();
                    });
                });

                // Handle individual student checkboxes
                const studentCheckboxes = document.querySelectorAll('.student-checkbox');

                studentCheckboxes.forEach(function(checkbox) {
                    checkbox.addEventListener('change', function() {
                        updateSelectAllStatus();
                        updateSelectedSummary();
                    });
                });

                function updateSelectAllStatus() {
                    // Update each department's select all checkbox
                    const departments = ['mt', 'sd', 'other'];

                    departments.forEach(function(dept) {
                        const deptStudents = document.querySelectorAll('.' + dept + '-student');
                        const deptSelectAll = document.querySelector('[data-department="' + dept + '"]');

                        if (deptSelectAll && deptStudents.length > 0) {
                            const deptCheckedCount = document.querySelectorAll('.' + dept + '-student:checked').length;
                            deptSelectAll.checked = deptCheckedCount === deptStudents.length;
                        }
                    });
                }

                function updateSelectedSummary() {
                    const selectedCheckboxes = document.querySelectorAll('.student-checkbox:checked');
                    const selectedCount = selectedCheckboxes.length;
                    const summaryDiv = document.getElementById('selectedSummary');
                    const countSpan = document.getElementById('selectedCount');
                    const listDiv = document.getElementById('selectedStudentsList');

                    countSpan.textContent = selectedCount;

                    if (selectedCount > 0) {
                        summaryDiv.style.display = 'block';

                        let selectedHtml = '';
                        selectedCheckboxes.forEach(function(checkbox) {
                            const label = document.querySelector('label[for="' + checkbox.id + '"]');
                            const studentName = label.querySelector('.student-name').textContent;
                            const studentId = label.querySelector('.student-id').textContent;
                            const studentDept = label.querySelector('.student-department').textContent;

                            selectedHtml += `
                                <div class="selected-student-item">
                                    <strong>${studentName}</strong><br>
                                    ${studentId} - ${studentDept}
                                </div>
                            `;
                        });

                        listDiv.innerHTML = selectedHtml;
                    } else {
                        summaryDiv.style.display = 'none';
                    }
                }

                // Form submission validation
                document.getElementById('assignStudentsForm').addEventListener('submit', function(e) {
                    const selectedStudents = document.querySelectorAll('.student-checkbox:checked');

                    if (selectedStudents.length === 0) {
                        e.preventDefault();
                        alert('يرجى اختيار طالب واحد على الأقل لتعيينه في الفصل.');
                        return false;
                    }

                    // Show confirmation
                    const confirmMessage = `هل أنت متأكد من تعيين ${selectedStudents.length} طالب في هذا الفصل؟`;
                    if (!confirm(confirmMessage)) {
                        e.preventDefault();
                        return false;
                    }
                });
            });
        </script>
    </body>
</html>
