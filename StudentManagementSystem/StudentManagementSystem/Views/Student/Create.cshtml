@model StudentManagementSystem.Controllers.StudentController.CreateStudentViewModel

@{
    ViewData["Title"] = "إضافة طالب جديد";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="~/css/student.css" rel="stylesheet" />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid mt-4">
    <nav class="breadcrumb-custom">
        <div class="d-flex align-items-center">
            <i class="fas fa-home me-2"></i>
            <a href="@Url.Action("Index", "Home")" class="me-2">الرئيسية</a>
            <i class="fas fa-angle-left me-2"></i>
            <a href="@Url.Action("Index")" class="me-2">إدارة الطلاب</a>
            <i class="fas fa-angle-left me-2"></i>
            <span>إضافة طالب جديد</span>
        </div>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-container">
                <div class="form-header">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        إضافة طالب جديد
                    </h3>
                </div>

                @using (Html.BeginForm("Create", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="section-title">
                        <i class="fas fa-id-card me-2"></i>البيانات الأساسية
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Name, "اسم الطالب", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل اسم الطالب", @id = "studentName" } })
                            @Html.ValidationMessageFor(model => model.Student.Name, "", new { @class = "text-danger" })
                            <div id="studentNameError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                ممنوع كتابة أرقام - حروف فقط
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Adress, "العنوان", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Adress, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل العنوان", @id = "studentAddress" } })
                            @Html.ValidationMessageFor(model => model.Student.Adress, "", new { @class = "text-danger" })
                            <div id="studentAddressError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                ممنوع كتابة أرقام فقط - حروف فقط أو أرقام مع حروف
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Email, "البريد الإلكتروني", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "أدخل البريد الإلكتروني", @pattern = ".+@gmail\\.com", @title = "البريد الإلكتروني يجب أن ينتهي بـ @gmail.com" } })
                            @Html.ValidationMessageFor(model => model.Student.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Natrual_Id, "الرقم القومي", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Natrual_Id, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل الرقم القومي" } })
                            @Html.ValidationMessageFor(model => model.Student.Natrual_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        @if (Model.Sections != null && Model.Sections.Any())
                        {
                            <div class="col-md-6 mb-3">
                                <label class="form-label">القسم</label>
                                <span class="required">*</span>
                                @Html.DropDownListFor(m => m.SelectedSectionId,
                                Model.Sections,
                                                "اختر القسم",
                                                new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SelectedSectionId, "", new { @class = "text-danger" })
                    </div>
                                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Jop_of_Father, "وظيفة الأب", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Jop_of_Father, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل وظيفة الأب", @id = "fatherJob" } })
                            @Html.ValidationMessageFor(model => model.Student.Jop_of_Father, "", new { @class = "text-danger" })
                            <div id="fatherJobError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                ممنوع كتابة أرقام - حروف فقط
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Student.Jop_of_Mother, "وظيفة الأم", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Jop_of_Mother, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل وظيفة الأم", @id = "motherJob" } })
                            @Html.ValidationMessageFor(model => model.Student.Jop_of_Mother, "", new { @class = "text-danger" })
                            <div id="motherJobError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                ممنوع كتابة أرقام - حروف فقط
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(model => model.Student.Phone_Number, "رقم هاتف الطالب", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Phone_Number, new { htmlAttributes = new { @class = "form-control", @type = "tel", @placeholder = "01xxxxxxxxx", @maxlength = "11", @id = "studentPhone" } })
                            @Html.ValidationMessageFor(model => model.Student.Phone_Number, "", new { @class = "text-danger" })
                            <div id="studentPhoneError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                رقم الهاتف يجب أن يكون 11 رقم ويبدأ بـ 01
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(model => model.Student.Phone_Number_Father, "رقم هاتف الأب", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Phone_Number_Father, new { htmlAttributes = new { @class = "form-control", @type = "tel", @placeholder = "01xxxxxxxxx", @maxlength = "11", @id = "fatherPhone" } })
                            @Html.ValidationMessageFor(model => model.Student.Phone_Number_Father, "", new { @class = "text-danger" })
                            <div id="fatherPhoneError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                رقم الهاتف يجب أن يكون 11 رقم ويبدأ بـ 01
                            </div>
                           
                        </div>

                        <div class="col-md-4 mb-3">
                            @Html.LabelFor(model => model.Student.Phone_Number_Mother, "رقم هاتف الأم", new { @class = "form-label" })
                            <span class="required">*</span>
                            @Html.EditorFor(model => model.Student.Phone_Number_Mother, new { htmlAttributes = new { @class = "form-control", @type = "tel", @placeholder = "01xxxxxxxxx", @maxlength = "11", @id = "motherPhone" } })
                            @Html.ValidationMessageFor(model => model.Student.Phone_Number_Mother, "", new { @class = "text-danger" })
                            <div id="motherPhoneError" class="text-danger" style="display: none;">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                رقم الهاتف يجب أن يكون 11 رقم ويبدأ بـ 01
                            </div>
                        </div>
                    </div>

                    <div class="section-title mt-4">
                        <i class="fas fa-file me-2"></i>الملفات المرفقة
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">الصورة الشخصية</label>
                            <div class="file-input-wrapper">
                                <input type="file" name="pictureProfile" accept="image/*" id="pictureProfile">
                                <label for="pictureProfile" class="file-input-label">
                                    <i class="fas fa-cloud-upload-alt fa-2x mb-2"></i>
                                    <div>اختر الصورة الشخصية</div>
                                    <small class="text-muted">JPG, PNG, GIF - حد أقصى 5MB</small>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">شهادة الميلاد</label>
                            <div class="file-input-wrapper">
                                <input type="file" name="birthCertificate" accept=".pdf,.jpg,.jpeg,.png" id="birthCertificate">
                                <label for="birthCertificate" class="file-input-label">
                                    <i class="fas fa-file-pdf fa-2x mb-2"></i>
                                    <div>اختر شهادة الميلاد</div>
                                    <small class="text-muted">PDF, JPG, PNG - حد أقصى 5MB</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>إلغاء
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save me-2"></i>حفظ الطالب
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Function to check if text contains numbers
    function containsNumbers(text) {
        return /\d/.test(text);
    }

    // Function to check if text contains only numbers (no letters)
    function containsOnlyNumbers(text) {
        return /^\d+$/.test(text.trim());
    }

    // Function to validate phone number (11 digits starting with 01)
    function validatePhoneNumber(phoneNumber) {
        const cleanPhone = phoneNumber.trim();
        // Check if it's exactly 11 digits and starts with 01
        return /^01\d{9}$/.test(cleanPhone);
    }

    // Function to format phone number as user types
    function formatPhoneNumber(input) {
        let value = input.value.replace(/\D/g, ''); // Remove non-digits

        // Ensure it starts with 01 if user starts typing
        if (value.length > 0 && !value.startsWith('01')) {
            if (value.startsWith('0')) {
                value = '01' + value.substring(1);
            } else {
                value = '01' + value;
            }
        }

        // Limit to 11 digits
        if (value.length > 11) {
            value = value.substring(0, 11);
        }

        input.value = value;
    }

    // Function to validate text fields (no numbers allowed)
    function validateTextField(inputId, errorId) {
        const input = document.getElementById(inputId);
        const errorDiv = document.getElementById(errorId);

        if (!input || !errorDiv) return true;

        const value = input.value.trim();

        if (containsNumbers(value) && value !== '') {
            input.classList.add('is-invalid');
            errorDiv.style.display = 'block';
            return false;
        } else {
            input.classList.remove('is-invalid');
            errorDiv.style.display = 'none';
            return true;
        }
    }

    // Function to validate address field (no numbers only, but allows numbers with letters)
    function validateAddressField(inputId, errorId) {
        const input = document.getElementById(inputId);
        const errorDiv = document.getElementById(errorId);

        if (!input || !errorDiv) return true;

        const value = input.value.trim();

        if (containsOnlyNumbers(value) && value !== '') {
            input.classList.add('is-invalid');
            errorDiv.style.display = 'block';
            return false;
        } else {
            input.classList.remove('is-invalid');
            errorDiv.style.display = 'none';
            return true;
        }
    }

    // Function to validate phone field
    function validatePhoneField(inputId, errorId) {
        const input = document.getElementById(inputId);
        const errorDiv = document.getElementById(errorId);

        if (!input || !errorDiv) return true;

        const value = input.value.trim();

        if (value !== '' && !validatePhoneNumber(value)) {
            input.classList.add('is-invalid');
            errorDiv.style.display = 'block';
            return false;
        } else {
            input.classList.remove('is-invalid');
            errorDiv.style.display = 'none';
            return true;
        }
    }

    // Real-time validation for student name
    document.getElementById('studentName').addEventListener('input', function() {
        validateTextField('studentName', 'studentNameError');
    });

    // Real-time validation for student address
    document.getElementById('studentAddress').addEventListener('input', function() {
        validateAddressField('studentAddress', 'studentAddressError');
    });

    // Real-time validation for father's job
    document.getElementById('fatherJob').addEventListener('input', function() {
        validateTextField('fatherJob', 'fatherJobError');
    });

    // Real-time validation for mother's job
    document.getElementById('motherJob').addEventListener('input', function() {
        validateTextField('motherJob', 'motherJobError');
    });

    // Phone number validation and formatting
    const phoneInputs = ['studentPhone', 'fatherPhone', 'motherPhone'];
    const phoneErrors = ['studentPhoneError', 'fatherPhoneError', 'motherPhoneError'];

    phoneInputs.forEach((inputId, index) => {
        const input = document.getElementById(inputId);
        const errorId = phoneErrors[index];

        if (input) {
            // Format as user types
            input.addEventListener('input', function() {
                formatPhoneNumber(this);
                validatePhoneField(inputId, errorId);
            });

            // Prevent non-numeric characters
            input.addEventListener('keypress', function(e) {
                // Allow backspace, delete, tab, escape, enter
                if ([8, 9, 27, 13, 46].indexOf(e.keyCode) !== -1 ||
                    // Allow Ctrl+A, Ctrl+C, Ctrl+V, Ctrl+X
                    (e.keyCode === 65 && e.ctrlKey === true) ||
                    (e.keyCode === 67 && e.ctrlKey === true) ||
                    (e.keyCode === 86 && e.ctrlKey === true) ||
                    (e.keyCode === 88 && e.ctrlKey === true)) {
                    return;
                }
                // Ensure that it is a number and stop the keypress
                if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                    e.preventDefault();
                }
            });

            // Handle paste events
            input.addEventListener('paste', function(e) {
                setTimeout(() => {
                    formatPhoneNumber(this);
                    validatePhoneField(inputId, errorId);
                }, 0);
            });
        }
    });

    // Form submission validation
    document.querySelector('form').addEventListener('submit', function(e) {
        let isValid = true;

        // Validate all text fields
        isValid &= validateTextField('studentName', 'studentNameError');
        isValid &= validateAddressField('studentAddress', 'studentAddressError');
        isValid &= validateTextField('fatherJob', 'fatherJobError');
        isValid &= validateTextField('motherJob', 'motherJobError');

        // Validate all phone numbers
        phoneInputs.forEach((inputId, index) => {
            isValid &= validatePhoneField(inputId, phoneErrors[index]);
        });

        if (!isValid) {
            e.preventDefault();

            // Show alert message
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show mt-3';
            alertDiv.innerHTML = `
                <i class="fas fa-exclamation-triangle me-2"></i>
                يرجى تصحيح الأخطاء في النموذج قبل الحفظ
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            // Insert alert at the top of the form
            const formContainer = document.querySelector('.form-container');
            formContainer.insertBefore(alertDiv, formContainer.firstChild.nextSibling);

            // Scroll to first error
            const firstError = document.querySelector('.is-invalid');
            if (firstError) {
                firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                firstError.focus();
            }
        }
    });

    // File input change events
    document.getElementById('pictureProfile').addEventListener('change', function(e) {
        const label = document.querySelector('label[for="pictureProfile"]');
        if (e.target.files.length > 0) {
            label.innerHTML = `
                <i class="fas fa-check fa-2x mb-2 text-success"></i>
                <div>تم اختيار: ${e.target.files[0].name}</div>
                <small class="text-muted">انقر للتغيير</small>
            `;
        }
    });

    document.getElementById('birthCertificate').addEventListener('change', function(e) {
        const label = document.querySelector('label[for="birthCertificate"]');
        if (e.target.files.length > 0) {
            label.innerHTML = `
                <i class="fas fa-check fa-2x mb-2 text-success"></i>
                <div>تم اختيار: ${e.target.files[0].name}</div>
                <small class="text-muted">انقر للتغيير</small>
            `;
        }
    });
</script>

