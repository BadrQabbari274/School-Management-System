@model StudentManagementSystem.Models.Students

@{
    ViewData["Title"] = "تعديل بيانات الطالب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/student.css" rel="stylesheet" />

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Student")">إدارة الطلاب</a></li>
            <li class="breadcrumb-item active" aria-current="page">تعديل بيانات الطالب: @Model.Name</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">
            <i class="fas fa-user-edit me-2"></i>
            تعديل بيانات الطالب: @Model.Name
        </h2>
        <div class="btn-group">
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                <i class="fas fa-eye me-2"></i>
                عرض التفاصيل
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                العودة للقائمة
            </a>
        </div>
    </div>

    <!-- Form -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <!-- Personal Information Section -->
                    <div class="col-12 mb-4">
                        <h5 class="section-title">
                            <i class="fas fa-user me-2"></i>
                            المعلومات الشخصية
                        </h5>
                        <hr>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label">الاسم الكامل</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>


                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Natrual_Id" class="form-label">الرقم القومي</label>
                        <input asp-for="Natrual_Id" class="form-control" required />
                        <span asp-validation-for="Natrual_Id" class="text-danger"></span>
                    </div>


                    <div class="col-md-6 mb-3">
                        <label asp-for="Governate" class="form-label">المحافظة</label>
                        <input asp-for="Governate" class="form-control" required />
                        <span asp-validation-for="Governate" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="Adress" class="form-label">العنوان</label>
                        <textarea asp-for="Adress" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>

                    <!-- Contact Information Section -->
                    <div class="col-12 mb-4 mt-4">
                        <h5 class="section-title">
                            <i class="fas fa-phone me-2"></i>
                            معلومات الاتصال
                        </h5>
                        <hr>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Phone_Number" class="form-label">رقم هاتف الطالب</label>
                        <input asp-for="Phone_Number" class="form-control" required />
                        <span asp-validation-for="Phone_Number" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Phone_Number_Father" class="form-label">رقم هاتف الوالد</label>
                        <input asp-for="Phone_Number_Father" class="form-control" required />
                        <span asp-validation-for="Phone_Number_Father" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Phone_Number_Mother" class="form-label">رقم هاتف الوالدة</label>
                        <input asp-for="Phone_Number_Mother" class="form-control" required />
                        <span asp-validation-for="Phone_Number_Mother" class="text-danger"></span>
                    </div>

                    <!-- Family Information Section -->
                    <div class="col-12 mb-4 mt-4">
                        <h5 class="section-title">
                            <i class="fas fa-users me-2"></i>
                            معلومات العائلة
                        </h5>
                        <hr>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Jop_of_Father" class="form-label">وظيفة الوالد</label>
                        <input asp-for="Jop_of_Father" class="form-control" required />
                        <span asp-validation-for="Jop_of_Father" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Jop_of_Mother" class="form-label">وظيفة الوالدة</label>
                        <input asp-for="Jop_of_Mother" class="form-control" required />
                        <span asp-validation-for="Jop_of_Mother" class="text-danger"></span>
                    </div>

                    <!-- Academic Information Section -->
                    <div class="col-12 mb-4 mt-4">
                        <h5 class="section-title">
                            <i class="fas fa-graduation-cap me-2"></i>
                            المعلومات الأكاديمية
                        </h5>
                        <hr>
                    </div>

                    @*                     <div class="col-md-6 mb-3">
                        <label asp-for="ClassId" class="form-label">الفصل</label>
                        <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
                            <option value="">-- اختر الفصل --</option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div> *@

                    <!-- Documents Section -->
                    <div class="col-12 mb-4 mt-4">
                        <h5 class="section-title">
                            <i class="fas fa-file-upload me-2"></i>
                            المستندات
                        </h5>
                        <hr>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="pictureProfile" class="form-label">الصورة الشخصية</label>
                        <input type="file" id="pictureProfile" name="pictureProfile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">الصيغ المسموحة: JPG, PNG, GIF - اتركها فارغة للاحتفاظ بالصورة الحالية</small>

                        <!-- Current Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.Picture_Profile))
                        {
                            <div class="mt-2">
                                <label class="form-label">الصورة الحالية:</label>
                                <div>
                                    <img src="~/@Model.Picture_Profile" alt="الصورة الحالية" class="current-image" />
                                </div>
                            </div>
                        }

                        <!-- New Image Preview -->
                        <div class="mt-2">
                            <img id="profilePreview" src="#" alt="معاينة الصورة الجديدة" class="new-image" style="display: none;" />
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="birthCertificate" class="form-label">شهادة الميلاد</label>
                        <input type="file" id="birthCertificate" name="birthCertificate" class="form-control" accept=".pdf,.jpg,.png" />
                        <small class="form-text text-muted">الصيغ المسموحة: PDF, JPG, PNG - اتركها فارغة للاحتفاظ بالشهادة الحالية</small>

                        <!-- Current Certificate Info -->
                        @if (!string.IsNullOrEmpty(Model.birth_Certificate))
                        {
                            <div class="mt-2">
                                <label class="form-label">الشهادة الحالية:</label>
                                <div>
                                    <a href="~/@Model.birth_Certificate" target="_blank" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-file-alt me-1"></i>
                                        عرض الشهادة الحالية
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Creation Info (Read-only) -->
                    <div class="col-12 mb-4 mt-4">
                        <h5 class="section-title">
                            <i class="fas fa-info-circle me-2"></i>
                            معلومات الإنشاء
                        </h5>
                        <hr>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">تاريخ الإضافة</label>
                        <input type="text" class="form-control" value="@Model.Date.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">تم الإنشاء بواسطة</label>
                        <input type="text" class="form-control" value="@(Model.CreatedBy?.Name ?? "غير محدد")" readonly />
                    </div>

                    <!-- Form Actions -->
                    <div class="col-12 mt-4">
                        <hr>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                حفظ التعديلات
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-info">
                                <i class="fas fa-eye me-2"></i>
                                عرض التفاصيل
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
