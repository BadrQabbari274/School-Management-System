@model IEnumerable<StudentManagementSystem.Models.Evidence>

@{
    ViewData["Title"] = "الأدلة";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">الأدلة</h1>
        </div>
    </div>

    <div class="container">
        <div class="controls">
            <a href="@Url.Action("Create")" class="btn btn-add">
                <i class="fas fa-plus-circle"></i> إضافة دليل جديد
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["Error"]
            </div>
        }

        <div class="courses-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>اسم الدليل</th>
                        <th>نتاج التعلم</th>
                        <th>النوع</th>
                        <th>تاريخ الإنشاء</th>
                        <th>أنشأه</th>
                        <th>الحالة</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@(item.Learning_Outcome?.Name ?? "غير محدد")</td>
                                <td>
                                    @if (item.Ispractical)
                                    {
                                        <span class="badge bg-primary">عملي</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">نظري</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>@(item.CreatedBy?.Name ?? "غير محدد")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشط</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })"
                                           class="btn btn-info btn-sm" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn @(item.IsActive ? "btn-secondary" : "btn-success") btn-sm"
                                                title="@(item.IsActive ? "إلغاء تفعيل" : "تفعيل")"
                                                onclick="toggleStatus(@item.Id, '@item.Name', @item.IsActive.ToString().ToLower())">
                                            <i class="fas fa-@(item.IsActive ? "toggle-off" : "toggle-on")"></i>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm" title="حذف"
                                                onclick="showDeleteConfirmation(@item.Id, '@item.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="no-data">لا توجد أدلة متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف الدليل <strong id="evidenceNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toggle Status Confirmation Modal -->
    <div class="modal fade custom-modal" id="toggleStatusModal" tabindex="-1" aria-labelledby="toggleStatusModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="toggleStatusModalLabel">تأكيد تغيير الحالة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من <span id="statusAction"></span> الدليل <strong id="evidenceNameToToggle"></strong>؟</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-primary" id="confirmToggleBtn">تأكيد</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden Forms -->
    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="evidenceIdToDelete" />
    </form>

    <form id="toggleForm" asp-action="ToggleStatus" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="evidenceIdToToggle" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let evidenceIdToDelete = 0;
        let evidenceIdToToggle = 0;

        function showDeleteConfirmation(id, name) {
            evidenceIdToDelete = id;
            document.getElementById('evidenceNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        function toggleStatus(id, name, isActive) {
            evidenceIdToToggle = id;
            document.getElementById('evidenceNameToToggle').innerText = name;
            document.getElementById('statusAction').innerText = isActive ? 'إلغاء تفعيل' : 'تفعيل';
            var toggleModal = new bootstrap.Modal(document.getElementById('toggleStatusModal'));
            toggleModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            const form = document.getElementById('deleteForm');
            document.getElementById('evidenceIdToDelete').value = evidenceIdToDelete;

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: new FormData(form)
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء حذف الدليل. يرجى المحاولة مرة أخرى.');
                    console.error('Delete failed with status:', response.status);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف الدليل. يرجى فحص اتصال الشبكة.');
                console.error('Error during fetch:', error);
            }
        });

        document.getElementById('confirmToggleBtn').addEventListener('click', async function () {
            var toggleModal = bootstrap.Modal.getInstance(document.getElementById('toggleStatusModal'));
            toggleModal.hide();

            const form = document.getElementById('toggleForm');
            document.getElementById('evidenceIdToToggle').value = evidenceIdToToggle;

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: new FormData(form)
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء تغيير حالة الدليل. يرجى المحاولة مرة أخرى.');
                    console.error('Toggle failed with status:', response.status);
                }
            } catch (error) {
                alert('حدث خطأ أثناء تغيير حالة الدليل. يرجى فحص اتصال الشبكة.');
                console.error('Error during fetch:', error);
            }
        });
    </script>
</body>
</html>