    <style>
        .form-check-container {
            display: flex;
            gap: 20px;
        }

        .form-check {
            flex: 1;
        }

        .form-check-label {
            font-weight: 500;
        }

        .form-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-start;
        }

        .card {
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border: none;
            border-radius: 10px;
        }

        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
