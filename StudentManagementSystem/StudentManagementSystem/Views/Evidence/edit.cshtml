@model StudentManagementSystem.Models.Evidence

@{
    ViewData["Title"] = "تعديل الدليل";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">تعديل الدليل</h1>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-edit"></i> تعديل بيانات الدليل
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i>
                                @TempData["Error"]
                            </div>
                        }

                        <form asp-action="Edit" method="post">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.CreatedBy_Id)
                            @Html.HiddenFor(m => m.CreatedDate)

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label">اسم الدليل <span class="text-danger">*</span></label>
                                        <input asp-for="Name" class="form-control" placeholder="أدخل اسم الدليل" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Outcome_Id" class="form-label">نتاج التعلم <span class="text-danger">*</span></label>
                                        <select asp-for="Outcome_Id" class="form-select" id="outcomeSelect">
                                            <option value="">-- اختر نتاج التعلم --</option>
                                            @* سيتم تحميل نتائج التعلم من خلال JavaScript *@
                                        </select>
                                        <span asp-validation-for="Outcome_Id" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">نوع الدليل</label>
                                        <div class="form-check-container">
                                            <div class="form-check">
                                                <input asp-for="Ispractical" type="radio" value="true" class="form-check-input" id="practical" />
                                                <label class="form-check-label" for="practical">
                                                    <i class="fas fa-tools"></i> عملي
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input asp-for="Ispractical" type="radio" value="false" class="form-check-input" id="theoretical" />
                                                <label class="form-check-label" for="theoretical">
                                                    <i class="fas fa-book"></i> نظري
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <div class="form-check form-switch">
                                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsActive" class="form-check-label">
                                                <i class="fas fa-toggle-on"></i> حالة التفعيل
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- إظهار معلومات الإنشاء -->
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="info-box">
                                        <div class="info-item">
                                            <i class="fas fa-calendar"></i>
                                            <span>تاريخ الإنشاء: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        @if (Model.CreatedBy != null)
                                        {
                                            <div class="info-item">
                                                <i class="fas fa-user"></i>
                                                <span>أنشأه: @Model.CreatedBy.Name</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <hr />

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> حفظ التعديلات
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> عرض التفاصيل
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> رجوع للقائمة
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
