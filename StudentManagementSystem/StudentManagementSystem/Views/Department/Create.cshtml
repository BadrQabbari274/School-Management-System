@* Views/Field/Create.cshtml *@
@model StudentManagementSystem.Models.Department

@{
    ViewData["Title"] = "إضافة قسم جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/field-styles.css" rel="stylesheet" />

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-plus-circle me-2"></i>إضافة قسم جديد
                    </h3>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post" id="createDepartmentForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-primary">
                                <i class="fas fa-university me-2"></i>اسم القسم
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="أدخل اسم القسم" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div id="departmentNameError" class="text-danger mt-1" style="display:none;">
                                <i class="fas fa-exclamation-circle me-1"></i>
                                لا يمكن أن يبدأ اسم القسم بأرقام.
                            </div>
                            <small id="charCounter" class="form-text text-muted"></small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>إنشاء القسم
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
        border: none;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #fd7e14;
            box-shadow: 0 0 0 0.2rem rgba(253, 126, 20, 0.25);
        }

    .btn-primary {
        background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(253, 126, 20, 0.4);
        }

    .btn-outline-secondary {
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
        border: 2px solid #6c757d;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        }

    .form-check-input:checked {
        background-color: #fd7e14;
        border-color: #fd7e14;
    }

    .text-primary {
        color: #fd7e14 !important;
    }

    .form-label {
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .bg-light {
        background-color: #f8f9fa !important;
        border-radius: 10px;
    }

    .is-invalid {
        border-color: #dc3545 !important;
    }
</style>

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            const nameInput = $('#Name');
            const nameError = $('#departmentNameError');
            const submitBtn = $('#submitBtn');

            // Function to validate that the name doesn't start with numbers
            function validateName(value) {
                const trimmedValue = value.trim();
                // Check if the value is empty or starts with digits
                return trimmedValue !== '' && !/^\d/.test(trimmedValue);
            }

            // Function to update the validation state of the input field and error message
            function updateValidationState() {
                const isValid = validateName(nameInput.val());
                if (isValid) {
                    nameError.hide();
                    nameInput.removeClass('is-invalid');
                } else {
                    nameError.show();
                    nameInput.addClass('is-invalid');
                }
            }

            // Event listener for input: validates in real-time
            nameInput.on('input', function() {
                updateValidationState();

                // عداد الأحرف المتبقية
                const maxLength = 100;
                const currentLength = $(this).val().length;
                const remaining = maxLength - currentLength;

                $('#charCounter').text('عدد الأحرف المتبقية: ' + remaining);

                if (remaining < 10) {
                    $('#charCounter').removeClass('text-muted').addClass('text-warning');
                } else {
                    $('#charCounter').removeClass('text-warning').addClass('text-muted');
                }
            });

            // Event listener for paste: validates after the paste action
            nameInput.on('paste', function(e) {
                // Wait for the paste event to complete before validating
                setTimeout(updateValidationState, 0);
            });

            // Form submission with loading state
            $('#createDepartmentForm').on('submit', function (e) {
                const departmentName = nameInput.val();

                // Final validation checks
                let isFormValid = true;

                if (!validateName(departmentName)) {
                    isFormValid = false;
                    nameInput.addClass('is-invalid');
                    nameError.show();
                    alert('الرجاء إدخال اسم قسم صحيح. لا يمكن أن يبدأ اسم القسم بأرقام.');
                } else {
                    nameInput.removeClass('is-invalid');
                    nameError.hide();
                }

                if (!isFormValid) {
                    e.preventDefault();
                    nameInput.focus();
                    return false;
                }

                // Show loading state
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>جاري الحفظ...');
            });

            // Remove validation class when user starts typing
            nameInput.on('keydown', function() {
                $(this).removeClass('is-invalid');
            });

            // Auto-focus on name input
            nameInput.focus();
        });
    </script>
}