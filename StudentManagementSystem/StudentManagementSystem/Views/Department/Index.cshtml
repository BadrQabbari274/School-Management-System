<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">الأقسام</h1>
        </div>
    </div>

    <div class="container">
        <div class="controls">
            <a href="@Url.Action("Create")" class="btn btn-add">
                <i class="fas fa-plus-circle"></i> إضافة قسم جديد
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="fields-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>اسم القسم</th>
                        <th>المرحلة الدراسية</th>
                        <th>الحالة</th>
                        <th>تاريخ الإنشاء</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var field in Model)
                        {
                            <tr>
                                <td>@field.Name</td>
                                <td>@(field.Grade?.Name ?? "غير محدد")</td>
                                <td>
                                    @if (field.IsActive)
                                    {
                                        <span class="status-badge status-active">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-inactive">غير نشط</span>
                                    }
                                </td>
                                <td>@field.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = field.Id })"
                                           class="btn btn-info btn-sm" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = field.Id })"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" title="حذف"
                                                onclick="showDeleteConfirmation(@field.Id, '@field.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <a href="@Url.Action("AssignEmployee", new { id = field.Id })"
                                           class="btn btn-secondary btn-sm" title="تعيين موظف">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="no-data">لا توجد أقسام متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف القسم <strong id="fieldNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="fieldIdToDelete" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let fieldIdToDelete = 0; // Global variable to store the ID of the field to be deleted

        function showDeleteConfirmation(id, name) {
            fieldIdToDelete = id;
            document.getElementById('fieldNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            // Hide the modal
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            // Perform the deletion using the hidden form and AJAX
            const form = document.getElementById('deleteForm');
            document.getElementById('fieldIdToDelete').value = fieldIdToDelete;

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: new FormData(form)
                });

                if (response.ok) {
                    // Reload the page to reflect the deletion
                    location.reload();
                } else {
                    // Handle non-OK responses, e.g., show an error message
                    alert('حدث خطأ أثناء حذف القسم. يرجى المحاولة مرة أخرى.');
                    console.error('Delete failed with status:', response.status);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف القسم. يرجى التحقق من الاتصال بالإنترنت.');
                console.error('Error during fetch:', error);
            }
        });
    </script>
</body>
