@model StudentManagementSystem.Models.Grade

@{
    ViewData["Title"] = "Class Year Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>Class Year Details
                    </h3>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-info rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-graduation-cap text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="fw-bold text-info">@Model.Name</h4>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-info">
                                    <i class="fas fa-id-badge me-2"></i>ID
                                </label>
                                <div class="detail-value">@Model.Id</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-info">
                                    <i class="fas fa-toggle-on me-2"></i>Status
                                </label>
                                <div class="detail-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-info">
                                    <i class="fas fa-calendar-alt me-2"></i>Created Date
                                </label>
                                <div class="detail-value">@Model.Date.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-info">
                                    <i class="fas fa-clock me-2"></i>Created Time
                                </label>
                                <div class="detail-value">@Model.Date.ToString("HH:mm tt")</div>
                            </div>
                        </div>

                        @if (Model.CreatedBy.HasValue)
                        {
                            <div class="col-12">
                                <div class="detail-item">
                                    <label class="form-label fw-bold text-info">
                                        <i class="fas fa-user me-2"></i>Created By
                                    </label>
                                    <div class="detail-value">
                                        @if (Model.CreatedByUser != null)
                                        {
                                            <span class="badge bg-primary fs-6">@Model.CreatedByUser.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">User ID: @Model.CreatedBy</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                        </div>
                        <div class="col-md-4">
                            <!-- Corrected Delete Button with Form -->
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline w-100"
                                  onsubmit="return confirm('Are you sure you want to delete this class year?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-lg w-100 mb-3">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
    }

    .bg-info {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .text-info {
        color: #667eea !important;
    }

    .detail-item {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        height: 100%;
    }

    .detail-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: #495057;
        margin-top: 5px;
    }

    .badge {
        padding: 8px 12px;
        border-radius: 20px;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(240, 147, 251, 0.4);
            color: white;
        }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4);
        }

    .btn-outline-secondary {
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

    .form-label {
        margin-bottom: 8px;
        font-size: 1rem;
    }

    hr {
        border: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        opacity: 0.3;
    }
</style>