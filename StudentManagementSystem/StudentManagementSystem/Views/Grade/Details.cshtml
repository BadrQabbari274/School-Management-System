@model StudentManagementSystem.Models.Grades

@{
    ViewData["Title"] = "تفاصيل السنة الدراسية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> @* Or ~/css/grades.css *@
</head>
<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>تفاصيل السنة الدراسية - @Model.Name
                    </h3>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-id-badge me-2"></i>المعرف
                                </label>
                                <div class="detail-value">@Model.Id</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ الإنشاء
                                </label>
                                <div class="detail-value">@Model.Date.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-clock me-2"></i>وقت الإنشاء
                                </label>
                                <div class="detail-value">@Model.Date.ToString("HH:mm tt")</div>
                            </div>
                        </div>

                        @if (Model.CreatedBy_Id != null)
                        {
                            <div class="col-12">
                                <div class="detail-item">
                                    <label class="form-label fw-bold text-dark">
                                        <i class="fas fa-user me-2"></i>أنشئ بواسطة
                                    </label>
                                    <div class="detail-value">
                                        @if (Model.CreatedBy != null)
                                        {
                                            <span class="badge bg-primary fs-6">@Model.CreatedBy.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">User ID: @Model.CreatedBy</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-edit me-2"></i>تعديل
                            </a>
                        </div>
                        <div class="col-md-4">
                            <!-- Corrected Delete Button with Form -->
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline w-100"
                                  onsubmit="return confirm('هل أنت متأكد من حذف هذه السنة الدراسية؟');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-lg w-100 mb-3">
                                    <i class="fas fa-trash me-2"></i>حذف
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg w-100 mb-3" style="height: 48px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}