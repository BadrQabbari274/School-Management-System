@model IEnumerable<StudentManagementSystem.Models.Grade>

@{
    ViewData["Title"] = "Class Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">Class Year</h2>
                <a asp-action="Create" class="btn btn-primary btn-lg px-4 py-2 rounded-pill">
                    <i class="fas fa-plus me-2"></i>Add New Class Year
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="bg-light p-4 border-bottom">
                        <h5 class="mb-0 text-center fw-bold">Academic Year</h5>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var grade in Model.Where(g => g.IsActive).OrderBy(g => g.Name))
                            {
                                <div class="list-group-item list-group-item-action border-0 py-4">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-graduation-cap text-white"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1 fw-bold text-primary">@grade.Name</h6>
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar-alt me-1"></i>
                                                        Created: @grade.Date.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@grade.Id" class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@grade.Id" class="btn btn-outline-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <!-- Corrected Delete Button with Form -->
                                                <form asp-action="Delete" asp-route-id="@grade.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete @grade.Name?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-graduation-cap text-muted" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="text-muted">No Class Years Found</h5>
                            <p class="text-muted">Click "Add New Class Year" to create your first class year.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background: linear-gradient(135deg, #FFA500 0%,#E77F55 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
        transition: all 0.3s ease;
    }

    .btn-group .btn {
        border-radius: 50px;
        margin: 0 2px;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-group form {
        display: inline-block;
    }

        .btn-group form .btn {
            border-radius: 50px;
            margin: 0 2px;
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    .bg-primary {
        background: linear-gradient(135deg, #FFA500 0%,#E77F55 100%);
    }
</style>