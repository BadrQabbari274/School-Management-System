@model IEnumerable<StudentManagementSystem.Models.Grades>

@{
    ViewData["Title"] = "السنوات الدراسية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* General Body Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
            margin: 0;
            padding: 0;
        }

        /* Header Section */
        .header-section {
            background: #fff; /* White background */
            color: #ff6b35;   /* Orange font for all text inside */
            text-align: center;
            padding: 25px 0;
            margin-bottom: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            border-radius: 0 0 20px 20px;
        }

        .header-title {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            letter-spacing: 1px;
            color: #ff6b35; /* Orange font for the title */
        }

        /* Container for content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Control Buttons and Search Section */
        .controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            gap: 20px;
        }

        /* Search Section Styling */
        .search-section {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.1);
            margin-bottom: 25px;
            display: block;
            max-width: 100%;
        }

        .search-container {
            position: relative;
            max-width: 500px;
            margin: 0 auto;
        }

        .search-input {
            width: 100%;
            padding: 12px 50px 12px 15px;
            border: 2px solid #e0e6ed;
            border-radius: 25px;
            font-size: 16px;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

        .search-input:focus {
            outline: none;
            border-color: #007bff;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
        }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            font-size: 18px;
        }

        .clear-search {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            font-size: 18px;
            cursor: pointer;
            display: none;
            padding: 0;
            width: 24px;
            height: 24px;
        }

        .clear-search:hover {
            color: #dc3545;
        }

        .search-results-info {
            text-align: center;
            margin-top: 15px;
            color: #6c757d;
            font-style: italic;
        }

        /* Highlight search results */
        .highlight {
            background-color: #fff3cd;
            font-weight: bold;
            padding: 2px 4px;
            border-radius: 3px;
        }

        /* Hide rows that don't match search */
        .hidden-row {
            display: none !important;
        }

        /* Clearfix for floated elements */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        /* General Button Styles */
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            color: white;
        }

            .btn i {
                margin-left: 8px;
            }

        /* Add Button */
        .btn-add {
            background: linear-gradient(135deg, #28a745, #20c997);
            white-space: nowrap;
        }

            .btn-add:hover {
                background: linear-gradient(135deg, #218838, #1e7e34);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
            }

        /* Other button styles */
        .btn-info {
            background: linear-gradient(135deg, #17a2b8, #138496);
        }

            .btn-info:hover {
                background: linear-gradient(135deg, #117a8b, #0e6e7e);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(23, 162, 184, 0.3);
            }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107, #e0a800);
            color: #333;
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #e0a800, #c69500);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255, 193, 7, 0.3);
            }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

            .btn-danger:hover {
                background: linear-gradient(135deg, #c82333, #bd2130);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
            }

        .btn-sm {
            padding: 6px 12px;
            font-size: 13px;
            margin-left: 5px;
        }

        /* Alert Messages */
        .alert {
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 8px;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        /* Search Info Alert */
        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        /* Table Styles */
        .courses-table {
            width: 100%;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0;
        }

            .table th,
            .table td {
                padding: 18px;
                text-align: center;
                border-bottom: 1px solid #eee;
            }

            .table th {
                background-color: #f0f2f5;
                font-weight: bold;
                color: #555;
                border-bottom: 2px solid #dee2e6;
                font-size: 15px;
            }

            .table tbody tr:hover {
                background-color: #e9ecef;
            }

            /* Search highlighting */
            .table tbody tr.search-match {
                background-color: #d4edda !important;
                border-left: 4px solid #28a745;
            }

        .search-highlight {
            background-color: #fff3cd;
            padding: 2px 4px;
            border-radius: 3px;
            font-weight: bold;
        }

        .btn-group {
            display: flex;
            gap: 8px;
            justify-content: center;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #888;
            font-style: italic;
            font-size: 18px;
        }

        .no-results {
            text-align: center;
            padding: 40px;
            color: #dc3545;
            font-style: italic;
            font-size: 18px;
        }

        /* Custom Modal Styles */
        .custom-modal .modal-content {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            border: none;
        }

        .custom-modal .modal-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border-radius: 15px 15px 0 0;
            padding: 20px;
            border-bottom: none;
        }

        .custom-modal .modal-title {
            font-weight: bold;
            font-size: 24px;
        }

        .custom-modal .btn-close {
            filter: invert(1) brightness(2);
        }

        .custom-modal .modal-body {
            padding: 30px;
            font-size: 18px;
            color: #333;
            text-align: center;
        }

        .custom-modal .modal-footer {
            border-top: none;
            padding: 20px;
            justify-content: center;
            gap: 15px;
        }

        /* Button specific styles for better RTL support */
        .details-btn {
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
            border-top-right-radius: 0.5rem !important;
            border-bottom-right-radius: 0.5rem !important;
        }

        .delete-btn {
            border-top-right-radius: 0 !important;
            border-bottom-right-radius: 0 !important;
            border-top-left-radius: 0.5rem !important;
            border-bottom-left-radius: 0.5rem !important;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .container

        {
            padding: 10px;
        }

        .header-title {
            font-size: 24px;
        }

        .controls {
            flex-direction: column;
            gap: 15px;
            align-items: stretch;
        }

        .search-section {
            order: 1;
            justify-content: center;
            max-width: 100%;
        }

        .btn-add {
            order: 2;
            width: 100%;
            justify-content: center;
        }

        .input-group {
            max-width: 100%;
        }

        .table th,
        .table td {
            padding: 10px;
            font-size: 12px;
        }

        .btn-group {
            flex-direction: column;
            gap: 5px;
        }

        .btn {
            padding: 8px 15px;
            font-size: 13px;
        }

        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">السنوات الدراسية</h1>
        </div>
    </div>

    <div class="container">
        <div class="controls">
            <!-- Search Section (copied from Class.Index.cshtml) -->
            <div class="search-section">
                <div class="search-container">
                    <input type="text" id="searchInput" class="search-input" placeholder="ابحث عن السنة الدراسية">
                    <i class="fas fa-search search-icon"></i>
                    <button type="button" class="clear-search" id="clearSearch">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="search-results-info" id="searchResults"></div>
            </div>

            <!-- Add Button -->
            <a href="@Url.Action("Create")" class="btn btn-add">
                <i class="fas fa-plus-circle"></i> إضافة سنة دراسية جديدة
            </a>
        </div>

        <!-- Search Results Info -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        <div id="searchInfo" class="alert alert-info" style="display: none;">
            <i class="fas fa-info-circle"></i>
            <span id="searchInfoText"></span>
        </div>

        <div class="courses-table">
            <table class="table">
                <thead>
                    <tr>
                        <th>اسم السنة الدراسية</th>
                        <th>تاريخ الإنشاء</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody id="gradesTableBody">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model.OrderBy(g => g.Name))
                        {
                            <tr class="grade-row"
                                data-name="@item.Name.ToLower()"
                                data-date="@item.Date.ToString("dd/MM/yyyy")">
                                <td class="grade-name">@item.Name</td>
                                <td class="grade-date">@item.Date.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })"
                                           class="btn btn-info btn-sm details-btn" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm delete-btn" title="حذف"
                                                onclick="showDeleteConfirmation(@item.Id, '@item.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr id="noDataRow">
                            <td colspan="3" class="no-data">لا توجد سنوات دراسية متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noSearchResults" class="no-results" style="display: none;">
                لا توجد نتائج تطابق البحث الخاص بك
            </div>
        </div>
    </div>

    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف السنة الدراسية <strong id="gradeNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="gradeIdToDelete" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let gradeIdToDelete = 0;
        let allRows = [];
        let totalGrades = 0;

        // Initialize search functionality (identical to Class.Index)
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clearButton = document.getElementById('clearSearch');
            const searchResults = document.getElementById('searchResults');
            const noSearchResults = document.getElementById('noSearchResults');

            // Get all grade rows
            allRows = Array.from(document.querySelectorAll('.grade-row'));
            totalGrades = allRows.length;

            // Update search results info on page load
            updateSearchResultsInfo('');

            // Search input event listener
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.trim();
                performSearch(searchTerm);

                // Show/hide clear button
                if (searchTerm) {
                    clearButton.style.display = 'block';
                } else {
                    clearButton.style.display = 'none';
                }
            });

            // Clear search button
            clearButton.addEventListener('click', function() {
                searchInput.value = '';
                performSearch('');
                this.style.display = 'none';
                searchInput.focus();
            });

            // Clear search on Escape key
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    this.value = '';
                    performSearch('');
                    clearButton.style.display = 'none';
                }
            });
        });

        function performSearch(searchTerm) {
            const noSearchResults = document.getElementById('noSearchResults');

            if (!searchTerm) {
                // Show all rows
                allRows.forEach(row => {
                    row.classList.remove('hidden-row');
                    removeHighlights(row);
                });
                noSearchResults.style.display = 'none';
                updateSearchResultsInfo('');
                return;
            }

            const searchTermLower = searchTerm.toLowerCase();
            let visibleCount = 0;

            allRows.forEach(row => {
                const name = row.dataset.name || '';
                const date = row.dataset.date || '';

                const isMatch = name.includes(searchTermLower) ||
                                date.includes(searchTermLower);

                if (isMatch) {
                    row.classList.remove('hidden-row');
                    highlightSearchTerm(row, searchTerm);
                    visibleCount++;
                } else {
                    row.classList.add('hidden-row');
                    removeHighlights(row);
                }
            });

            // Show/hide no results message
            if (visibleCount === 0) {
                noSearchResults.style.display = 'block';
            } else {
                noSearchResults.style.display = 'none';
            }

            updateSearchResultsInfo(searchTerm, visibleCount);
        }

        function highlightSearchTerm(row, searchTerm) {
            const searchableElements = [
                row.querySelector('.grade-name'),
                row.querySelector('.grade-date')
            ].filter(Boolean);

            searchableElements.forEach(element => {
                const originalText = element.dataset.originalText || element.textContent;
                if (!element.dataset.originalText) {
                    element.dataset.originalText = originalText;
                }

                const regex = new RegExp(`(${escapeRegex(searchTerm)})`, 'gi');
                const highlightedText = originalText.replace(regex, '<span class="highlight">$1</span>');
                element.innerHTML = highlightedText;
            });
        }

        function removeHighlights(row) {
            const searchableElements = [
                row.querySelector('.grade-name'),
                row.querySelector('.grade-date')
            ].filter(Boolean);

            searchableElements.forEach(element => {
                if (element.dataset.originalText) {
                    element.textContent = element.dataset.originalText;
                }
            });
        }

        function escapeRegex(string) {
            return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
        }

        function updateSearchResultsInfo(searchTerm, visibleCount = null) {
            const searchResults = document.getElementById('searchResults');

            if (!searchTerm) {
                if (totalGrades > 0) {
                    searchResults.innerHTML = `إجمالي ${totalGrades} سنة دراسية`;
                } else {
                    searchResults.innerHTML = '';
                }
            } else {
                const count = visibleCount !== null ? visibleCount : totalGrades;
                if (count === 0) {
                    searchResults.innerHTML = 'لم يتم العثور على نتائج';
                } else if (count === 1) {
                    searchResults.innerHTML = 'تم العثور على سنة دراسية واحدة';
                } else if (count === 2) {
                    searchResults.innerHTML = 'تم العثور على سنتين دراسيتين';
                } else if (count <= 10) {
                    searchResults.innerHTML = `تم العثور على ${count} سنوات دراسية`;
                } else {
                    searchResults.innerHTML = `تم العثور على ${count} سنة دراسية`;
                }
            }
        }

        // --- Keep your delete logic as is below ---
        function showDeleteConfirmation(id, name) {
            gradeIdToDelete = id;
            document.getElementById('gradeNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            const form = document.getElementById('deleteForm');
            document.getElementById('gradeIdToDelete').value = gradeIdToDelete;

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: new FormData(form)
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء حذف السنة الدراسية. يرجى المحاولة مرة أخرى.');
                    console.error('Delete failed with status:', response.status);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف السنة الدراسية. يرجى فحص اتصال الشبكة.');
                console.error('Error during fetch:', error);
            }
        });
    </script>
</body>
</html>