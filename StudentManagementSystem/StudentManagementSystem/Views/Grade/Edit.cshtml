@model StudentManagementSystem.Models.Grades

@{
    ViewData["Title"] = "تعديل السنة الدراسية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site2.css" asp-append-version="true" /> @* Or ~/css/grades.css *@
</head>
<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-warning text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-edit me-2"></i>تعديل السنة الدراسية
                    </h3>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Date" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-warning">
                                <i class="fas fa-graduation-cap me-2"></i>اسم السنة الدراسية
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="أدخل اسم السنة الدراسية" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        @*    <div class="mb-4">
                             <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold text-warning">
                                    <i class="fas fa-toggle-on me-2"></i>حالة النشاط
                                </label>
                            </div> 
                            <small class="text-muted">اضغط لتفعيل/إلغاء تفعيل هذه السنة الدراسية</small>
                        </div> *@

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-calendar-alt me-2"></i>تاريخ الإنشاء
                            </label>
                            <input type="text" class="form-control" value="@Model.Date.ToString("MMM dd, yyyy")" readonly />
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning btn-lg w-100 mb-3">
                                    <i class="fas fa-save me-2"></i>تحديث السنة الدراسية
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-back btn-lg w-100 mb-3">
                                    <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}