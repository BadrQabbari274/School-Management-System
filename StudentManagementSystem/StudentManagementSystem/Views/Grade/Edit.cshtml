@model StudentManagementSystem.Models.Grade

@{
    ViewData["Title"] = "Edit Class Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-warning text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-edit me-2"></i>Edit Class Year
                    </h3>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Date" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold text-warning">
                                <i class="fas fa-graduation-cap me-2"></i>Class Year Name
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter class year name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                     @*    <div class="mb-4">
                             <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold text-warning">
                                    <i class="fas fa-toggle-on me-2"></i>Active Status
                                </label>
                            </div> 
                            <small class="text-muted">Toggle to activate/deactivate this class year</small>
                        </div> *@

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-calendar-alt me-2"></i>Created Date
                            </label>
                            <input type="text" class="form-control" value="@Model.Date.ToString("MMM dd, yyyy")" readonly />
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-warning btn-lg w-100 mb-3">
                                    <i class="fas fa-save me-2"></i>Update Class Year
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) !important;
        border: none;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #f093fb;
            box-shadow: 0 0 0 0.2rem rgba(240, 147, 251, 0.25);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
        color: white;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(240, 147, 251, 0.4);
            color: white;
        }

    .btn-outline-secondary {
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

    .form-check-input:checked {
        background-color: #f093fb;
        border-color: #f093fb;
    }

    .text-warning {
        color: #f093fb !important;
    }

    .form-label {
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        color: #6c757d;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}