                                        <button type="button" class="btn btn-danger btn-sm" title=" ⁄ÿÌ· «·„” Œœ„"
                                                onclick="showToggleConfirmation(@user.Id, '@user.Name', true)">
                                            <i class="fas fa-trash"></i>
