                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="no-data">·« ÌÊÃœ „” Œœ„Ê‰ ·⁄—÷Â„</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteConfirmationModalLabel"> √ﬂÌœ «·Õ–›</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Â· √‰  „ √ﬂœ „‰ Õ–› «·„” Œœ„ <strong id="userNameToDelete"></strong>ø</p>
                        <p class="text-danger">·« Ì„ﬂ‰ «· —«Ã⁄ ⁄‰ Â–« «·≈Ã—«¡.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">≈·€«¡</button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Õ–›</button>
                    </div>
                </div>
            </div>
        </div>

        @* Make sure this form is present and correctly targets the DeleteUser action in the User controller *@
        <form id="deleteForm" asp-controller="User" asp-action="DeleteUser" method="post" style="display:none;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="userIdToDelete" />
        </form>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
        <script>
            // Global variable to store the ID of the user to be deleted
            let userIdToDelete = 0;

            function showDeleteConfirmation(id, name) {
                userIdToDelete = id; // Store the ID
                document.getElementById('userNameToDelete').innerText = name;
                // Set the value of the hidden input field in the form
                document.getElementById('userIdToDelete').value = id;

                var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
                deleteModal.show();
            }

            document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
                // Hide the modal
                var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
                deleteModal.hide();

                const form = document.getElementById('deleteForm');

                // Construct the URL dynamically using the asp-controller and asp-action attributes of the form
                // This is safer than hardcoding the URL
                const actionUrl = form.action;

                try {
                    const response = await fetch(actionUrl, { // Use the form's action URL
                        method: 'POST',
                        body: new FormData(form), // FormData will automatically pick up the hidden input
                        headers: {
                            // Ensure the Anti-Forgery Token is correctly sent
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (response.ok) {
                        // Check if the response indicates a redirect (e.g., from RedirectToAction)
                        // If so, let the browser handle the redirect, otherwise, reload
                        if (response.redirected) {
                            window.location.href = response.url;
                        } else {
                            // If no redirect, and success, reload the page to reflect changes
                            location.reload();
                        }
                    } else {
                        // Attempt to read error message from response if available
                        const errorText = await response.text();
                        alert('ÕœÀ Œÿ√ √À‰«¡ «·⁄„·Ì…: ' + errorText || '›‘· ›Ì Õ–› «·„” Œœ„. Ì—ÃÏ «·„Õ«Ê·… „—… √Œ—Ï.');
                    }
                } catch (error) {
                    alert('ÕœÀ Œÿ√ √À‰«¡ «·⁄„·Ì…. Ì—ÃÏ «· Õﬁﬁ „‰ « ’«· «·‘»ﬂ….');
                    console.error(error);
                }
            });
        </script>
    </body>
