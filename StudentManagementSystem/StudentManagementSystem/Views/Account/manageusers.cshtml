            <div class="users-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>«·«”„</th>
                            <th>«”„ «·„” Œœ„</th>
                            <th>«·œÊ—</th>
                            <th> «—ÌŒ «·≈‰‘«¡</th>
                            <th>«·Õ«·…</th>
                            <th> „ «·≈‰‘«¡ »Ê«”ÿ…</th>
                            <th>«·⁄„·Ì« </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                        <tr>
                            <td>@user.Name</td>
