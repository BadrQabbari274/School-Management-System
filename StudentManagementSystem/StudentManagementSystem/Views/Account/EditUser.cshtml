@model StudentManagementSystem.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "تعديل المستخدم";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        /* General Body Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
            margin: 0;
            padding: 0;
        }

        /* الهيدر - الجزء العلوي */
        .header-section {
            background: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            border-radius: 0 0 20px 20px;
            padding: 25px 0;
            margin-bottom: 30px;
            text-align: center;
        }

        /* عنوان الهيدر */
        .header-title {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            letter-spacing: 1px;
            color: #fd7e14;
        }

        /* Container for content */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Form Container */
        .form-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .form-header {
            background: linear-gradient(135deg, #fd7e14, #e8590c);
            color: white;
            padding: 25px 30px;
            text-align: center;
        }

            .form-header h2 {
                margin: 0;
                font-size: 24px;
                font-weight: 600;
            }

            .form-header p {
                margin: 8px 0 0 0;
                opacity: 0.9;
                font-size: 14px;
            }

        .form-body {
            padding: 30px;
        }

        /* Form Groups */
        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 25px;
            flex: 1;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: #495057;
                font-size: 15px;
            }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: white;
            color: #495057;
        }

            .form-control:focus {
                outline: none;
                border-color: #fd7e14;
                background: white;
                box-shadow: 0 0 0 3px rgba(253, 126, 20, 0.1);
            }

            .form-control:hover {
                border-color: #fd7e14;
            }

        /* Checkbox Styling */
        .checkbox-container {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            border: 2px solid #e9ecef;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .checkbox-group input[type="checkbox"] {
                width: 20px;
                height: 20px;
                accent-color: #fd7e14;
                cursor: pointer;
            }

            .checkbox-group label {
                font-size: 16px;
                color: #495057;
                cursor: pointer;
                margin-bottom: 0 !important;
                font-weight: 500;
            }

        /* Password Section */
        .password-section {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 8px;
            margin-bottom: 25px;
            border: 2px solid #e9ecef;
        }

            .password-section h3 {
                color: #495057;
                font-size: 18px;
                margin-bottom: 20px;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .password-section h3 i {
                    color: #fd7e14;
                }

        /* Alert Messages */
        .alert {
            padding: 15px 20px;
            margin-bottom: 25px;
            border-radius: 8px;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 2px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 2px solid #f5c6cb;
        }

        /* Buttons */
        .btn-container {
            display: flex;
            gap: 15px;
            justify-content: flex-start;
            padding-top: 20px;
            border-top: 2px solid #e9ecef;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            min-width: 120px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #fd7e14, #e8590c);
            color: white;
            box-shadow: 0 3px 8px rgba(253, 126, 20, 0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #e8590c, #d63813);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(253, 126, 20, 0.4);
            }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d, #5a6268);
            color: white;
            box-shadow: 0 3px 8px rgba(108, 117, 125, 0.3);
        }

            .btn-secondary:hover {
                background: linear-gradient(135deg, #5a6268, #495057);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(108, 117, 125, 0.4);
                color: white;
                text-decoration: none;
            }

        .btn-back {
            background: linear-gradient(135deg, #17a2b8, #138496);
            color: white;
            box-shadow: 0 3px 8px rgba(23, 162, 184, 0.3);
        }

            .btn-back:hover {
                background: linear-gradient(135deg, #138496, #0f6674);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(23, 162, 184, 0.4);
                color: white;
                text-decoration: none;
            }

        /* Loading state */
        .btn-loading {
            pointer-events: none;
            opacity: 0.7;
            position: relative;
        }

            .btn-loading::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 16px;
                height: 16px;
                border: 2px solid transparent;
                border-top: 2px solid white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
                transform: translate(-50%, -50%);
            }

        @@keyframes spin {
            0%

        {
            transform: translate(-50%, -50%) rotate(0deg);
        }

        100% {
            transform: translate(-50%, -50%) rotate(360deg);
        }

        }

        /* Error Styling */
        .field-validation-error {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .validation-summary-errors {
            background: #f8d7da;
            color: #721c24;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            border: 2px solid #f5c6cb;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-right: 20px;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        /* Breadcrumb */
        .breadcrumb-container {
            margin-bottom: 20px;
        }

        .breadcrumb {
            background: none;
            padding: 0;
            margin: 0;
        }

        .breadcrumb-item {
            font-size: 14px;
        }

            .breadcrumb-item a {
                color: #fd7e14;
                text-decoration: none;
            }

                .breadcrumb-item a:hover {
                    color: #e8590c;
                    text-decoration: underline;
                }

            .breadcrumb-item.active {
                color: #6c757d;
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .container

        {
            padding: 10px;
        }

        .header-title {
            font-size: 24px;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .form-body {
            padding: 20px;
        }

        .btn-container {
            flex-direction: column;
            gap: 10px;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .password-section {
            padding: 20px;
        }

        }

        @@media (max-width: 480px) {
            .form-header

        {
            padding: 20px;
        }

        .form-header h2 {
            font-size: 20px;
        }

        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">تعديل المستخدم</h1>
        </div>
    </div>

    <div class="container">
        <!-- Breadcrumb -->
        <div class="breadcrumb-container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard")">
                            <i class="fas fa-home"></i> الرئيسية
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("manageusers", "Account")">إدارة المستخدمين</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">تعديل المستخدم</li>
                </ol>
            </nav>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["Error"]
            </div>
        }

        <!-- Form Container -->
        <div class="form-container">
            <div class="form-header">
                <h2>
                    <i class="fas fa-user-edit"></i>
                    تعديل بيانات المستخدم
                </h2>
                <p>قم بتحديث معلومات المستخدم حسب الحاجة</p>
            </div>

            <div class="form-body">
                <form id="editUserForm" asp-controller="Account" asp-action="EditUser" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.RoleId)

                    <!-- معلومات المستخدم الأساسية -->
                    <div class="form-row">
                        <div class="form-group">
                            <label for="Name">
                                <i class="fas fa-user"></i>
                                الاسم الكامل
                            </label>
                            @Html.TextBoxFor(m => m.Name, new {
                            @class = "form-control",
                                                        placeholder = "أدخل الاسم الكامل",
                                                        required = "required",
                                                        autocomplete = "name"
                                                        })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="form-group">
                            <label for="Username">
                                <i class="fas fa-at"></i>
                                اسم المستخدم
                            </label>
                            @Html.TextBoxFor(m => m.Username, new {
                                                        @class = "form-control",
                                                        placeholder = "أدخل اسم المستخدم",
                                                        required = "required",
                                                        autocomplete = "username"
                                                        })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "field-validation-error" })
                        </div>
                    </div>

                    @* إظهار قسم كلمة المرور فقط إذا كان المستخدم يحرر ملفه الشخصي *@
                    @if (ViewBag.IsEditingSelf != null && (bool)ViewBag.IsEditingSelf)
                    {
                        <!-- قسم تغيير كلمة المرور -->
                        <div class="password-section">
                            <h3>
                                <i class="fas fa-key"></i>
                                تغيير كلمة المرور (اختياري)
                            </h3>

                            <div class="form-row">
                                <div class="form-group">
                                    <label for="NewPassword">كلمة المرور الجديدة</label>
                                    @Html.PasswordFor(m => m.NewPassword, new {
                                    @class = "form-control",
                                                                placeholder = "أدخل كلمة المرور الجديدة",
                                                                autocomplete = "new-password"
                                                                })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "field-validation-error" })
                            </div>

                            <div class="form-group">
                                <label for="ConfirmNewPassword">تأكيد كلمة المرور الجديدة</label>
                                @Html.PasswordFor(m => m.ConfirmNewPassword, new {
                                                                @class = "form-control",
                                                                placeholder = "أعد إدخال كلمة المرور الجديدة",
                                                                autocomplete = "new-password"
                                                                })
                                @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "field-validation-error" })
                            </div>
                        </div>
                    </div>
                                        }

                    <!-- الأزرار -->
                    <div class="btn-container">
                        <button type="submit" class="btn btn-primary" id="saveBtn">
                            <i class="fas fa-save"></i>
                            حفظ التغييرات
                        </button>

                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">
                            <i class="fas fa-times"></i>
                            إلغاء
                        </a>

                        <a href="@Url.Action("UserProfile", "Account", new { id = Model.Id })" class="btn btn-back">
                            <i class="fas fa-eye"></i>
                            عرض الملف الشخصي
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editUserForm');
            const saveBtn = document.getElementById('saveBtn');
            const inputs = document.querySelectorAll('input[type="text"], input[type="password"]');

            // تحسين تجربة المستخدم مع الحقول
            inputs.forEach(input => {
                // تأثير الفوكس
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#fd7e14';
                    this.style.boxShadow = '0 0 0 3px rgba(253, 126, 20, 0.1)';
                });

                input.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.style.borderColor = '#dee2e6';
                        this.style.boxShadow = 'none';
                    } else {
                        this.style.borderColor = '#fd7e14';
                        this.style.boxShadow = 'none';
                    }
                });

                // تأثير الكتابة
                input.addEventListener('input', function() {
                    if (this.value.length > 0) {
                        this.style.borderColor = '#fd7e14';
                    } else {
                        this.style.borderColor = '#dee2e6';
                    }
                });

                // إعداد الحقول المملوءة مسبقاً
                if (input.value && input.value.length > 0) {
                    input.style.borderColor = '#fd7e14';
                }
            });

            // معالجة إرسال النموذج
            form.addEventListener('submit', function(e) {
                if (ViewBag.IsEditingSelf != null && (bool)ViewBag.IsEditingSelf)
                    {
                // التحقق من تطابق كلمات المرور (فقط إذا كانت موجودة)
                const newPassword = document.getElementById('NewPassword');
                const confirmPassword = document.getElementById('ConfirmNewPassword');

                if (newPassword && confirmPassword) {
                    if (newPassword.value && newPassword.value !== confirmPassword.value) {
                        e.preventDefault();
                        alert('كلمة المرور الجديدة وتأكيد كلمة المرور غير متطابقين');
                        confirmPassword.focus();
                        return;
                    }
                }
                }
                // تأثير التحميل
                saveBtn.classList.add('btn-loading');
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري الحفظ...';
                saveBtn.disabled = true;

                // منع الإرسال المتكرر
                setTimeout(() => {
                    const allButtons = document.querySelectorAll('.btn');
                    allButtons.forEach(btn => btn.style.pointerEvents = 'none');
                }, 100);
            });

            // تأثيرات تفاعلية للأزرار
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    if (!this.classList.contains('btn-loading')) {
                        this.style.transform = 'translateY(-2px)';
                    }
                });

                button.addEventListener('mouseleave', function() {
                    if (!this.classList.contains('btn-loading')) {
                        this.style.transform = 'translateY(0)';
                    }
                });
            });

            // تحسين تجربة الـ checkbox
            const checkbox = document.getElementById('IsActive');
            const checkboxLabel = document.querySelector('label[for="IsActive"]');

            if (checkbox && checkboxLabel) {
                checkboxLabel.addEventListener('click', function() {
                    checkbox.checked = !checkbox.checked;
                });
            }
        });

        // إظهار تأكيد عند محاولة الخروج مع وجود تغييرات غير محفوظة
        let formChanged = false;
        const formInputs = document.querySelectorAll('#editUserForm input, #editUserForm select, #editUserForm textarea');

        formInputs.forEach(input => {
            input.addEventListener('change', function() {
                formChanged = true;
            });
        });

        window.addEventListener('beforeunload', function(e) {
            if (formChanged) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // إزالة التحذير عند الحفظ
        document.getElementById('editUserForm').addEventListener('submit', function() {
            formChanged = false;
        });
    </script>
</body>
</html>