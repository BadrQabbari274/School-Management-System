@model StudentManagementSystem.Models.Class

@{
    ViewData["Title"] = "تفاصيل الفصل";
}



<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
            margin: 0;
            padding: 0;
        }

        .header-section {
            background: (135deg, #ff6b35, #ffff); /* Orange gradient */
            color: #ff6b35;
            padding: 25px 0;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            position: relative; /* For positioning back button */
        }

        .header-title {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            text-align: center; /* Centered the title */
            letter-spacing: 1px;
        }

        .back-button {
            position: absolute;
            right: 25px;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(255,255,255,0.2);
            border: none;
            color: white;
            padding: 10px 18px; /* Slightly adjusted padding */
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .back-button:hover {
                background: rgba(255,255,255,0.3);
                color: white;
                transform: translateY(-50%) scale(1.05); /* Slight scale effect */
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #6c757d, #495057); /* Dark gray gradient for header */
            color: white;
            padding: 25px 30px;
            border-bottom: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 15px 15px 0 0;
        }

        .card-title {
            font-size: 26px;
            font-weight: bold;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-title i {
                font-size: 28px;
            }

        .card-tools {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

            .card-tools .btn {
                padding: 10px 20px;
                border-radius: 8px;
                font-weight: 600;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s ease;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                color: white; /* Default for gradient buttons */
            }

            .card-tools .btn-warning {
                background: linear-gradient(135deg, #ffc107, #e0a800); /* Yellow gradient */
                color: #333; /* Darker text for contrast */
            }

                .card-tools .btn-warning:hover {
                    background: linear-gradient(135deg, #e0a800, #c69500);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(255, 193, 7, 0.3);
                }

            .card-tools .btn-secondary {
                background: linear-gradient(135deg, #6c757d, #5a6268); /* Darker grey gradient */
            }

                .card-tools .btn-secondary:hover {
                    background-color: #e2e6ea; /* Light grey on hover */
                    border-color: #545b62; /* Darker grey on hover */
                    color: #545b62; /* Darker grey text on hover */
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(108, 117, 125, 0.3);
                }

            .card-tools .btn-success {
                background: linear-gradient(135deg, #28a745, #20c997); /* Green gradient */
            }

                .card-tools .btn-success:hover {
                    background-color: #e6ffe6; /* Light green on hover */
                    border-color: #218838; /* Darker green on hover */
                    color: #218838; /* Darker green text on hover */
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
                }

        .card-body {
            padding: 30px;
        }

        .info-box {
            display: flex;
            align-items: center;
            background-color: #f0f2f5; /* Light grey background for info boxes */
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: transform 0.2s ease;
        }

            .info-box:hover {
                transform: translateY(-3px);
            }

        .info-box-icon {
            width: 60px;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            font-size: 28px;
            color: white;
            flex-shrink: 0;
            margin-left: 20px;
        }

            /* Specific icon background colors */
            .info-box-icon.bg-primary {
                background: linear-gradient(135deg, #007bff, #0056b3);
            }

            .info-box-icon.bg-info {
                background: linear-gradient(135deg, #17a2b8, #138496);
            }

            .info-box-icon.bg-success {
                background: linear-gradient(135deg, #28a745, #20c997);
            }

            .info-box-icon.bg-warning {
                background: linear-gradient(135deg, #ffc107, #e0a800);
            }

            .info-box-icon.bg-danger {
                background: linear-gradient(135deg, #dc3545, #c82333);
            }

            .info-box-icon.bg-secondary {
                background: linear-gradient(135deg, #6c757d, #5a6268);
            }

        .info-box-content {
            flex-grow: 1;
            text-align: right;
        }

        .info-box-text {
            display: block;
            font-size: 16px;
            color: #666;
            margin-bottom: 5px;
        }

        .info-box-number {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .badge {
            padding: 8px 12px;
            font-size: 14px;
            font-weight: 600;
            border-radius: 5px;
        }

        .students-table-card .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3); /* Blue gradient for students header */
        }

        .students-table-card .card-title {
            color: white;
        }

        .students-table-card .table {
            width: 100%;
            border-collapse: collapse;
        }

            .students-table-card .table th,
            .students-table-card .table td {
                padding: 15px;
                text-align: center;
                border-bottom: 1px solid #eee;
            }

            .students-table-card .table th {
                background-color: #fff8f5; /* Very light orange for table header background */
                font-weight: bold;
                color: #555;
                font-size: 15px;
            }

            .students-table-card .table tbody tr:hover {
                background-color: #fffaf7; /* Lighter orange on row hover */
            }

        .alert-info {
            background-color: #fff5ee; /* Light orange for info alert */
            color: #cc5200; /* Darker orange text */
            border: 1px solid #ffeadb; /* Orange border */
            padding: 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 16px;
        }

            .alert-info h5 {
                margin: 0;
                font-size: 18px;
                font-weight: bold;
            }

            .alert-info i {
                font-size: 24px;
            }

        .alert-success {
            background-color: #e6ffe6; /* Retained original light green */
            color: #1a6d2f; /* Dark green */
            border: 1px solid #b3ffb3; /* Green border */
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background-color: #ffe6e6; /* Retained original light red */
            color: #b32d2d; /* Dark red */
            border: 1px solid #ffb3b3; /* Red border */
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .student-code-column {
            font-weight: bold;
            color: #000; /* Black for student code */
            font-family: 'Courier New', monospace;
        }

        .badge.bg-primary {
            background-color: #000 !important; /* Black for student code badge */
            color: white;
        }

        .badge.bg-secondary {
            background-color: #ccc !important; /* Keep a light gray for "not generated" */
            color: #555;
        }


        .student-actions {
            display: flex;
            gap: 5px;
            justify-content: center;
            align-items: center;
        }

            .student-actions .btn {
                padding: 5px 10px;
                font-size: 12px;
                border-radius: 5px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 5px;
                transition: all 0.3s ease;
                background-color: white; /* White background for action buttons */
                color: #ff6b35; /* Orange text for action buttons */
                border: 1px solid #ff6b35; /* Orange border for action buttons */
            }

            .student-actions .btn-info:hover {
                background-color: #fff5ee; /* Light orange on hover */
                border-color: #e0522a; /* Darker orange on hover */
                color: #e0522a; /* Darker orange text on hover */
                transform: translateY(-1px);
            }

            .student-actions .btn-warning:hover {
                background-color: #fff5ee; /* Light orange on hover */
                border-color: #e0522a; /* Darker orange on hover */
                color: #e0522a; /* Darker orange text on hover */
                transform: translateY(-1px);
            }

            .student-actions .btn-danger:hover {
                background-color: #fff5ee; /* Light orange on hover */
                border-color: #e0522a; /* Darker orange on hover */
                color: #e0522a; /* Darker orange text on hover */
                transform: translateY(-1px);
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .header-title {
                font-size: 24px;
            }

            .back-button {
                padding: 8px 12px;
                font-size: 14px;
                gap: 5px;
                right: 15px;
            }

            .card-header {
                flex-direction: column;
                align-items: flex-start;
                padding: 20px;
            }

            .card-title {
                font-size: 20px;
                margin-bottom: 15px;
            }

            .card-tools {
                width: 100%;
                flex-wrap: wrap;
                justify-content: space-around;
            }

            .card-tools .btn {
                width: 48%; /* Make buttons take up more space */
                justify-content: center;
                font-size: 14px;
                padding: 8px 15px;
                margin-bottom: 10px;
            }

            .info-box {
                flex-direction: column;
                text-align: center;
                padding: 15px;
            }

        .info-box-icon {
            margin: 0 0 10px 0; /* Center icon above text */
        }

            .info-box-content {
                text-align: center;
            }

            .info-box-text {
                font-size: 14px;
            }

            .info-box-number {
                font-size: 20px;
            }

            .students-table-card .table th,
            .students-table-card .table td {
                padding: 10px;
                font-size: 13px;
            }

            .student-actions {
                flex-direction: column;
                gap: 3px;
            }

                .student-actions .btn {
                    width: 100%;
                    justify-content: center;
                }
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container position-relative">
            <h1 class="header-title">تفاصيل الفصل</h1>
            <a href="@Url.Action("Index")" class="back-button">
                <i class="fas fa-arrow-right"></i> العودة للقائمة
            </a>
        </div>
    </div>

    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-info-circle"></i> معلومات الفصل
                </h3>
                <div class="card-tools">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> تعديل
                    </a>

                    @if (Model.Students != null && Model.Students.Any())
                    {
                        @if (Model.Students.All(s => string.IsNullOrEmpty(s.Code)))
                        {
                            <form method="post" action="@Url.Action("GenerateStudentCodes")" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="classId" value="@Model.Id" />
                                <button type="submit" class="btn btn-success" onclick="return confirm('هل تريد تأكيد اكتمال الفصل؟ لا يمكن التراجع عن هذه العملية.')">
                                    <i class="fas fa-code"></i>تأكيد اكتمال الفصل
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-secondary" disabled>
                                <i class="fas fa-check"></i> تم توليد الأكواد
                            </button>
                        }
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary">
                                <i class="fas fa-graduation-cap"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">اسم الفصل</span>
                                <span class="info-box-number">@Model.Name</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-info">
                                <i class="fas fa-bookmark"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">التخصص</span>
                                <span class="info-box-number">@(Model.Field?.Name ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-success">
                                <i class="fas fa-user"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">أنشأ بواسطة</span>
                                <span class="info-box-number">@(Model.CreatedByUser?.Name ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-warning">
                                <i class="fas fa-calendar"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">تاريخ الإنشاء</span>
                                <span class="info-box-number">@Model.Date.ToString("dd/MM/yyyy - hh:mm tt")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-danger">
                                <i class="fas fa-users"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">عدد الطلاب</span>
                                <span class="info-box-number">@(Model.Students?.Count ?? 0)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                <i class="fas fa-@(Model.IsActive ? "check-circle" : "times-circle")"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">الحالة</span>
                                <span class="info-box-number">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غير نشط</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Students != null && Model.Students.Any())
                {
                    <div class="card mt-4 students-table-card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fas fa-user-graduate"></i> الطلاب في هذا الفصل</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>الرقم التعريفي للطالب</th>
                                            <th>الاسم</th>
                                            <th>البريد الإلكتروني</th>
                                            <th>كود الطالب</th>
                                            <th>العمليات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var student in Model.Students)
                                        {
                                            <tr>
                                                <td>@student.Id</td>
                                                <td>@student.Name</td>
                                                <td>@student.Email</td>
                                                <td class="student-code-column">
                                                    @if (!string.IsNullOrEmpty(student.Code))
                                                    {
                                                        <span class="badge bg-primary">@student.Code</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">لم يتم الإنشاء</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="student-actions">
                                                        <a href="@Url.Action("Details", "Student", new { id = student.Id })" class="btn btn-info">
                                                            <i class="fas fa-eye"></i> عرض
                                                        </a>
                                                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-warning">
                                                            <i class="fas fa-edit"></i> تعديل
                                                        </a>
                                                        <form method="post" action="@Url.Action("Delete", "Student")" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@student.Id" />
                                                            <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من حذف هذا الطالب؟')">
                                                                <i class="fas fa-trash"></i> حذف
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <h5>لا يوجد طلاب في هذا الفصل</h5>
                            <p>لم يتم تسجيل أي طلاب في هذا الفصل بعد. يمكنك إضافة طلاب جدد من خلال قسم إدارة الطلاب.</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>