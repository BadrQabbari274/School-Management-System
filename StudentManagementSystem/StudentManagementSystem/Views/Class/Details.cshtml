@model StudentManagementSystem.ViewModels.ClassDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل الفصل";
}
<head>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
            margin: 0;
            padding: 0;
        }

        .header-section {
            color: black;
            padding: 25px 0;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            position: relative;
        }

        .header-title {
            font-size: 32px;
            font-weight: bold;
            margin: 0;
            text-align: center;
            letter-spacing: 1px;
        }

        .back-button {
            position: absolute;
            right: 25px;
            top: 50%;
            transform: translateY(-50%);
            background: linear-gradient(135deg, #ff8a50, #ff6f3f);
            border: none;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .back-button:hover {
                background: linear-gradient(135deg, #ff6f3f, #e05e3a);
                color: white;
                transform: translateY(-50%) scale(1.05);
            }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #ff8a50, #ff6f3f);
            color: white;
            padding: 25px 30px;
            border-bottom: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-radius: 15px 15px 0 0;
        }

        .card-title {
            font-size: 26px;
            font-weight: bold;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-title i {
                font-size: 28px;
                color: white;
            }

        .card-tools {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

            .card-tools .btn {
                padding: 10px 20px;
                border-radius: 8px;
                font-weight: 600;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 8px;
                transition: all 0.3s ease;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
                color: white;
                border: none;
            }

            .card-tools .btn-warning {
                background: linear-gradient(135deg, #ffc107, #e0a800);
                color: #333;
            }

                .card-tools .btn-warning:hover {
                    background: linear-gradient(135deg, #e0a800, #c69500);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(255, 193, 7, 0.3);
                }

            .card-tools .btn-secondary {
                background: linear-gradient(135deg, #6c757d, #5a6268);
            }

                .card-tools .btn-secondary:hover {
                    background: linear-gradient(135deg, #5a6268, #495057);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(108, 117, 125, 0.3);
                }

            .card-tools .btn-success {
                background: linear-gradient(135deg, #28a745, #20c997);
            }

                .card-tools .btn-success:hover {
                    background: linear-gradient(135deg, #20c997, #17a085);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(40, 167, 69, 0.3);
                }

            .card-tools .btn-danger {
                background: linear-gradient(135deg, #dc3545, #c82333);
            }

                .card-tools .btn-danger:hover {
                    background: linear-gradient(135deg, #c82333, #a71e2a);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
                }

            .card-tools .btn:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none !important;
                box-shadow: none !important;
            }

        .card-body {
            padding: 30px;
        }

        .info-box {
            display: flex;
            align-items: center;
            background-color: #f0f2f5;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: transform 0.2s ease;
        }

            .info-box:hover {
                transform: translateY(-3px);
            }

        .info-box-icon {
            width: 60px;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            font-size: 28px;
            color: white;
            flex-shrink: 0;
            margin-left: 20px;
        }

            .info-box-icon.bg-primary {
                background: linear-gradient(135deg, #007bff, #0056b3);
            }

            .info-box-icon.bg-info {
                background: linear-gradient(135deg, #17a2b8, #138496);
            }

            .info-box-icon.bg-success {
                background: linear-gradient(135deg, #28a745, #20c997);
            }

            .info-box-icon.bg-warning {
                background: linear-gradient(135deg, #ffc107, #e0a800);
            }

            .info-box-icon.bg-danger {
                background: linear-gradient(135deg, #dc3545, #c82333);
            }

            .info-box-icon.bg-secondary {
                background: linear-gradient(135deg, #6c757d, #5a6268);
            }

        .info-box-content {
            flex-grow: 1;
            text-align: right;
        }

        .info-box-text {
            display: block;
            font-size: 16px;
            color: #666;
            margin-bottom: 5px;
        }

        .info-box-number {
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .badge {
            padding: 8px 12px;
            font-size: 14px;
            font-weight: 600;
            border-radius: 5px;
        }

        .students-table-card .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
        }

        .students-table-card .card-title {
            color: white;
        }

        .students-table-card .table {
            width: 100%;
            border-collapse: collapse;
        }

            .students-table-card .table th,
            .students-table-card .table td {
                padding: 15px;
                text-align: center;
                border-bottom: 1px solid #eee;
            }

            .students-table-card .table th {
                background-color: #f8f9fa;
                font-weight: bold;
                color: #555;
                font-size: 15px;
            }

            .students-table-card .table tbody tr:hover {
                background-color: #f5f5f5;
            }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 16px;
        }

            .alert-info h5 {
                margin: 0;
                font-size: 18px;
                font-weight: bold;
            }

            .alert-info i {
                font-size: 24px;
            }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .student-code-column {
            font-weight: bold;
            color: #007bff;
            font-family: 'Courier New', monospace;
        }

        .student-actions {
            display: flex;
            gap: 5px;
            justify-content: center;
            align-items: center;
        }

            .student-actions .btn {
                padding: 5px 10px;
                font-size: 12px;
                border-radius: 5px;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 5px;
                transition: all 0.3s ease;
            }

            .student-actions .btn-info {
                background: linear-gradient(135deg, #17a2b8, #138496);
                color: white;
            }

                .student-actions .btn-info:hover {
                    background: linear-gradient(135deg, #138496, #117a8b);
                    transform: translateY(-1px);
                }

            .student-actions .btn-warning {
                background: linear-gradient(135deg, #ffc107, #e0a800);
                color: #333;
            }

                .student-actions .btn-warning:hover {
                    background: linear-gradient(135deg, #e0a800, #c69500);
                    transform: translateY(-1px);
                }

            .student-actions .btn-danger {
                background: linear-gradient(135deg, #dc3545, #c82333);
                color: white;
            }

                .student-actions .btn-danger:hover {
                    background: linear-gradient(135deg, #c82333, #a71e2a);
                    transform: translateY(-1px);
                }

        .grade-badge {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 12px;
            font-weight: 600;
        }

        .junior-grade {
            background-color: #28a745;
            color: white;
        }

        .other-grade {
            background-color: #6c757d;
            color: white;
        }

        .gender-badge {
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 8px;
            font-weight: 500;
        }

        .male-badge {
            background-color: #007bff;
            color: white;
        }

        .female-badge {
            background-color: #e83e8c;
            color: white;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .header-title

        {
            font-size: 24px;
        }

        .back-button {
            padding: 8px 12px;
            font-size: 14px;
            gap: 5px;
            right: 15px;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
            padding: 20px;
        }

        .card-title {
            font-size: 20px;
            margin-bottom: 15px;
        }

        .card-tools {
            width: 100%;
            flex-wrap: wrap;
            justify-content: space-around;
        }

            .card-tools .btn {
                width: 48%;
                justify-content: center;
                font-size: 14px;
                padding: 8px 15px;
                margin-bottom: 10px;
            }

        .info-box {
            flex-direction: column;
            text-align: center;
            padding: 15px;
        }

        .info-box-icon {
            margin: 0 0 10px 0;
        }

        .info-box-content {
            text-align: center;
        }

        .info-box-text {
            font-size: 14px;
        }

        .info-box-number {
            font-size: 20px;
        }

        .students-table-card .table th,
        .students-table-card .table td {
            padding: 10px;
            font-size: 13px;
        }

        .student-actions {
            flex-direction: column;
            gap: 3px;
        }

            .student-actions .btn {
                width: 100%;
                justify-content: center;
            }

        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container position-relative">
            <h1 class="header-title">تفاصيل الفصل</h1>
            <a href="@Url.Action("Index")" class="back-button">
                <i class="fas fa-arrow-right"></i> العودة للقائمة
            </a>
        </div>
    </div>

    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-info-circle"></i> معلومات الفصل
                </h3>
                <div class="card-tools">
                    <a href="@Url.Action("Edit", new { id = Model.Class.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> تعديل
                    </a>

                    @if (Model.Class.Grade.Name.ToLower().Contains("junior"))
                    {
                        @if (Model.StudentsInClass != null && Model.StudentsInClass.Any())
                        {
                            @if (Model.StudentsInClass.All(s => string.IsNullOrEmpty(s.Student.Code)))
                            {
                                <form method="post" action="@Url.Action("GenerateStudentCodes")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="classId" value="@Model.Class.Id" />
                                    <button type="submit" class="btn btn-success" onclick="return confirm('هل تريد تأكيد توليد الأكواد للطلاب؟ سيتم ترتيب الطلاب حسب الجنس والاسم.')">
                                        <i class="fas fa-code"></i> توليد أكواد الطلاب
                                    </button>
                                </form>
                            }
                            else if (Model.StudentsInClass.Any(s => !string.IsNullOrEmpty(s.Student.Code)))
                            {
                                <button type="button" class="btn btn-secondary" disabled>
                                    <i class="fas fa-check"></i> تم تأكيد الفصل
                                </button>

                                <form method="post" action="@Url.Action("ResetStudentCodes")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="classId" value="@Model.Class.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('تحذير: هذا سيؤدي إلى إعادة تعيين الأكواد للطلاب. هل أنت متأكد من المتابعة؟')">
                                        <i class="fas fa-redo"></i> إعادة تاكيد الفصل
                                    </button>
                                </form>
                            }
                        }
                    }
                    
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary">
                                <i class="fas fa-graduation-cap"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">اسم الفصل</span>
                                <span class="info-box-number">@Model.Class.Name</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-info">
                                <i class="fas fa-bookmark"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">المرحلة الدراسية</span>
                                <span class="info-box-number">@Model.Class.Grade.Name</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-success">
                                <i class="fas fa-user"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">أنشأ بواسطة</span>
                                <span class="info-box-number">@(Model.Class.CreatedBy?.Name ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-warning">
                                <i class="fas fa-calendar"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">تاريخ الإنشاء</span>
                                <span class="info-box-number">@Model.Class.Date.ToString("dd/MM/yyyy - hh:mm tt")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon @(Model.Class.IsActive ? "bg-success" : "bg-secondary")">
                                <i class="fas fa-@(Model.Class.IsActive ? "check-circle" : "times-circle")"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">الحالة</span>
                                <span class="info-box-number">
                                    @if (Model.Class.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غير نشط</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-danger">
                                <i class="fas fa-users"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">عدد الطلاب الحاليين</span>
                                <span class="info-box-number">@(Model.StudentsInClass?.Count() ?? 0) / @(Model.Class.MaxStudents ?? 25)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-secondary">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">العام الدراسي الحالي</span>
                                <span class="info-box-number">@(Model.CurrentWorkingYear?.Name ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                   @*  <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary">
                                <i class="fas fa-users-cog"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text">طلاب المرحلة الإعدادية</span>
                                <span class="info-box-number">@(Model.JuniorStudentsCount)</span>
                            </div>
                        </div>
                    </div> *@
                </div>

                @if (Model.StudentsInClass != null && Model.StudentsInClass.Any())
                {
                    <div class="card mt-4 students-table-card">
                        <div class="card-header">
                            <h4 class="card-title"><i class="fas fa-user-graduate"></i> الطلاب في هذا الفصل (@Model.CurrentWorkingYear?.Name)</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>الرقم</th>
                                            <th>الاسم</th>
                                            <th>الجنس</th>
                                            <th>المرحلة الدراسية</th>
                                            <th>البريد الإلكتروني</th>
                                            <th>كود الطالب</th>
                                            <th>العمليات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int counter = 1;
                                        }
                                        @foreach (var studentClass in Model.StudentsInClass)
                                        {
                                            var student = studentClass.Student;
                                            var studentGrade = Model.StudentGrades?.FirstOrDefault(sg => sg.StudentId == student.Id);
                                            var isJunior = studentGrade?.Grade?.Name?.ToLower().Contains("junior") ?? false;
                                            var gender = Model.GetGenderFromNationalId(student.Natrual_Id);

                                            <tr>
                                                <td>@counter</td>
                                                <td>@student.Name</td>
                                                <td>
                                                    <span class="gender-badge @(gender == 0 ? "male-badge" : "female-badge")">
                                                        @(gender == 0 ? "ذكر" : "أنثى")
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="grade-badge @(isJunior ? "junior-grade" : "other-grade")">
                                                        @(studentGrade?.Grade?.Name ?? "غير محدد")
                                                    </span>
                                                </td>
                                                <td>@student.Email</td>
                                                <td class="student-code-column">
                                                    @if (!string.IsNullOrEmpty(student.Code))
                                                    {
                                                        <span class="badge bg-primary">@student.Code</span>
                                                    }
                                                    else
                                                    {
                                                        @if (isJunior)
                                                        {
                                                            <span class="badge bg-warning">لا يوجد له كود</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">غير مؤهل</span>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <div class="student-actions">
                                                        <a href="@Url.Action("Details", "Student", new { id = student.Id })" class="btn btn-info">
                                                            <i class="fas fa-eye"></i> عرض
                                                        </a>
                                                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" class="btn btn-warning">
                                                            <i class="fas fa-edit"></i> تعديل
                                                        </a>
                                                    </div>
                                                </td>   
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            <h5>لا يوجد طلاب في هذا الفصل</h5>
                            <p>لم يتم تسجيل أي طلاب في هذا الفصل للعام الدراسي الحالي (@(Model.CurrentWorkingYear?.Name ?? "غير محدد")). يمكنك إضافة طلاب جدد من خلال قسم إدارة الطلاب.</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>