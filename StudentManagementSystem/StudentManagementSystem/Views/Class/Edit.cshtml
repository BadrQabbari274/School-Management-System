@model StudentManagementSystem.Models.Class

@{
    ViewData["Title"] = "تعديل الفصل";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تعديل الفصل</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            direction: rtl;
        }

        .card {
            border-radius: 20px;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #ff8a50 0%, #ff6b35 100%) !important;
            border: none;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #ff8a50;
                box-shadow: 0 0 0 0.2rem rgba(255, 138, 80, 0.25);
            }

        .btn-warning {
            background: linear-gradient(135deg, #ff8a50 0%, #ff6b35 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 24px;
            transition: all 0.3s ease;
            color: white;
        }

            .btn-warning:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(255, 138, 80, 0.4);
                color: white;
            }

        .btn-outline-secondary {
            border-radius: 10px;
            padding: 12px 24px;
            transition: all 0.3s ease;
        }

        .form-check-input:checked {
            background-color: #ff8a50;
            border-color: #ff8a50;
        }

        .text-warning {
            color: #ff8a50 !important;
        }

        .form-label {
            margin-bottom: 8px;
            font-size: 1.1rem;
        }

        .form-control[readonly] {
            background-color: #f8f9fa;
            color: #6c757d;
        }

        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }

        /* RTL Support */
        [dir="rtl"] .me-2 {
            margin-right: 0 !important;
            margin-left: 0.5rem !important;
        }

        /* Custom validation styles */
        .validation-summary-errors {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-right: 20px;
            }

        /* Demo styles */
        .demo-container {
            min-height: 100vh;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <div class="demo-container">
        <div class="container-fluid p-4">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card border-0 shadow-lg">
                        <div class="card-header bg-warning text-white text-center py-4">
                            <h3 class="mb-0 fw-bold">
                                <i class="fas fa-edit me-2"></i>تعديل الفصل
                            </h3>
                        </div>

                        <div class="card-body p-5">
                            <!-- Success Message Example -->
                            <div class="alert alert-success" style="display: none;" id="successMessage">
                                <i class="fas fa-check-circle"></i>
                                تم تحديث بيانات الفصل بنجاح
                            </div>

                            <form>
                                <!-- Class Name -->
                                <div class="mb-4">
                                    <label class="form-label fw-bold text-warning">
                                        <i class="fas fa-graduation-cap me-2"></i>اسم الفصل
                                    </label>
                                    <input type="text" class="form-control form-control-lg" placeholder="أدخل اسم الفصل" />
                                </div>

                                <!-- Field Selection -->
                                <div class="mb-4">
                                    <label class="form-label fw-bold text-warning">
                                        <i class="fas fa-book me-2"></i>التخصص
                                    </label>
                                    <select class="form-select form-select-lg">
                                        <option value="" selected>-- اختر التخصص --</option>
                                    </select>
                                </div>

                                <!-- Created Date (Read-only) -->
                                <div class="mb-4">
                                    <label class="form-label fw-bold text-muted">
                                        <i class="fas fa-calendar-alt me-2"></i>تاريخ الإنشاء
                                    </label>
                                    <input type="text" class="form-control" value="" readonly />
                                </div>

                                <!-- Submit Buttons -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <button type="button" class="btn btn-warning btn-lg w-100 mb-3" onclick="showSuccess()">
                                            <i class="fas fa-save me-2"></i>تحديث الفصل
                                        </button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="button" class="btn btn-outline-secondary btn-lg w-100">
                                            <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function showSuccess() {
            const successMsg = document.getElementById('successMessage');
            successMsg.style.display = 'block';

            // Auto hide after 3 seconds
            setTimeout(() => {
                successMsg.style.display = 'none';
            }, 3000);
        }

        // Add focus effects
        document.querySelectorAll('.form-control, .form-select').forEach(function(element) {
            element.addEventListener('focus', function() {
                this.style.transform = 'scale(1.02)';
            });

            element.addEventListener('blur', function() {
                this.style.transform = 'scale(1)';
            });
        });

        // Add hover effects to buttons
        document.querySelectorAll('.btn').forEach(function(btn) {
            btn.addEventListener('mouseenter', function() {
                if (this.classList.contains('btn-warning')) {
                    this.style.transform = 'translateY(-2px)';
                    this.style.boxShadow = '0 8px 25px rgba(255, 138, 80, 0.4)';
                }
            });

            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '';
            });
        });
    </script>
</body>
</html>
