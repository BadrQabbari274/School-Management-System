@model StudentManagementSystem.ViewModels.TryIndexViewModel

@{
    ViewData["Title"] = "العناصر";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .header-section {
            background:linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        
        .header-title {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin: 0;
        }
        
        .controls {
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .btn-add {
            background: linear-gradient(135deg, #28a745, #20c997);
            border: none;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
            color: white;
        }
        
        .search-filters {
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
            position: relative;
        }
        
        .search-input-container {
            position: relative;
        }
        
        .search-filters input,
        .search-filters select {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.5rem 1rem 0.5rem 2.5rem;
            transition: border-color 0.3s ease;
            min-width: 250px;
        }
        
        .search-icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 2;
        }
        
        .loading-spinner {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            display: none;
        }
        
        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
            border-width: 0.1em;
        }
        
        .search-filters input:focus,
        .search-filters select:focus {
            border-color: #fd7e14;
            box-shadow: 0 0 0 0.2rem rgba(253, 126, 20, 0.25);
            outline: none;
        }
        
        .courses-table {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .table {
            margin: 0;
        }
        
        .table thead {
            background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
            color: white;
        }
        
        .table th {
            border: none;
            padding: 1rem;
            font-weight: 600;
            text-align: center;
        }
        
        .table td {
            padding: 1rem;
            text-align: center;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.3s ease;
        }
        
        .btn-group .btn {
            border-radius: 6px;
            margin: 0 2px;
            transition: all 0.3s ease;
        }
        
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }
        
        .btn-info:hover {
            background-color: #138496;
            transform: translateY(-1px);
        }
        
        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }
        
        .btn-warning:hover {
            background-color: #e0a800;
            transform: translateY(-1px);
        }
        
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        
        .btn-danger:hover {
            background-color: #c82333;
            transform: translateY(-1px);
        }
        
        .badge {
            font-size: 0.8rem;
            padding: 0.5rem 1rem;
            border-radius: 20px;
        }
        
        .no-data {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 3rem;
        }
        
        .custom-modal .modal-content {
            border-radius: 12px;
            border: none;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }
        
        .custom-modal .modal-header {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border-radius: 12px 12px 0 0;
        }
        
        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 1.5rem;
        }
        
        .alert-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .alert-danger {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
        }
        
        .pagination {
            justify-content: center;
            margin-top: 2rem;
        }
        
        .pagination .page-link {
            border-radius: 8px;
            margin: 0 2px;
            border: 2px solid #e9ecef;
            color: #667eea;
        }
        
        .pagination .page-link:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #667eea;
            border-color: #667eea;
        }
        
        /* تأثيرات البحث المباشر */
        .search-highlight {
            background-color: #fff3cd;
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
            font-weight: bold;
        }
        
        .table-overlay {
            position: relative;
        }
        
        .table-loading {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.8);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 10;
        }
        
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">العناصر</h1>
        </div>
    </div>

    <div class="container">
        <div class="controls">
            <a href="@Url.Action("Create")" class="btn btn-add">
                <i class="fas fa-plus-circle"></i> إضافة عنصر جديد
            </a>
            
            <div class="search-filters">
                <div class="search-input-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="searchInput" value="@Model.SearchTerm" 
                           placeholder="البحث بالاسم..." class="form-control" />
                    <div class="loading-spinner">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">جاري البحث...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="courses-table table-overlay">
            <div class="table-loading">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">جاري التحميل...</span>
                </div>
            </div>
            <table class="table" id="dataTable">
                <thead>
                    <tr>
                        <th>الاسم</th>
                        <th>تاريخ الإنشاء</th>
                        <th>الحالة</th>
                        <th>تم الإنشاء بواسطة</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    @if (Model.Tries != null && Model.Tries.Any())
                    {
                        foreach (var item in Model.Tries)
                        {
                            <tr data-name="@item.Name.ToLower()" data-creator="@item.CreatedByName.ToLower()">
                                <td class="item-name">@item.Name</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشط</span>
                                    }
                                </td>
                                <td class="creator-name">@item.CreatedByName</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.Id })"
                                           class="btn btn-info btn-sm" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" title="حذف"
                                                onclick="showDeleteConfirmation(@item.Id, '@item.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr id="noDataRow">
                            <td colspan="5" class="no-data">لا توجد عناصر متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" id="paginationNav">
                <ul class="pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.PageNumber - 1, 
                                pageSize = Model.PageSize,
                                searchTerm = Model.SearchTerm,
                                isActiveFilter = Model.IsActiveFilter
                            })">السابق</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = i, 
                                pageSize = Model.PageSize,
                                searchTerm = Model.SearchTerm,
                                isActiveFilter = Model.IsActiveFilter
                            })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.PageNumber + 1, 
                                pageSize = Model.PageSize,
                                searchTerm = Model.SearchTerm,
                                isActiveFilter = Model.IsActiveFilter
                            })">التالي</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>

    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف العنصر <strong id="tryNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="Delete" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="tryIdToDelete" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let tryIdToDelete = 0;
        let searchTimeout;

        // البحث المباشر
        const searchInput = document.getElementById('searchInput');
        const tableBody = document.getElementById('tableBody');
        const loadingSpinner = document.querySelector('.loading-spinner');
        const tableLoading = document.querySelector('.table-loading');
        const paginationNav = document.getElementById('paginationNav');
        const noDataRow = document.getElementById('noDataRow');

        // حفظ البيانات الأصلية
        const originalRows = Array.from(tableBody.querySelectorAll('tr')).filter(row => !row.id || row.id !== 'noDataRow');

        function highlightText(text, searchTerm) {
            if (!searchTerm) return text;
            const regex = new RegExp(`(${searchTerm})`, 'gi');
            return text.replace(regex, '<span class="search-highlight">$1</span>');
        }

        function filterTable(searchTerm) {
            const term = searchTerm.toLowerCase().trim();
            let visibleCount = 0;

            originalRows.forEach(row => {
                const name = row.getAttribute('data-name') || '';
                const creator = row.getAttribute('data-creator') || '';
                
                const isVisible = !term || name.includes(term) || creator.includes(term);
                
                if (isVisible) {
                    row.style.display = '';
                    visibleCount++;
                    
                    // تمييز النص المطابق
                    if (term) {
                        const nameCell = row.querySelector('.item-name');
                        const creatorCell = row.querySelector('.creator-name');
                        
                        if (nameCell) {
                            const originalName = nameCell.textContent;
                            nameCell.innerHTML = highlightText(originalName, term);
                        }
                        
                        if (creatorCell) {
                            const originalCreator = creatorCell.textContent;
                            creatorCell.innerHTML = highlightText(originalCreator, term);
                        }
                    } else {
                        // إزالة التمييز
                        const nameCell = row.querySelector('.item-name');
                        const creatorCell = row.querySelector('.creator-name');
                        
                        if (nameCell) {
                            nameCell.innerHTML = nameCell.textContent;
                        }
                        
                        if (creatorCell) {
                            creatorCell.innerHTML = creatorCell.textContent;
                        }
                    }
                    
                    // تأثير الظهور
                    row.classList.add('fade-in');
                } else {
                    row.style.display = 'none';
                    row.classList.remove('fade-in');
                }
            });

            // إظهار/إخفاء رسالة عدم وجود بيانات
            if (noDataRow) {
                if (visibleCount === 0 && originalRows.length > 0) {
                    noDataRow.style.display = '';
                    noDataRow.innerHTML = '<td colspan="5" class="no-data">لا توجد نتائج للبحث المحدد</td>';
                } else {
                    noDataRow.style.display = 'none';
                }
            }

            // إخفاء التقسيم أثناء البحث
            if (paginationNav) {
                paginationNav.style.display = term ? 'none' : 'block';
            }
        }

        function performSearch() {
            const searchTerm = searchInput.value;
            
            // إظهار مؤشر التحميل
            loadingSpinner.style.display = 'block';
            
            // محاكاة تأخير البحث للتأثير البصري
            setTimeout(() => {
                filterTable(searchTerm);
                loadingSpinner.style.display = 'none';
            }, 200);
            
            // تحديث URL بدون إعادة تحميل الصفحة
            const url = new URL(window.location);
            if (searchTerm) {
                url.searchParams.set('searchTerm', searchTerm);
            } else {
                url.searchParams.delete('searchTerm');
            }
            window.history.replaceState({}, '', url);
        }

        // إضافة مستمع الأحداث للبحث المباشر
        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            
            // تأخير صغير لتجنب البحث المفرط أثناء الكتابة السريعة
            searchTimeout = setTimeout(performSearch, 300);
        });

        // البحث عند الضغط على Enter
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                clearTimeout(searchTimeout);
                performSearch();
            }
        });

        // تطبيق البحث الأولي إذا كان هناك مصطلح بحث في URL
        if (searchInput.value) {
            filterTable(searchInput.value);
        }

        function showDeleteConfirmation(id, name) {
            tryIdToDelete = id;
            document.getElementById('tryNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            const form = document.getElementById('deleteForm');
            document.getElementById('tryIdToDelete').value = tryIdToDelete;

            // إظهار مؤشر التحميل
            tableLoading.style.display = 'flex';

            try {
                const response = await fetch(form.action, {
                    method: form.method,
                    body: new FormData(form)
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('حدث خطأ أثناء حذف العنصر. يرجى المحاولة مرة أخرى.');
                    console.error('Delete failed with status:', response.status);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف العنصر. يرجى فحص اتصال الشبكة.');
                console.error('Error during fetch:', error);
            } finally {
                tableLoading.style.display = 'none';
            }
        });

        // تحسين أداء البحث بإضافة debouncing محسن
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // استبدال مستمع الأحداث بنسخة محسنة
        searchInput.removeEventListener('input', performSearch);
        searchInput.addEventListener('input', debounce(performSearch, 250));
    </script>
</body>
</html>