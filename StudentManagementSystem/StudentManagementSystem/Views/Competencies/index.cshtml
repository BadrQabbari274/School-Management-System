@model StudentManagementSystem.ViewModels.CompetenciesIndexViewModel

@{
    ViewData["Title"] = "إدارة الجدارات";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .details-btn {
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
            border-top-right-radius: 0.5rem !important;
            border-bottom-right-radius: 0.5rem !important;
        }

        .delete-btn {
            border-top-right-radius: 0 !important;
            border-bottom-right-radius: 0 !important;
            border-top-left-radius: 0.5rem !important;
            border-bottom-left-radius: 0.5rem !important;
        }

        /* إضافة أنماط البحث المباشر */
        .live-search-container {
            position: relative;
            margin-bottom: 1rem;
        }
        
        .live-search-input {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 0.5rem 1rem 0.5rem 2.5rem;
            transition: border-color 0.3s ease;
            min-width: 300px;
        }
        
        .live-search-icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 2;
        }
        
        .live-search-loading {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            display: none;
        }
        
        .live-search-spinner {
            width: 1rem;
            height: 1rem;
            border-width: 0.1em;
        }
        
        .live-search-input:focus {
            border-color: #fd7e14;
            box-shadow: 0 0 0 0.2rem rgba(253, 126, 20, 0.25);
            outline: none;
        }
        
        /* تمييز النص المطابق */
        .search-highlight {
            background-color: #fff3cd;
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
            font-weight: bold;
            color: #856404;
        }
        
        /* تأثير الظهور */
        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        /* تحسين مظهر الجدول */
        .table tbody tr:hover {
            background-color: #f8f9fa;
            transition: background-color 0.3s ease;
        }
        .live-search-container {
    position: relative;
    max-width: 400px; /* Adjust this value as needed */
    margin: auto; /* Center the container */
}

.live-search-input {
    padding-left: 40px; /* Ensure space for the icon */
    height: 40px; /* You can reduce the height as well */
}

        /* رسالة عدم وجود نتائج */
        .no-results {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 2rem;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">إدارة الجدارات</h1>
        </div>
    </div>

    <div class="container">
       
        <!-- Filters Section -->
<div class="card-body">
    <div class="controls d-flex justify-content-between align-items-center">
        <div class="search-filters">
            <form method="get" asp-action="Index" id="filterForm">
                <div class="live-search-container">
                    <i class="fas fa-search live-search-icon"></i>
                    <input type="text" id="liveSearchInput" value="@Model.SearchTerm"
                           placeholder="ابحث في أسماء الجدارات..." class="form-control live-search-input" />
                    <div class="live-search-loading">
                        <div class="spinner-border live-search-spinner text-primary" role="status">
                            <span class="visually-hidden">جاري البحث...</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <a asp-action="Create" class="btn btn-add">
            <i class="fas fa-plus-circle"></i> إضافة جدارة جديدة
        </a>
    </div>
</div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="courses-table">
            <table class="table" id="competenciesTable">
                <thead>
                    <tr>
                        <th>الرقم</th>
                        <th>اسم الجدارة</th>
                        <th>المدة</th>
                        <th>القسم</th>
                        <th>الحد الأقصى للنتائج</th>
                        <th>أنشئت بواسطة</th>
                        <th>تاريخ الإنشاء</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody id="competenciesTableBody">
                    @if (Model.Competencies != null && Model.Competencies.Any())
                    {
                        int counter = ((Model.PageNumber - 1) * Model.PageSize) + 1;
                        foreach (var item in Model.Competencies)
                        {
                            <tr id="row-@item.Id" data-competency-name="@item.Name.ToLower()" class="competency-row">
                                <td>@counter</td>
                                <td>
                                    <strong class="competency-name-cell">@item.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Duration</span>
                                </td>
                                <td>@item.SectionName</td>
                                <td>
                                    <span class="badge bg-primary">@item.Max_Outcome</span>
                                </td>
                                <td>@item.CreatedByName</td>
                                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm details-btn" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm delete-btn" title="حذف"
                                                onclick="showDeleteConfirmation(@item.Id, '@item.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            counter++;
                        }
                    }
                    else
                    {
                        <tr id="noDataRow">
                            <td colspan="8" class="no-data">لا توجد جدارات متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <!-- صف لعرض رسالة عدم وجود نتائج -->
            <div id="noResultsMessage" class="no-results" style="display: none;">
                <i class="fas fa-search me-2"></i>
                لا توجد نتائج للبحث المحدد
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalCount > Model.PageSize)
        {
            <div class="d-flex justify-content-center mt-4" id="paginationSection">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { 
                                       page = i, 
                                       pageSize = Model.PageSize, 
                                       searchTerm = Model.SearchTerm, 
                                       sectionFilter = Model.SectionFilter, 
                                       isActiveFilter = Model.IsActiveFilter 
                                   })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>

    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف الجدارة <strong id="competencyNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="DeleteConfirmed" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="competencyIdToDelete" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let competencyIdToDelete = 0;
        let searchTimeout;

        // عناصر البحث المباشر
        const liveSearchInput = document.getElementById('liveSearchInput');
        const tableBody = document.getElementById('competenciesTableBody');
        const loadingSpinner = document.querySelector('.live-search-loading');
        const paginationSection = document.getElementById('paginationSection');
        const noResultsMessage = document.getElementById('noResultsMessage');
        const noDataRow = document.getElementById('noDataRow');

        // حفظ الصفوف الأصلية (استبعاد صف عدم وجود بيانات)
        const originalRows = Array.from(tableBody.querySelectorAll('.competency-row'));

        // دالة لتمييز النص المطابق
        function highlightText(text, searchTerm) {
            if (!searchTerm) return text;
            const regex = new RegExp(`(${searchTerm})`, 'gi');
            return text.replace(regex, '<span class="search-highlight">$1</span>');
        }

        // دالة تصفية الجدول
        function filterCompetencies(searchTerm) {
            const term = searchTerm.toLowerCase().trim();
            let visibleCount = 0;

            originalRows.forEach((row, index) => {
                const competencyName = row.getAttribute('data-competency-name') || '';
                const isVisible = !term || competencyName.includes(term);
                
                if (isVisible) {
                    row.style.display = '';
                    visibleCount++;
                    
                    // تمييز النص المطابق في اسم الجدارة
                    if (term) {
                        const nameCell = row.querySelector('.competency-name-cell');
                        if (nameCell) {
                            const originalName = nameCell.textContent;
                            nameCell.innerHTML = highlightText(originalName, term);
                        }
                    } else {
                        // إزالة التمييز
                        const nameCell = row.querySelector('.competency-name-cell');
                        if (nameCell) {
                            nameCell.innerHTML = nameCell.textContent;
                        }
                    }
                    
                    // تأثير الظهور
                    row.classList.add('fade-in');
                    
                    // إعادة ترقيم الصفوف المرئية
                    const numberCell = row.cells[0];
                    numberCell.textContent = visibleCount;
                } else {
                    row.style.display = 'none';
                    row.classList.remove('fade-in');
                }
            });

            // إدارة رسالة عدم وجود نتائج
            if (visibleCount === 0 && originalRows.length > 0) {
                if (noDataRow) noDataRow.style.display = 'none';
                noResultsMessage.style.display = 'block';
            } else {
                noResultsMessage.style.display = 'none';
                if (noDataRow && originalRows.length === 0) {
                    noDataRow.style.display = '';
                }
            }

            // إخفاء/إظهار التقسيم (Pagination)
            if (paginationSection) {
                paginationSection.style.display = term ? 'none' : 'flex';
            }
        }

        // دالة تنفيذ البحث مع التأثيرات البصرية
        function performLiveSearch() {
            const searchTerm = liveSearchInput.value;
            
            // إظهار مؤشر التحميل
            loadingSpinner.style.display = 'block';
            
            // تأخير صغير للتأثير البصري
            setTimeout(() => {
                filterCompetencies(searchTerm);
                loadingSpinner.style.display = 'none';
            }, 150);
            
            // تحديث URL بدون إعادة تحميل الصفحة
            const url = new URL(window.location);
            if (searchTerm) {
                url.searchParams.set('searchTerm', searchTerm);
            } else {
                url.searchParams.delete('searchTerm');
            }
            window.history.replaceState({}, '', url);
        }

        // دالة debounce لتحسين الأداء
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // إضافة مستمعي الأحداث للبحث المباشر
        liveSearchInput.addEventListener('input', debounce(performLiveSearch, 200));

        // البحث عند الضغط على Enter
        liveSearchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                clearTimeout(searchTimeout);
                performLiveSearch();
            }
        });

        // تطبيق البحث الأولي إذا كان هناك مصطلح بحث
        if (liveSearchInput.value) {
            filterCompetencies(liveSearchInput.value);
        }

        $(document).ready(function () {
            // Initialize DataTable
            $('#competenciesTable').DataTable({
                "language": {
                    "search": "البحث:",
                    "lengthMenu": "عرض _MENU_ عنصر في الصفحة",
                    "info": "عرض _START_ إلى _END_ من _TOTAL_ عنصر",
                    "infoEmpty": "لا توجد عناصر للعرض",
                    "infoFiltered": "(تمت تصفيته من _MAX_ عنصر إجمالي)",
                    "paginate": {
                        "first": "الأول",
                        "last": "الأخير",
                        "next": "التالي",
                        "previous": "السابق"
                    },
                    "emptyTable": "لا توجد بيانات متاحة في الجدول"
                },
                "responsive": true,
                "pageLength": 10,
                "order": [[0, "asc"]],
                "paging": false,
                "searching": false,
                "info": false
            });

            // Auto-hide alerts after 5 seconds
            $('.alert').delay(5000).fadeOut('slow');
        });

        function showDeleteConfirmation(id, name) {
            competencyIdToDelete = id;
            document.getElementById('competencyNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const response = await fetch('@Url.Action("DeleteAjax")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${competencyIdToDelete}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });

                if (response.ok) {
                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove the row from the table immediately
                        const rowToDelete = document.getElementById(`row-${competencyIdToDelete}`);
                        if (rowToDelete) {
                            // إزالة الصف من المصفوفة الأصلية
                            const rowIndex = originalRows.indexOf(rowToDelete);
                            if (rowIndex > -1) {
                                originalRows.splice(rowIndex, 1);
                            }
                            
                            rowToDelete.remove();
                            
                            // إعادة تطبيق البحث لإعادة ترقيم الصفوف
                            filterCompetencies(liveSearchInput.value);
                            
                            // Show success message
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-success';
                            alertDiv.innerHTML = '<i class="fas fa-check-circle"></i> تم حذف الجدارة بنجاح';
                            document.querySelector('.controls').parentNode.insertBefore(alertDiv, document.querySelector('.controls').nextSibling);
                            
                            // Auto-hide the alert after 3 seconds
                            setTimeout(() => {
                                alertDiv.remove();
                            }, 3000);
                        }
                    } else {
                        alert(result.message || 'حدث خطأ أثناء حذف الجدارة');
                    }
                } else {
                    alert(`خطأ في الحذف: ${response.status}`);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف الجدارة. يرجى فحص اتصال الشبكة.');
                console.error('Error during delete:', error);
            }
        });

        // Clear filters
        function clearFilters() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
</body>
</html>