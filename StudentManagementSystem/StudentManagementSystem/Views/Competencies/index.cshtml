@model StudentManagementSystem.ViewModels.CompetenciesIndexViewModel

@{
    ViewData["Title"] = "إدارة الجدارات";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="header-section">
        <div class="container">
            <h1 class="header-title">إدارة الجدارات</h1>
        </div>
    </div>

    <div class="container">
        <!-- Filters Section -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-filter me-2"></i>تصفية النتائج</h5>
                    </div>
                    <div class="card-body">
                        <form method="get" asp-action="Index" id="filterForm">
                            <div class="row">
                                <div class="col-md-4">
                                    <label class="form-label">البحث بالاسم</label>
                                    <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                                           class="form-control" placeholder="ابحث عن جدارة...">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">القسم</label>
                                    <select name="sectionFilter" class="form-select">
                                        <option value="">جميع الأقسام</option>
                                        @if (ViewBag.Sections != null)
                                        {
                                            @foreach (var Section in ViewBag.Sections)
                                            {
                                                <option value="@Section.Value" 
                                                        @@(Model.SectionFilter.ToString() == Section.Value ? "selected" : "")>
                                                    @Section.Text
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                                @* <div class="col-md-3">
                                    <label class="form-label">الحالة</label>
                                    <select name="isActiveFilter" class="form-select">
                                        <option value="">جميع الحالات</option>
                                        <option value="true" @@(Model.IsActiveFilter == true ? "selected" : "")>نشط</option>
                                        <option value="false" @@(Model.IsActiveFilter == false ? "selected" : "")>غير نشط</option>
                                    </select>
                                </div> *@
                                <div class="col-md-2">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> بحث
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        

            <div class="controls">
              <a asp-controller="Learning_Outcome" asp-action="Create" class="btn btn-add">
             <i class="fas fa-plus-circle"></i> إضافة ناتج تعلم جديد
              </a>
              </div>
            <div class="controls">
            <a asp-action="Create" class="btn btn-add">
                <i class="fas fa-plus-circle"></i> إضافة جدارة جديدة
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="courses-table">
            <table class="table" id="competenciesTable">
                <thead>
                    <tr>
                        <th>الرقم</th>
                        <th>اسم الجدارة</th>
                        <th>المدة</th>
                        <th>القسم</th>
                        <th>الحد الأقصى للنتائج</th>
                        <th>الحالة</th>
                        <th>أنشئت بواسطة</th>
                        <th>تاريخ الإنشاء</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Competencies != null && Model.Competencies.Any())
                    {
                        int counter = ((Model.PageNumber - 1) * Model.PageSize) + 1;
                        foreach (var item in Model.Competencies)
                        {
                            <tr id="row-@item.Id">
                                <td>@counter</td>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Duration</span>
                                </td>
                                <td>@item.SectionName</td>
                                <td>
                                    <span class="badge bg-primary">@item.Max_Outcome</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>نشط
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>غير نشط
                                        </span>
                                    }
                                </td>
                                <td>@item.CreatedByName</td>
                                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info btn-sm" title="عرض التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning btn-sm" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" title="حذف"
                                                onclick="showDeleteConfirmation(@item.Id, '@item.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            counter++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="no-data">لا توجد جدارات متاحة</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalCount > Model.PageSize)
        {
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" 
                                   href="@Url.Action("Index", new { 
                                       page = i, 
                                       pageSize = Model.PageSize, 
                                       searchTerm = Model.SearchTerm, 
                                       sectionFilter = Model.SectionFilter, 
                                       isActiveFilter = Model.IsActiveFilter 
                                   })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>

    <div class="modal fade custom-modal" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف الجدارة <strong id="competencyNameToDelete"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <form id="deleteForm" asp-action="DeleteConfirmed" method="post" style="display:none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="competencyIdToDelete" />
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.21/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let competencyIdToDelete = 0;

        $(document).ready(function () {
            // Initialize DataTable
            $('#competenciesTable').DataTable({
                "language": {
                    "search": "البحث:",
                    "lengthMenu": "عرض _MENU_ عنصر في الصفحة",
                    "info": "عرض _START_ إلى _END_ من _TOTAL_ عنصر",
                    "infoEmpty": "لا توجد عناصر للعرض",
                    "infoFiltered": "(تمت تصفيته من _MAX_ عنصر إجمالي)",
                    "paginate": {
                        "first": "الأول",
                        "last": "الأخير",
                        "next": "التالي",
                        "previous": "السابق"
                    },
                    "emptyTable": "لا توجد بيانات متاحة في الجدول"
                },
                "responsive": true,
                "pageLength": 10,
                "order": [[0, "asc"]],
                "paging": false,
                "searching": false,
                "info": false
            });

            // Auto-hide alerts after 5 seconds
            $('.alert').delay(5000).fadeOut('slow');
        });

        function showDeleteConfirmation(id, name) {
            competencyIdToDelete = id;
            document.getElementById('competencyNameToDelete').innerText = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function () {
            var deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteConfirmationModal'));
            deleteModal.hide();

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const response = await fetch('@Url.Action("DeleteAjax")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${competencyIdToDelete}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });

                if (response.ok) {
                    const result = await response.json();
                    
                    if (result.success) {
                        // Remove the row from the table immediately
                        const rowToDelete = document.getElementById(`row-${competencyIdToDelete}`);
                        if (rowToDelete) {
                            rowToDelete.remove();
                            
                            // Show success message
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-success';
                            alertDiv.innerHTML = '<i class="fas fa-check-circle"></i> تم حذف الجدارة بنجاح';
                            document.querySelector('.controls').parentNode.insertBefore(alertDiv, document.querySelector('.controls').nextSibling);
                            
                            // Auto-hide the alert after 3 seconds
                            setTimeout(() => {
                                alertDiv.remove();
                            }, 3000);
                        }
                    } else {
                        alert(result.message || 'حدث خطأ أثناء حذف الجدارة');
                    }
                } else {
                    alert(`خطأ في الحذف: ${response.status}`);
                }
            } catch (error) {
                alert('حدث خطأ أثناء حذف الجدارة. يرجى فحص اتصال الشبكة.');
                console.error('Error during delete:', error);
            }
        });

        // Clear filters
        function clearFilters() {
            window.location.href = '@Url.Action("Index")';
        }
    </script>
</body>
</html>