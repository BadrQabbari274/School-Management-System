@model StudentManagementSystem.ViewModels.CompetenciesSelectionViewModel
@{
    ViewData["Title"] = "اختيار الجدارات والنواتج والأدلة";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    .selection-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .header-section {
        background: linear-gradient(135deg, #ff7b00, #ff9500);
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        text-align: center;
        position: relative;
    }

        .header-section h3 {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
        }

    .check-icon {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        width: 30px;
        height: 30px;
        background: rgba(255,255,255,0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-section {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 0 0 10px 10px;
        border: 1px solid #e9ecef;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        font-weight: 600;
        color: #333;
        font-size: 16px;
    }

        .form-label i {
            margin-left: 10px;
            color: #666;
        }

    .custom-select {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        background: white;
        font-size: 16px;
        color: #333;
        transition: all 0.3s ease;
    }

        .custom-select:focus {
            outline: none;
            border-color: #ff7b00;
            box-shadow: 0 0 0 3px rgba(255, 123, 0, 0.1);
        }

        .custom-select:disabled {
            background-color: #e9ecef;
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #ff7b00, #ff9500);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 123, 0, 0.3);
        }

    .btn-secondary-custom {
        background: white;
        color: #ff7b00;
        border: 2px solid #ff7b00;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        flex: 1;
    }

        .btn-secondary-custom:hover {
            background: #ff7b00;
            color: white;
        }

    .error-message {
        background: #fff3cd;
        color: #856404;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #ffc107;
        margin-top: 20px;
        display: flex;
        align-items: center;
    }

        .error-message i {
            margin-left: 10px;
            color: #ffc107;
        }

    .success-message {
        background: #d4edda;
        color: #155724;
        padding: 15px;
        border-radius: 8px;
        border-left: 4px solid #28a745;
        margin-top: 20px;
        display: flex;
        align-items: center;
    }

        .success-message i {
            margin-left: 10px;
            color: #28a745;
        }

    .info-section {
        background: white;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 20px;
        margin-top: 20px;
        display: none;
    }

        .info-section.show {
            display: block;
            animation: slideDown 0.3s ease;
        }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .info-card {
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
    }

        .info-card h5 {
            color: #ff7b00;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .info-card p {
            margin: 0;
            color: #666;
        }

    .loading-spinner {
        display: none;
        width: 20px;
        height: 20px;
        border: 2px solid #f3f3f3;
        border-top: 2px solid #ff7b00;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-right: 10px;
    }

    @@keyframes spin {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .rtl {
        direction: rtl;
        text-align: right;
    }

    .evidence-badge {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
        margin-right: 8px;
    }

    .evidence-practical {
        background-color: #28a745;
        color: white;
    }

    .evidence-theoretical {
        background-color: #17a2b8;
        color: white;
    }
</style>

<div class="selection-container rtl">
    <div class="header-section">
        <h3>اختيار الجدارات والنواتج والأدلة</h3>
        <div class="check-icon">
            <i class="fas fa-check"></i>
        </div>
    </div>

    <div class="form-section">
        <form id="competenciesForm" asp-action="Evaluate" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ClassId" />

            <!-- اختيار الجدارة -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-medal"></i>
                    الجدارة
                </label>
                <div style="position: relative;">
                    <span class="loading-spinner" id="competencySpinner"></span>
                    <select asp-for="SelectedCompetencyId" id="competencySelect" class="custom-select">
                        <option value="">-- اختر الجدارة --</option>
                        @foreach (var competency in Model.CompetenciesList)
                        {
                            <option value="@competency.Value">@competency.Text</option>
                        }
                    </select>
                </div>
            </div>

            <!-- اختيار نواتج التعلم -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-target"></i>
                    نواتج التعلم
                </label>
                <div style="position: relative;">
                    <span class="loading-spinner" id="outcomeSpinner"></span>
                    <select asp-for="SelectedOutcomeId" id="outcomeSelect" class="custom-select" disabled>
                        <option value="">-- اختر ناتج التعلم --</option>
                    </select>
                </div>
            </div>

            <!-- اختيار الأدلة -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-file-alt"></i>
                    الأدلة
                </label>
                <div style="position: relative;">
                    <span class="loading-spinner" id="evidenceSpinner"></span>
                    <select asp-for="SelectedEvidenceId" id="evidenceSelect" class="custom-select" disabled>
                        <option value="">-- اختر الدليل --</option>
                    </select>
                </div>
            </div>

            <!-- اختيار المحاولة -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-redo-alt"></i>
                    المحاولة
                </label>
                <select asp-for="SelectedTryId" id="trySelect" class="custom-select">
                    <option value="">-- اختر المحاولة --</option>
                    @foreach (var tryItem in Model.TrysList)
                    {
                        <option value="@tryItem.Value">@tryItem.Text</option>
                    }
                </select>
            </div>

            <div class="btn-container">
                <a href="@Url.Action("Index")" class="btn-secondary-custom">
                    <i class="fas fa-arrow-right"></i>
                    العودة للقائمة
                </a>
                <button type="submit" id="confirmSelection" class="btn-primary-custom" disabled>
                    <i class="fas fa-check"></i>
                    الانتقال للتقييم
                </button>
            </div>
        </form>

        <!-- معلومات الاختيارات -->
        <div id="selectionInfo" class="info-section">
            <div id="competencyInfo" class="info-card" style="display: none;">
                <h5><i class="fas fa-medal"></i> الجدارة المحددة</h5>
                <p id="competencyName"></p>
            </div>

            <div id="outcomeInfo" class="info-card" style="display: none;">
                <h5><i class="fas fa-target"></i> ناتج التعلم المحدد</h5>
                <p id="outcomeName"></p>
            </div>

            <div id="evidenceInfo" class="info-card" style="display: none;">
                <h5><i class="fas fa-file-alt"></i> الدليل المحدد</h5>
                <p id="evidenceName"></p>
                <span id="evidenceType" class="evidence-badge"></span>
            </div>

            <div id="tryInfo" class="info-card" style="display: none;">
                <h5><i class="fas fa-redo-alt"></i> المحاولة المحددة</h5>
                <p id="tryName"></p>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        const competencySelect = $('#competencySelect');
        const outcomeSelect = $('#outcomeSelect');
        const evidenceSelect = $('#evidenceSelect');
        const trySelect = $('#trySelect');
        const confirmButton = $('#confirmSelection');
        const selectionInfo = $('#selectionInfo');

        // عند اختيار الجدارة
        competencySelect.change(function() {
            const competencyId = $(this).val();
            const competencyName = $(this).find('option:selected').text();

            // إعادة تعيين النواتج والأدلة
            outcomeSelect.html('<option value="">-- اختر ناتج التعلم --</option>').prop('disabled', true);
            evidenceSelect.html('<option value="">-- اختر الدليل --</option>').prop('disabled', true);
            updateSubmitButton();

            // إخفاء معلومات النواتج والأدلة
            $('#outcomeInfo, #evidenceInfo').hide();

            if (competencyId) {
                // عرض معلومات الجدارة
                $('#competencyName').text(competencyName);
                $('#competencyInfo').show();
                selectionInfo.addClass('show');

                // تحميل النواتج
                $('#outcomeSpinner').show();
                $.post('@Url.Action("GetLearningOutcomes")', {
                    competencyId: competencyId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                })
                .done(function(response) {
                    if (response.success && response.data.length > 0) {
                        $.each(response.data, function(index, outcome) {
                            outcomeSelect.append($('<option>', {
                                value: outcome.id,
                                text: outcome.name
                            }));
                        });
                        outcomeSelect.prop('disabled', false);
                    } else {
                        outcomeSelect.append('<option value="">لا توجد نواتج متاحة</option>');
                    }
                })
                .fail(function() {
                    outcomeSelect.append('<option value="">خطأ في تحميل النواتج</option>');
                })
                .always(function() {
                    $('#outcomeSpinner').hide();
                });
            } else {
                $('#competencyInfo').hide();
                if (!$('#outcomeInfo').is(':visible') && !$('#evidenceInfo').is(':visible') && !$('#tryInfo').is(':visible')) {
                    selectionInfo.removeClass('show');
                }
            }
        });

        // عند اختيار ناتج التعلم
        outcomeSelect.change(function() {
            const outcomeId = $(this).val();
            const outcomeName = $(this).find('option:selected').text();

            // إعادة تعيين الأدلة
            evidenceSelect.html('<option value="">-- اختر الدليل --</option>').prop('disabled', true);
            updateSubmitButton();

            // إخفاء معلومات الأدلة
            $('#evidenceInfo').hide();

            if (outcomeId) {
                // عرض معلومات ناتج التعلم
                $('#outcomeName').text(outcomeName);
                $('#outcomeInfo').show();

                // تحميل الأدلة
                $('#evidenceSpinner').show();
                $.post('@Url.Action("GetEvidences")', {
                    outcomeId: outcomeId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                })
                .done(function(response) {
                    if (response.success && response.data.length > 0) {
                        $.each(response.data, function(index, evidence) {
                            evidenceSelect.append($('<option>', {
                                value: evidence.id,
                                text: evidence.name,
                                'data-practical': evidence.isPractical
                            }));
                        });
                        evidenceSelect.prop('disabled', false);
                    } else {
                        evidenceSelect.append('<option value="">لا توجد أدلة متاحة</option>');
                    }
                })
                .fail(function() {
                    evidenceSelect.append('<option value="">خطأ في تحميل الأدلة</option>');
                })
                .always(function() {
                    $('#evidenceSpinner').hide();
                });
            } else {
                $('#outcomeInfo').hide();
            }
        });

        // عند اختيار الدليل
        evidenceSelect.change(function() {
            const evidenceId = $(this).val();
            const evidenceName = $(this).find('option:selected').text();
            const isPractical = $(this).find('option:selected').data('practical');

            if (evidenceId) {
                // عرض معلومات الدليل
                $('#evidenceName').text(evidenceName);

                const typeSpan = $('#evidenceType');
                if (isPractical) {
                    typeSpan.text('عملي').attr('class', 'evidence-badge evidence-practical');
                } else {
                    typeSpan.text('نظري').attr('class', 'evidence-badge evidence-theoretical');
                }

                $('#evidenceInfo').show();
                updateSubmitButton();
            } else {
                $('#evidenceInfo').hide();
                updateSubmitButton();
            }
        });

        // عند اختيار المحاولة
        trySelect.change(function() {
            const tryId = $(this).val();
            const tryName = $(this).find('option:selected').text();

            if (tryId) {
                // عرض معلومات المحاولة
                $('#tryName').text(tryName);
                $('#tryInfo').show();
                selectionInfo.addClass('show');
                updateSubmitButton();
            } else {
                $('#tryInfo').hide();
                updateSubmitButton();
            }
        });

        // تحديث حالة زر الإرسال
        function updateSubmitButton() {
            const competencyId = competencySelect.val();
            const outcomeId = outcomeSelect.val();
            const evidenceId = evidenceSelect.val();
            const tryId = trySelect.val();

            if (competencyId && outcomeId && evidenceId && tryId) {
                confirmButton.prop('disabled', false);
            } else {
                confirmButton.prop('disabled', true);
            }
        }

        // التحقق من صحة البيانات قبل الإرسال
        $('#competenciesForm').submit(function(e) {
            const competencyId = competencySelect.val();
            const outcomeId = outcomeSelect.val();
            const evidenceId = evidenceSelect.val();
            const tryId = trySelect.val();

            if (!competencyId || !outcomeId || !evidenceId || !tryId) {
                e.preventDefault();
                alert('يرجى اختيار جميع البيانات المطلوبة');
                return false;
            }

            // تأكيد الانتقال للتقييم
            if (!confirm('هل أنت متأكد من الانتقال لصفحة التقييم؟')) {
                e.preventDefault();
                return false;
            }

            // عرض رسالة تحميل
            confirmButton.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> جاري التحميل...');
        });
    });
</script>