@model IEnumerable<StudentManagementSystem.Models.EmployeeTypes>

@{
    ViewData["Title"] = "أنواع الموظفين";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-users-cog me-2"></i>
                            أنواع الموظفين
                        </h4>
                        <a asp-action="Create" class="btn btn-light">
                            <i class="fas fa-plus me-1"></i>
                            إضافة نوع جديد
                        </a>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>الرقم</th>
                                            <th>اسم النوع</th>
                                            <th>تاريخ الإنشاء</th>
                                            <th>عدد الموظفين</th>
                                            <th class="text-center">العمليات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>
                                                    <strong>@item.Name</strong>
                                                </td>
                                                <td>
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @item.CreatedDate.ToString("yyyy-MM-dd")
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        @(item.Employees?.Count() ?? 0) موظف
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@item.Id"
                                                           class="btn btn-outline-info btn-sm" title="التفاصيل">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                                           class="btn btn-outline-warning btn-sm" title="تعديل">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                                <h5 class="text-muted">لا توجد أنواع موظفين مسجلة</h5>
                                <p class="text-muted">قم بإضافة نوع موظف جديد للبدء</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>
                                    إضافة نوع جديد
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>