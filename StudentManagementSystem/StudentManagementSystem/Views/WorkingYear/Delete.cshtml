@model StudentManagementSystem.Models.Working_Year

@{
    ViewData["Title"] = "حذف السنة العملية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i>حذف السنة العملية
                    </h3>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-danger rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-trash text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="fw-bold text-danger mb-3">هل أنت متأكد من حذف هذه السنة العملية؟</h4>
                        <p class="text-muted">لا يمكن التراجع عن هذا الإجراء.</p>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>تحذير:</strong> حذف هذه السنة العملية سيؤثر أيضاً على جميع السجلات المرتبطة بها.
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-briefcase me-2"></i>اسم السنة العملية
                                </label>
                                <div class="detail-value">@Model.Name</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-toggle-on me-2"></i>الحالة
                                </label>
                                <div class="detail-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>نشطة
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="fas fa-times-circle me-1"></i>غير نشطة
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ البداية
                                </label>
                                <div class="detail-value">@(Model.Start_date.ToString("MMM dd, yyyy") ?? "غير محدد")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-calendar-check me-2"></i>تاريخ النهاية
                                </label>
                                <div class="detail-value">@(Model.End_date.ToString("MMM dd, yyyy") ?? "غير محدد")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ الإنشاء
                                </label>
                                <div class="detail-value">@Model.Date.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-danger">
                                    <i class="fas fa-id-badge me-2"></i>المعرف
                                </label>
                                <div class="detail-value">@Model.Id</div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-danger btn-lg w-100 mb-3">
                                    <i class="fas fa-trash me-2"></i>نعم، احذف
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>إلغاء
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%) !important;
        border: none;
    }

    .bg-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%) !important;
    }

    .text-danger {
        color: #ff6b6b !important;
    }

    .detail-item {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        height: 100%;
        border-left: 4px solid #ff6b6b;
    }

    .detail-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: #b5b5b5;
        margin-top: 5px;
    }

    .badge {
        padding: 8px 12px;
        border-radius: 20px;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgb(181, 181, 181, 0.4);
        }
</style>
<!-- Success/Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
