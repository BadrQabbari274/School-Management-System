@model StudentManagementSystem.Models.Working_Year

@{
    ViewData["Title"] = "تفاصيل السنة العملية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagementSystem</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>تفاصيل السنة العملية - @Model.Name
                    </h3>
                </div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-id-badge me-2"></i>المعرف
                                </label>
                                <div class="detail-value">@Model.Id</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-briefcase me-2"></i>اسم السنة العملية
                                </label>
                                <div class="detail-value">@Model.Name</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ البداية
                                </label>
                                <div class="detail-value">@(Model.Start_date.ToString("MMM dd, yyyy") ?? "غير محدد")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-calendar-check me-2"></i>تاريخ النهاية
                                </label>
                                <div class="detail-value">@(Model.End_date.ToString("MMM dd, yyyy") ?? "غير محدد")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-toggle-on me-2"></i>الحالة
                                </label>
                                <div class="detail-value">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="fas fa-check-circle me-1"></i>نشطة
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="fas fa-times-circle me-1"></i>غير نشطة
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-calendar-alt me-2"></i>تاريخ الإنشاء
                                </label>
                                <div class="detail-value">@Model.Date.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="form-label fw-bold text-dark">
                                    <i class="fas fa-clock me-2"></i>وقت الإنشاء
                                </label>
                                <div class="detail-value">@Model.Date.ToString("HH:mm tt")</div>
                            </div>
                        </div>

                        @if (Model.CreatedBy_Id != null)
                        {
                            <div class="col-12">
                                <div class="detail-item">
                                    <label class="form-label fw-bold text-dark">
                                        <i class="fas fa-user me-2"></i>أنشئ بواسطة
                                    </label>
                                    <div class="detail-value">
                                        @if (Model.CreatedBy != null)
                                        {
                                            <span class="badge bg-primary fs-6">@Model.CreatedBy.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">معرف المستخدم: @Model.CreatedBy_Id</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-edit me-2"></i>تعديل
                            </a>
                        </div>
                        <div class="col-md-4">
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline w-100"
                                  onsubmit="return confirm('هل أنت متأكد من حذف هذه السنة العملية؟');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-lg w-100 mb-3">
                                    <i class="fas fa-trash me-2"></i>حذف
                                </button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg w-100 mb-3" style="height: 48px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>