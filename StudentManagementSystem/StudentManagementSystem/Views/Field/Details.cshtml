@* Views/Field/Details.cshtml *@
@@model StudentManagementSystem.Models.Field

@{
    ViewData["Title"] = "تفاصيل القسم";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/field-styles.css" rel="stylesheet" />
<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>تفاصيل القسم
                    </h3>
                </div>

                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-section mb-4">
                                <h4 class="section-title text-primary mb-3">
                                    <i class="fas fa-university me-2"></i>معلومات القسم
                                </h4>
                                <hr class="section-divider" />
                                <dl class="row">
                                    <dt class="col-sm-4 text-primary fw-bold">اسم القسم:</dt>
                                    <dd class="col-sm-8 fs-5">@Model.Name</dd>

                                    <dt class="col-sm-4 text-primary fw-bold">المرحلة الدراسية:</dt>
                                    <dd class="col-sm-8 fs-5">@Model.Grade?.Name</dd>

                                    <dt class="col-sm-4 text-primary fw-bold">الحالة:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success fs-6 px-3 py-2">
                                                <i class="fas fa-check-circle me-1"></i>نشط
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary fs-6 px-3 py-2">
                                                <i class="fas fa-times-circle me-1"></i>غير نشط
                                            </span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4 text-primary fw-bold">تاريخ الإنشاء:</dt>
                                    <dd class="col-sm-8 fs-5">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="employees-section mb-4">
                                <h4 class="section-title text-primary mb-3">
                                    <i class="fas fa-users me-2"></i>الموظفون المعينون
                                </h4>
                                <hr class="section-divider" />
                                @if (Model.FieldEmployees != null && Model.FieldEmployees.Any())
                                {
                                    <div class="employee-list">
                                        @foreach (var userField in Model.FieldEmployees)
                                        {
                                            <div class="employee-card mb-3 p-3 rounded shadow-sm">
                                                <div class="d-flex w-100 justify-content-between align-items-center">
                                                    <div>
                                                        <h6 class="mb-1 text-primary fw-bold">
                                                            <i class="fas fa-user me-2"></i>@userField.User?.Name
                                                        </h6>
                                                        <p class="mb-0 text-muted">
                                                            <i class="fas fa-envelope me-2"></i>@userField.User?.Email
                                                        </p>
                                                    </div>
                                                    <form asp-action="RemoveEmployee" method="post" class="d-inline">
                                                        <input type="hidden" name="fieldId" value="@Model.Id" />
                                                        <input type="hidden" name="employeeId" value="@userField.UserId" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                onclick="return confirm('هل تريد إزالة هذا الموظف؟');">
                                                            <i class="fas fa-times me-1"></i>إزالة
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="empty-state text-center p-4">
                                        <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                                        <p class="text-muted fs-5">لم يتم تعيين موظفين لهذا القسم بعد</p>
                                    </div>
                                }
                                <div class="mt-3">
                                    <a class="btn btn-primary w-100" href="@Url.Action("AssignEmployee", new { id = Model.Id })">
                                        <i class="fas fa-user-plus me-2"></i>تعيين موظف جديد
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
        border: none;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #fd7e14;
            box-shadow: 0 0 0 0.2rem rgba(253, 126, 20, 0.25);
        }

    .btn-primary {
        background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(253, 126, 20, 0.4);
        }

    .btn-outline-secondary {
        border-radius: 10px;
        padding: 12px 24px;
        transition: all 0.3s ease;
    }

    .form-check-input:checked {
        background-color: #fd7e14;
        border-color: #fd7e14;
    }

    .text-primary {
        color: #fd7e14 !important;
    }

    .form-label {
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .section-title {
        font-size: 1.4rem;
        font-weight: 600;
    }

    .section-divider {
        border: 2px solid #fd7e14;
        opacity: 0.3;
        margin-bottom: 20px;
    }

    .employee-card {
        border: 2px solid #fd7e14;
        border-radius: 10px;
        background: #fff9f5;
        transition: all 0.3s ease;
    }

        .employee-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(253, 126, 20, 0.2);
        }

    .empty-state {
        background: #f8f9fa;
        border-radius: 10px;
        border: 2px dashed #dee2e6;
    }

    .actions-section {
        border-top: 2px solid #fd7e14 !important;
        opacity: 0.3;
    }

    .badge.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }

    dt {
        margin-bottom: 10px;
    }

    dd {
        margin-bottom: 15px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
