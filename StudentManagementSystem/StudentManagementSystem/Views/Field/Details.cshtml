@* Views/Field/Details.cshtml *@
@model StudentManagementSystem.Models.Field

@{
    ViewData["Title"] = "تفاصيل القسم";
}

<div class="orange-theme">
    <div class="orange-header">
        <h1>تفاصيل القسم</h1>
    </div>

    <div class="orange-card">
        <div class="row">
            <div class="col-md-6">
                <h4 style="color: #FF9800;">معلومات القسم</h4>
                <hr style="border-color: #FFB74D;" />

                <dl class="row">
                    <dt class="col-sm-4" style="color: #FF9800;">اسم القسم:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4" style="color: #FF9800;">المرحلة الدراسية:</dt>
                    <dd class="col-sm-8">@Model.Grade?.Name</dd>

           

                    <dt class="col-sm-4" style="color: #FF9800;">الحالة:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="orange-badge">نشط</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">غير نشط</span>
                        }
                    </dd>

                    <dt class="col-sm-4" style="color: #FF9800;">تاريخ الإنشاء:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h4 style="color: #FF9800;">الموظفون المعينون</h4>
                <hr style="border-color: #FFB74D;" />

                @if (Model.FieldEmployees != null && Model.FieldEmployees.Any())
                {
                    <div class="list-group">
                        @foreach (var userField in Model.FieldEmployees)
                        {
                            <div class="list-group-item" style="border: 1px solid #FFB74D; margin-bottom: 5px; border-radius: 5px;">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@userField.User?.Name</h6>
                                    <form asp-action="RemoveEmployee" method="post" style="display: inline;">
                                        <input type="hidden" name="fieldId" value="@Model.Id" />
                                        <input type="hidden" name="employeeId" value="@userField.UserId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('هل تريد إزالة هذا الموظف؟');">
                                            <i class="fas fa-times"></i> إزالة
                                        </button>
                                    </form>
                                </div>
                                <p class="mb-1">@userField.User?.Email</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">لم يتم تعيين موظفين لهذا القسم بعد</p>
                }

                <div class="mt-3">
                    <a class="orange-btn" href="@Url.Action("AssignEmployee", new { id = Model.Id })">
                        <i class="fas fa-user-plus"></i> تعيين موظف جديد
                    </a>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a class="orange-btn" href="@Url.Action("Edit", new { id = Model.Id })">
                <i class="fas fa-edit"></i> تحرير
            </a>
            <a class="orange-btn" href="@Url.Action("Index")">
                <i class="fas fa-arrow-left"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>
