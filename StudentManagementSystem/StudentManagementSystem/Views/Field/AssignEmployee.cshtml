@* Views/Field/AssignEmployee.cshtml *@
@{
    ViewData["Title"] = "تعيين موظف";
}

<div class="orange-theme">
    <div class="orange-header">
        <h1>تعيين موظف للقسم</h1>
    </div>

    <div class="orange-card">
        <h4 style="color: #FF9800;">القسم: @ViewBag.Field.Name</h4>
        <hr style="border-color: #FFB74D;" />

        <form asp-action="AssignEmployee" method="post">
            <div class="form-group">
                <label for="employeeId" class="control-label" style="color: #FF9800; font-weight: bold;">اختر الموظف</label>
                <select name="employeeId" class="form-control" asp-items="ViewBag.Employees" style="border: 2px solid #FFB74D; border-radius: 5px;">
                    <option value="">-- اختر الموظف --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="تعيين الموظف" class="orange-btn" style="padding: 10px 20px;" />
                <a class="orange-btn" href="@Url.Action("Details", new { id = ViewBag.Field.Id })" style="padding: 10px 20px;">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}