@* Views/Field/Index.cshtml *@
@model IEnumerable<StudentManagementSystem.Models.Field>

@{
    ViewData["Title"] = "الأقسام";
}

<style>
    .orange-theme {
        background: linear-gradient(135deg, #FFF8E1 0%, #FFE0B2 100%);
        border: 1px solid #FFB74D;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(255, 183, 77, 0.1);
    }

    .orange-header {
        background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
        color: white;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(255, 152, 0, 0.3);
    }

    .orange-btn {
        background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin: 2px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 4px rgba(255, 152, 0, 0.2);
    }

        .orange-btn:hover {
            background: linear-gradient(135deg, #F57C00 0%, #FF9800 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 152, 0, 0.3);
            color: white;
            text-decoration: none;
        }

    .orange-table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .orange-table th {
            background: linear-gradient(135deg, #FFB74D 0%, #FFCC02 100%);
            color: #333;
            font-weight: bold;
            padding: 12px;
            text-align: right;
            border-bottom: 2px solid #FF9800;
        }

        .orange-table td {
            padding: 12px;
            border-bottom: 1px solid #FFE0B2;
            text-align: right;
        }

        .orange-table tr:hover {
            background-color: #FFF8E1;
        }

    .orange-card {
        background: white;
        border: 2px solid #FFB74D;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 4px 6px rgba(255, 183, 77, 0.1);
    }

    .orange-badge {
        background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: bold;
    }

    .page-title {
        color: #FF9800;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        font-size: 28px;
    }
</style>

<div class="orange-theme">
    <div class="orange-header">
        <h1>إدارة الأقسام</h1>
    </div>

    <div class="mb-3">
        <a class="orange-btn" href="@Url.Action("Create")">
            <i class="fas fa-plus"></i> إضافة قسم جديد
        </a>
    </div>

    @if (Model.Any())
    {
        <table class="table orange-table">
            <thead>
                <tr>
                    <th>اسم القسم</th>
                    <th>المرحلة الدراسية</th>
                    <th>الحالة</th>
                    <th>تاريخ الإنشاء</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var field in Model)
                {
                    <tr>
                        <td>@field.Name</td>
                        <td>@field.Grade?.Name</td>
                        <td>
                            @if (field.IsActive)
                            {
                                <span class="orange-badge">نشط</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">غير نشط</span>
                            }
                        </td>
                        <td>@field.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a class="orange-btn" href="@Url.Action("Details", new { id = field.Id })">
                                <i class="fas fa-eye"></i> عرض
                            </a>
                            <a class="orange-btn" href="@Url.Action("Edit", new { id = field.Id })">
                                <i class="fas fa-edit"></i> تحرير
                            </a>
                            <a class="orange-btn" href="@Url.Action("Delete", new { id = field.Id })">
                                <i class="fas fa-trash"></i> حذف
                            </a>
                            <a class="orange-btn" href="@Url.Action("AssignEmployee", new { id = field.Id })">
                                <i class="fas fa-user-plus"></i> تعيين موظف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="orange-card text-center">
            <h3>لا توجد أقسام مضافة حالياً</h3>
            <p>يمكنك إضافة قسم جديد من الزر أعلاه</p>
        </div>
    }
</div>
