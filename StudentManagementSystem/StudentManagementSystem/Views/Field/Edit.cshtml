@* Views/Field/Edit.cshtml *@
@model StudentManagementSystem.Models.Field

@{
    ViewData["Title"] = "تحرير القسم";
}

<div class="orange-theme">
    <div class="orange-header">
        <h1>تحرير القسم</h1>
    </div>

    <form asp-action="Edit" method="post">
        <div class="orange-card">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color: #FF9800; font-weight: bold;">اسم القسم</label>
                <input asp-for="Name" class="form-control" style="border: 2px solid #FFB74D; border-radius: 5px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GradeId" class="control-label" style="color: #FF9800; font-weight: bold;">المرحلة الدراسية</label>
                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId" style="border: 2px solid #FFB74D; border-radius: 5px;">
                    <option value="">-- اختر المرحلة الدراسية --</option>
                </select>
                <span asp-validation-for="GradeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive" style="color: #FF9800; font-weight: bold;">
                        نشط
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ التغييرات" class="orange-btn" style="padding: 10px 20px;" />
                <a class="orange-btn" href="@Url.Action("Index")" style="padding: 10px 20px;">إلغاء</a>
            </div>
        </div>
    </form>
</div>