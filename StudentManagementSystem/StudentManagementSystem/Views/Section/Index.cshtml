@model IEnumerable<StudentManagementSystem.Models.Section>

@{
    ViewData["Title"] = "إدارة الشعب";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-sitemap mr-2"></i>
                        إدارة الشعب
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus mr-2"></i>
                        إضافة شعبة جديدة
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle mr-2"></i>
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="sectionsTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>الرقم</th>
                                        <th>اسم الشعبة</th>
                                        <th>القسم</th>
                                        <th>أنشئت بواسطة</th>
                                        <th>تاريخ الإنشاء</th>
                                        <th>العمليات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int counter = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>
                                                <strong>@item.Name_Of_Section</strong>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">
                                                    @(item.Department.Name)
                                                </span>
                                            </td>
                                            <td>
                                                @(item.CreatedBy?.Name ?? "غير محدد")
                                            </td>
                                            <td>
                                                @item.Date.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-info btn-sm" title="عرض التفاصيل">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-warning btn-sm" title="تعديل">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <!-- زر الحذف مع confirm بسيط -->
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;"
                                                          onsubmit="return confirm('هل أنت متأكد من حذف الشعبة: @item.Name_Of_Section ؟')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger btn-sm" title="حذف">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        counter++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-sitemap fa-5x text-muted mb-3"></i>
                            <h4 class="text-muted">لا توجد شعب مضافة</h4>
                            <p class="text-muted">ابدأ بإضافة شعبة جديدة لعرضها هنا</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>
                                إضافة شعبة جديدة
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#sectionsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json"
                },
                "responsive": true,
                "pageLength": 10,
                "order": [[0, "asc"]]
            });

            // Auto-hide alerts after 5 seconds
            $('.alert').delay(5000).fadeOut('slow');
        });
    </script>
}