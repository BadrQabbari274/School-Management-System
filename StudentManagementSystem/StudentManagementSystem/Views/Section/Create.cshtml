@* Views/Section/Create.cshtml *@
@model StudentManagementSystem.Models.Section

@{
    ViewData["Title"] = "إضافة شعبة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/field-styles.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="fas fa-plus-circle me-2"></i>إضافة شعبة جديدة
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" id="createSectionForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Department_Id" class="form-label fw-bold text-primary">
                                <i class="fas fa-building me-2"></i>القسم
                            </label>
                            <select asp-for="Department_Id" class="form-control form-control-lg" asp-items="ViewBag.Department_Id">
                                <option value="">-- اختر القسم --</option>
                            </select>
                            <span asp-validation-for="Department_Id" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Name_Of_Section" class="form-label fw-bold text-primary">
                                <i class="fas fa-sitemap me-2"></i>اسم الشعبة
                            </label>
                            <input asp-for="Name_Of_Section" class="form-control form-control-lg"
                                   placeholder="أدخل اسم الشعبة" />
                            <span asp-validation-for="Name_Of_Section" class="text-danger"></span>
                            <small id="charCounter" class="form-text text-muted"></small>
                        </div>

                        <div class="mb-4">
                            <div class="card bg-light border-0">
                                <div class="card-body p-3">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="fas fa-info-circle me-2"></i>معلومات إضافية
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-12 mb-2">
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>
                                                أنشئت بواسطة: <strong>@ViewBag.CurrentUserName</strong>
                                            </small>
                                        </div>
                                        <div class="col-md-12">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                تاريخ الإنشاء: <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>حفظ الشعبة
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
